<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <include
        android:id="@+id/title_include"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rlBottom"
        android:layout_below="@+id/title_include"
        android:fillViewport="true"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_caotan_chose"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wushiwu"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/shop_title_40"
                    android:layout_gravity="center_vertical"
                    android:text="报名项目"
                    android:textColor="@color/_9999" />

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvContent"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/wushiwu"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:text="学易车"
                    android:textColor="@color/_3333"
                    android:textSize="@dimen/shisi" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:background="@color/_f2f3f5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/wushiwu"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/shop_title_40"
                    android:layout_gravity="center_vertical"
                    android:text="姓名"

                    android:textColor="@color/_9999" />

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/wushiwu"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:text="学易车"
                    android:textColor="@color/_3333"
                    android:textSize="@dimen/shisi" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:background="@color/_f2f3f5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/wushiwu"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/shop_title_40"
                    android:layout_gravity="center_vertical"

                    android:text="身份证号"
                    android:textColor="@color/_9999" />

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvIdCard"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/wushiwu"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:text="学易车"
                    android:textColor="@color/_3333"
                    android:textSize="@dimen/shisi" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:background="@color/_f2f3f5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/wushiwu"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/shop_title_40"
                    android:layout_gravity="center_vertical"

                    android:text="联系电话"
                    android:textColor="@color/_9999" />

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/wushiwu"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:text="学易车"
                    android:textColor="@color/_3333"
                    android:textSize="@dimen/shisi" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:background="@color/_f2f3f5" />

            <LinearLayout
                android:id="@+id/llYaoQingPhone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wushiwu"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/shop_title_40"
                    android:layout_gravity="center_vertical"

                    android:text="邀请人电话"
                    android:textColor="@color/_9999" />

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvYaoQingPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/wushiwu"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:text="学易车"
                    android:textColor="@color/_3333"
                    android:textSize="@dimen/shisi" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:background="@color/_f2f3f5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/wushiwu"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/shop_title_40"
                    android:layout_weight="1"
                    android:text="支付方式："
                    android:textColor="@color/_9999" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_wechat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:checked="true"
                        android:drawableLeft="@drawable/driver_school_select"
                        android:gravity="center_vertical"
                        android:text="  微信"
                        android:textColor="#999999"
                        android:textSize="@dimen/shisan" />

                    <RadioButton
                        android:id="@+id/rb_alipay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:button="@null"

                        android:drawableLeft="@drawable/driver_school_select"
                        android:gravity="center_vertical"
                        android:text="  支付宝"
                        android:textColor="#999999"
                        android:textSize="@dimen/shisan" />

                </RadioGroup>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:background="@color/_f2f3f5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/wushiwu"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/shop_title_40"
                    android:layout_gravity="center_vertical"

                    android:text="费用金额"
                    android:textColor="@color/_9999" />

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvYuanJia"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/wushiwu"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:text="￥0"
                    android:textColor="@color/_3333"
                    android:textSize="@dimen/shisi" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:background="@color/_f2f3f5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/wushiwu"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/shop_title_40"
                    android:layout_gravity="center_vertical"

                    android:text="优惠金额"
                    android:textColor="@color/_9999" />

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvYouHui"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/wushiwu"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:text="￥0"
                    android:textColor="@color/_3333"
                    android:textSize="@dimen/shisi" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:background="@color/_f2f3f5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/wushiwu"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:layout_marginBottom="@dimen/sishi"
                android:orientation="horizontal">

                <TextView
                    style="@style/shop_title_40"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/_9999"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvEndMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/wushiwu"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:text="合计：￥0"
                    android:textColor="@color/_3333"
                    android:textSize="@dimen/shisi" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rlBottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sishijiu"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#f2f3f5" />

        <TextView
            android:id="@+id/tvPayMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/all_16dp"
            android:text="￥0"
            android:textColor="#ff5000"
            android:textSize="@dimen/shiba" />

        <Button
            android:id="@+id/btPay"
            android:layout_width="@dimen/jiushi"
            android:layout_height="@dimen/sanshi"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/shiwu"
            android:background="@drawable/cheng_yuan_bg"
            android:text="立即支付"
            android:textColor="@color/color_white"
            android:textSize="@dimen/shiwu" />
    </RelativeLayout>
</RelativeLayout>