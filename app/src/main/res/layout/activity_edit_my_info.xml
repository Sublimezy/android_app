<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".mine.activities.bianji.EditMySelfInfoActivity">

    <include layout="@layout/new_title_bar" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="20dp"
        android:id="@+id/recycler_mianguan"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:overScrollMode="never"
        android:scrollbars="none" />

    <TextView

        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ershiwu"
        android:text="昵称"
        android:textColor="@color/test_color"
        android:textSize="@dimen/text_fifteensp" />

    <EditText
        android:id="@+id/et_nackname"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="@dimen/shiwu"
        android:background="@null"
        android:textCursorDrawable="@drawable/edittext_cursor"
        android:hint="请输入昵称"
        android:textColor="@color/_4f4f4f"
        android:textColorHint="@color/_cccccc"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        style="@style/_cccline"
        android:layout_marginLeft="@dimen/all_zouyou"
        android:layout_marginRight="@dimen/all_zouyou" />

    <Button
        android:id="@+id/bt_baocun"
        android:layout_width="150dp"
        android:layout_gravity="center_horizontal"
        android:textSize="25sp"
        android:textColor="@color/color_white"
        android:text="保存"
        android:gravity="center"
        android:layout_marginTop="@dimen/yibaidp"
        android:layout_marginBottom="@dimen/yibaidp"
        android:background="@drawable/button_shape"
        android:layout_height="@dimen/all_include_height" />

</LinearLayout>