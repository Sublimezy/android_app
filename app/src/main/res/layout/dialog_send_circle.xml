<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="50dp"
    android:background="#50000000">

    <RelativeLayout
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="221dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/white_bg_two"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="49dp">

            <ImageView
                android:id="@+id/iv_tuwen"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/pic_btn_send_circle_tuwen"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_tuwen"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:text="图文"
                android:textColor="#ff343434"
                android:textSize="13dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="216dp"
            android:layout_marginTop="49dp">

            <ImageView
                android:id="@+id/iv_shipin"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/pic_btn_send_circle_shipin"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_shipin"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:text="小视频"
                android:textColor="#ff343434"
                android:textSize="13dp"
                android:textStyle="bold" />
        </RelativeLayout>


        <ImageView
            android:id="@+id/iv_exit"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp"
            android:padding="15dp"
            android:src="@mipmap/pic_send_ciecle_cancel"
            android:textColor="@color/test_color" />
    </RelativeLayout>

</RelativeLayout>