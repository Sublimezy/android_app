<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:orientation="vertical">

        <include
            android:id="@+id/title_include"
            layout="@layout/indent_tijiao_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="true"
            android:fitsSystemWindows="true" />

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rlBottom"
            android:layout_below="@+id/title_include"
            android:fillViewport="true"
            android:scrollbars="none">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/shiwu"
                    android:layout_marginTop="@dimen/shisan"
                    android:layout_marginRight="@dimen/shiwu"
                    android:background="@drawable/yinying_bg_shape"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/shiwu"
                        android:layout_marginTop="@dimen/ershiwu"
                        android:layout_marginRight="@dimen/shiwu"
                        android:text="欢迎沓沓同学 这是您来到学易车的第11天"
                        android:textColor="@color/_3333"
                        android:textSize="@dimen/shisan" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sanshiwu"
                        android:layout_marginBottom="@dimen/ershiba"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvSelfOrder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/new_wode_yuyue"
                            android:drawablePadding="@dimen/shiyi"
                            android:gravity="center_horizontal"
                            android:text="我的预约"
                            android:textColor="@color/_666"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/tvStudyRecord"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/new_study_record"
                            android:drawablePadding="@dimen/shiyi"
                            android:gravity="center_horizontal"
                            android:text="学习记录"
                            android:textColor="@color/_666"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/tvKeFu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/new_kefu"
                            android:drawablePadding="@dimen/shiyi"
                            android:gravity="center_horizontal"
                            android:text="联系客服"
                            android:textColor="@color/_666"
                            android:textSize="12dp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/all_16dp"
                    android:layout_marginTop="@dimen/ershiwu"
                    android:gravity="center_horizontal"
                    android:text="学习进程"
                    android:textColor="@color/_3333"
                    android:textSize="@dimen/shiwu" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/all_16dp"
                    android:layout_marginTop="@dimen/sanshi"
                    android:layout_marginRight="@dimen/shiwu"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/new_kemu"
                        android:drawablePadding="@dimen/slide_top_and_left_two"
                        android:gravity="center_vertical"
                        android:text="科目一"
                        android:textColor="@color/_3333"
                        android:textSize="@dimen/shiwu" />

                    <TextView
                        android:id="@+id/tvOneNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="（0/3）"
                        android:textColor="@color/colorOrange"
                        android:textSize="@dimen/shiwu" />

                    <TextView
                        android:id="@+id/tvOneState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="学习中"
                        android:textColor="@color/colorOrange"
                        android:textSize="@dimen/shiwu"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/ivOneState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:src="@mipmap/new_suotou" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/all_16dp"
                    android:layout_marginTop="@dimen/ershiyi"
                    android:layout_marginRight="@dimen/all_16dp"
                    android:background="@color/_f2f3f5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/all_16dp"
                    android:layout_marginTop="@dimen/ershiyi"
                    android:layout_marginRight="@dimen/shiwu"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/new_kemu"
                        android:drawablePadding="@dimen/slide_top_and_left_two"
                        android:gravity="center_vertical"
                        android:text="科目二"
                        android:textColor="@color/_3333"
                        android:textSize="@dimen/shiwu" />


                    <TextView
                        android:id="@+id/tvTwoState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="学习中"
                        android:textColor="@color/colorOrange"
                        android:textSize="@dimen/shiwu"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/ivTwoState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:src="@mipmap/new_suotou" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sanshijiu"
                    android:layout_marginRight="@dimen/shiwu">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:divider="#00000000"
                        android:listSelector="@android:color/transparent"
                        android:overScrollMode="never"
                        android:scrollbars="none" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/all_16dp"
                    android:layout_marginTop="@dimen/ershi"
                    android:layout_marginRight="@dimen/all_16dp"
                    android:background="@color/_f2f3f5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sanshijiu"
                    android:layout_marginTop="@dimen/ershi"
                    android:layout_marginRight="@dimen/shiwu"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="预约考试"
                        android:textColor="@color/_3333"
                        android:textSize="@dimen/shiwu" />


                    <TextView
                        android:id="@+id/tvTwoTestState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="学习中"
                        android:textColor="@color/colorOrange"
                        android:textSize="@dimen/shiwu"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/ivTwoTestState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:src="@mipmap/new_suotou" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/all_16dp"
                    android:layout_marginTop="@dimen/ershi"
                    android:layout_marginRight="@dimen/all_16dp"
                    android:background="@color/_f2f3f5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/all_16dp"
                    android:layout_marginTop="@dimen/ershiyi"
                    android:layout_marginRight="@dimen/shiwu"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/new_kemu"
                        android:drawablePadding="@dimen/slide_top_and_left_two"
                        android:gravity="center_vertical"
                        android:text="科目三"
                        android:textColor="@color/_3333"
                        android:textSize="@dimen/shiwu" />


                    <TextView
                        android:id="@+id/tvThreeState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="学习中"
                        android:textColor="@color/colorOrange"
                        android:textSize="@dimen/shiwu"
                        android:visibility="gone" />

                    <ImageView
android:id="@+id/ivThreeState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:src="@mipmap/new_suotou" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sanshijiu"
                    android:layout_marginRight="@dimen/shiwu">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:divider="#00000000"
                        android:listSelector="@android:color/transparent"
                        android:overScrollMode="never"
                        android:scrollbars="none" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/all_16dp"
                    android:layout_marginTop="@dimen/ershi"
                    android:layout_marginRight="@dimen/all_16dp"
                    android:background="@color/_f2f3f5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sanshijiu"
                    android:layout_marginTop="@dimen/ershiyi"
                    android:layout_marginRight="@dimen/shiwu"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="预约考试"
                        android:textColor="@color/_3333"
                        android:textSize="@dimen/shiwu" />


                    <TextView
                        android:id="@+id/tvThreeTestState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="学习中"
                        android:textColor="@color/colorOrange"
                        android:textSize="@dimen/shiwu"
                        android:visibility="gone" />

                    <ImageView
android:id="@+id/ivThreeTestState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:src="@mipmap/new_suotou" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/all_16dp"
                    android:layout_marginTop="@dimen/ershi"
                    android:layout_marginRight="@dimen/all_16dp"
                    android:background="@color/_f2f3f5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/all_16dp"
                    android:layout_marginTop="@dimen/ershiyi"
                    android:layout_marginRight="@dimen/shiwu"
                    android:layout_marginBottom="@dimen/sishi"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/new_kemu"
                        android:drawablePadding="@dimen/slide_top_and_left_two"
                        android:gravity="center_vertical"
                        android:text="科目四"
                        android:textColor="@color/_3333"
                        android:textSize="@dimen/shiwu" />

                    <TextView
                        android:id="@+id/tvFourNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="（0/3）"
                        android:textColor="@color/colorOrange"
                        android:textSize="@dimen/shiwu" />
                    <TextView
                        android:id="@+id/tvFourState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="学习中"
                        android:textColor="@color/colorOrange"
                        android:textSize="@dimen/shiwu"
                        android:visibility="gone" />

                    <ImageView
android:id="@+id/ivFourState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:src="@mipmap/new_suotou" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/rlBottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sishijiu"
            android:layout_alignParentBottom="true">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f2f3f5" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/shiwu"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvAllState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="科目一"
                    android:textColor="#ff5000"
                    android:textSize="@dimen/shiba" />

                <TextView
                    android:id="@+id/tvAllStateContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/jiu"
                    android:text="费用合计"
                    android:textColor="@color/_9999"
                    android:textSize="@dimen/slide_top_and_left_two" />
            </LinearLayout>

            <Button
                android:id="@+id/btNextStudy"
                android:layout_width="@dimen/jiushi"
                android:layout_height="@dimen/sanshi"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/shiwu"
                android:background="@drawable/cheng_yuan_bg"
                android:text="继续学习"
                android:textColor="@color/color_white"
                android:textSize="@dimen/shiwu" />
        </RelativeLayout>
    </RelativeLayout>