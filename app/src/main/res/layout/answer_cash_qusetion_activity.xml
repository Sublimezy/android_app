<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#f9463c"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/iv_back"
            android:src="@mipmap/test_back"
            android:layout_marginTop="30dp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.xueyiche.zjyk.xueyiche.main.view.NoScrollViewPager
            android:id="@+id/vp_wincash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/moni_test_one_include" />
        <TextView
            android:id="@+id/tv_title_time"
            android:layout_width="wrap_content"
            android:text="4:44"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="@mipmap/countdown_bg"
            android:textSize="16sp"
            android:textColor="#fff"
            android:layout_height="wrap_content" />
    </FrameLayout>


</LinearLayout>