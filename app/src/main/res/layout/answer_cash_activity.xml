<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9463c"
    android:orientation="vertical">

    <include
        android:id="@+id/test_moni_activity_include"
        layout="@layout/win_money_title_include"
        android:layout_width="match_parent"
        android:layout_height="64dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/win_money_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/sanshi"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/ll_head"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="100dp"
                    android:src="@mipmap/win_money_xiexina" />
                <LinearLayout
                    android:id="@+id/ll_head"
                    android:layout_width="277dp"
                    android:layout_height="240dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bg_yuanjiao"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.xueyiche.zjyk.jiakao.mine.view.CircleImageView
                            android:id="@+id/test_head"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginTop="20dp"
                            android:src="@mipmap/mo_ni_head" />

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:text="驾考APP"
                            android:textColor="@color/_4f4f4f"
                            android:textSize="@dimen/text_seveneensp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="最快时间"
                                android:textColor="@color/test_color"
                                android:textSize="@dimen/text_fifteensp" />

                            <TextView
                                android:id="@+id/test_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/ershi"
                                android:text="--'--"
                                android:textColor="#f9463c"
                                android:textSize="@dimen/text_fifteensp" />
                        </LinearLayout>
                        <View
                            android:layout_width="1px"
                            android:layout_marginLeft="@dimen/sanshi"
                            android:layout_marginRight="@dimen/sanshi"
                            android:layout_height="@dimen/all_include_height"
                            android:background="#f9463c"
                             />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="最高分数"
                                android:textColor="@color/test_color"
                                android:textSize="@dimen/text_fifteensp" />

                            <TextView
                                android:id="@+id/test_grade"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/ershi"
                                android:text="---分"
                                android:textColor="#f9463c"
                                android:textSize="@dimen/text_fifteensp" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_below="@+id/ll_head"
                    android:layout_marginTop="15dp"
                    android:layout_width="277dp"
                    android:orientation="vertical"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/start_test"
                            android:layout_width="wrap_content"
                            android:src="@mipmap/start_test"
                            android:layout_height="wrap_content" />


                        <ImageView
                            android:id="@+id/iv_paihangbang"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right"
                            android:layout_width="wrap_content"
                            android:src="@mipmap/paihangbang"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/iv_kaojiazhao"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:src="@mipmap/iv_laojiazhao"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>


</LinearLayout>