<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="356dp"
        android:layout_height="101dp"
        android:background="@mipmap/pic_coach_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.xueyiche.zjyk.xueyiche.mine.view.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="22dp"
            android:src="@mipmap/about_xueyiche"></com.xueyiche.zjyk.xueyiche.mine.view.CircleImageView>

        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/coach_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张雨生教练"
                android:textColor="#ff333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_jia_ling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="5年教龄"
                android:textColor="#ff666666"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="19dp">


            <TextView
                android:id="@+id/tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="男  48岁  "
                android:textColor="#ff666666"
                android:textSize="12sp" />

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>