<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_white"
    android:orientation="vertical">

    <include
        android:id="@+id/title_include"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rlBottom"
        android:layout_below="@+id/title_include"
        android:background="@android:color/white"
        app:srlEnableAutoLoadMore="false"
        app:srlPrimaryColor="@color/color_white">

        <com.scwang.smart.refresh.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlAccentColor="@color/colorOrange"
            app:srlDrawableProgress="@drawable/animation_loading_frame"
            app:srlPrimaryColor="@color/color_white" />

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:fillViewport="true"
            android:scrollbars="none">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/shiwu"
                    android:layout_marginTop="@dimen/shisan"
                    android:layout_marginRight="@dimen/shiwu"
                    android:background="@drawable/yinying_bg_shape"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/hellworld"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/shiwu"
                        android:layout_marginTop="@dimen/ershiwu"
                        android:layout_marginRight="@dimen/shiwu"
                        android:text="欢迎--同学 这是您来到学易车的第0天"
                        android:textColor="@color/_3333"
                        android:textSize="@dimen/shisan" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sanshiwu"
                        android:layout_marginBottom="@dimen/ershiba"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvSelfOrder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/new_wode_yuyue"
                            android:drawablePadding="@dimen/shiyi"
                            android:gravity="center_horizontal"
                            android:text="我的预约"
                            android:textColor="@color/_666"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/tvStudyRecord"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/new_study_record"
                            android:drawablePadding="@dimen/shiyi"
                            android:gravity="center_horizontal"
                            android:text="学习记录"
                            android:textColor="@color/_666"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/tvKeFu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/new_kefu"
                            android:drawablePadding="@dimen/shiyi"
                            android:gravity="center_horizontal"
                            android:text="联系客服"
                            android:textColor="@color/_666"
                            android:textSize="12dp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/all_16dp"
                    android:layout_marginTop="@dimen/ershiwu"
                    android:gravity="center_horizontal"
                    android:text="学习进程"
                    android:textColor="@color/_3333"
                    android:textSize="@dimen/shiwu" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:divider="#00000000"
                        android:listSelector="@android:color/transparent"
                        android:overScrollMode="never"
                        android:scrollbars="none" />
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>


    <RelativeLayout
        android:id="@+id/rlBottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sishijiu"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#f2f3f5" />

        <LinearLayout
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/shiwu"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAllState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="科目一"
                android:textColor="#ff5000"
                android:textSize="@dimen/shiba" />

            <TextView
                android:id="@+id/tvAllStateContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/jiu"
                android:text="费用合计"
                android:textColor="@color/_9999"
                android:textSize="@dimen/slide_top_and_left_two" />
        </LinearLayout>

        <Button
            android:id="@+id/btNextStudy"
            android:layout_width="@dimen/jiushi"
            android:layout_height="@dimen/sanshi"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/shiwu"
            android:background="@drawable/cheng_yuan_bg"
            android:text="继续学习"
            android:textColor="@color/color_white"
            android:textSize="@dimen/shiwu" />
    </RelativeLayout>
</RelativeLayout>