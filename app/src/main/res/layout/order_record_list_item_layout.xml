<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/llAll"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/all_16dp"
        android:layout_marginTop="@dimen/ershi"
        android:layout_marginRight="@dimen/shiwu"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/new_kemu"
            android:drawablePadding="@dimen/slide_top_and_left_two"
            android:gravity="center_vertical"
            android:textColor="@color/_3333"
            android:textSize="@dimen/shiwu" />
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/_9999"
            android:textSize="12dp"
            />
    </LinearLayout>
<RelativeLayout
    android:id="@+id/rlName"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/sishi"
    android:layout_marginTop="@dimen/shisan"
    android:layout_marginRight="@dimen/all_16dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:textColor="@color/_666"
        android:textSize="@dimen/shisan" />
    <TextView
        android:id="@+id/tvCallPhone"
        android:layout_width="65dp"
        android:layout_height="23dp"
        android:gravity="center"
        android:text="联系教练"
        android:layout_centerVertical="true"
        android:background="@drawable/orange_xian_shape"
        android:layout_alignParentRight="true"
        android:textColor="@color/colorOrange"
        android:textSize="@dimen/shiyi" />
</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/sishi"
        android:layout_marginTop="@dimen/shiwu"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/all_16dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:textColor="@color/_666"
            android:textSize="@dimen/shisan" />

        <TextView
            android:id="@+id/tvTwo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/shisan" />
        <TextView
            android:id="@+id/tvThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/_666"
            android:textSize="@dimen/shisan" />
    </LinearLayout>
        <TextView
            android:id="@+id/tvTimeList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/sishi"
            android:layout_marginTop="@dimen/shiwu"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/all_16dp"
            android:layout_centerVertical="true"
            android:textColor="@color/_666"
            android:textSize="@dimen/shisan" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/all_16dp"
        android:layout_marginTop="@dimen/shiwu"
        android:layout_marginRight="@dimen/all_16dp"
        android:background="@color/_f2f3f5" />
</LinearLayout>