<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">


    <include
        android:id="@+id/title"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />

    <com.xueyiche.zjyk.xueyiche.homepage.view.ObservableScrollView
        android:id="@+id/sv_indent_dentails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="@null"
        android:scrollbars="none"
        android:background="@color/color_white">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/all_zouyou"
                android:layout_marginRight="@dimen/all_zouyou"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_fanxian_states"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sanshi"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/text_fifteensp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/liushi"
                    android:layout_marginTop="@dimen/shiwu"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_school_head"
                        android:layout_width="@dimen/bashi"
                        android:layout_height="@dimen/liushi"
                        android:scaleType="fitXY"
                        android:src="@mipmap/lunbotu" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="@dimen/slide_top_and_left_two"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/iv_indent_content_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:src="@mipmap/indent_content_phone" />
                        <TextView
                            android:id="@+id/tv_name"
                            style="@style/shop_title_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="哈尔滨市南岗区征"
                            android:textColor="@color/_4f4f4f"
                            android:textSize="@dimen/text_eightteensp" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/yipx"
                    android:layout_marginBottom="@dimen/ershiwu"
                    android:layout_marginTop="@dimen/sanshi"
                    android:background="@color/_cccccc" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/shop_title_40"
                        android:text="订单编号"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_indent_number"
                        style="@style/shop_title_40"
                        android:layout_alignParentRight="true"
                        android:textStyle="bold" />
                </RelativeLayout>


                <View
                    android:id="@+id/xian_list_up"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/yipx"
                    android:layout_marginTop="@dimen/ershiwu"
                    android:background="@color/_cccccc" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ershiwu">

                        <TextView
                            style="@style/shop_title_40"
                            android:text="租车/天" />

                        <TextView
                            android:id="@+id/tv_rent_day"
                            style="@style/shop_title_40"
                            android:layout_alignParentRight="true"
                            android:text=""
                           />
                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:id="@+id/xian_list_bot"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/yipx"
                    android:layout_marginTop="@dimen/ershiwu"
                    android:background="@color/_cccccc" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ershiwu">

                        <TextView
                            style="@style/shop_title_40"
                            android:text="开始时间" />

                        <TextView
                            android:id="@+id/tv_start_time"
                            style="@style/shop_title_40"
                            android:layout_alignParentRight="true"
                            android:text="" />
                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/yipx"
                    android:layout_marginTop="@dimen/ershiwu"
                    android:background="@color/_cccccc" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ershiwu">

                        <TextView
                            style="@style/shop_title_40"
                            android:text="结束时间" />

                        <TextView
                            android:id="@+id/tv_end_time"
                            style="@style/shop_title_40"
                            android:layout_alignParentRight="true"
                            android:text="" />
                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/yipx"
                    android:layout_marginTop="@dimen/ershiwu"
                    android:background="@color/_cccccc" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ershiwu">

                    <TextView
                        style="@style/shop_title_40"
                        android:text="取车地点" />

                    <TextView
                        android:id="@+id/tv_get_location"
                        style="@style/shop_title_40"
                        android:lines="1"
                        android:maxLength="10"
                        android:ellipsize="end"
                        android:layout_alignParentRight="true"
                        android:drawableRight="@mipmap/indent_content_daohang"
                        android:text="" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/yipx"
                    android:layout_marginBottom="@dimen/ershiwu"
                    android:layout_marginTop="@dimen/ershiwu"
                    android:background="@color/_cccccc" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/shop_title_40"
                        android:text="还车地点" />

                    <TextView
                        android:id="@+id/tv_huan_location"
                        style="@style/shop_title_40"
                        android:lines="1"
                        android:maxLength="10"
                        android:ellipsize="end"
                        android:layout_alignParentRight="true"
                        android:drawableRight="@mipmap/indent_content_daohang"
                        android:text="" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/yipx"
                    android:layout_marginBottom="@dimen/ershiwu"
                    android:layout_marginTop="@dimen/ershiwu"
                    android:background="@color/_cccccc" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/shop_title_40"
                        android:text="实付金额" />

                    <TextView
                        android:id="@+id/tv_pay_money"
                        style="@style/shop_title_40"
                        android:textColor="@color/colorOrange"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/yipx"
                    android:layout_marginBottom="@dimen/ershiwu"
                    android:layout_marginTop="@dimen/ershiwu"
                    android:background="@color/_cccccc" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/shop_title_40"
                        android:text="订单时间" />

                    <TextView
                        android:id="@+id/tv_indent_system_time"
                        style="@style/shop_title_40"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/yipx"
                    android:layout_marginBottom="@dimen/ershiwu"
                    android:layout_marginTop="@dimen/ershiwu"
                    android:background="@color/_cccccc" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/shop_title_40"
                        android:text="支付状态" />

                    <TextView
                        android:id="@+id/tv_indent_content_style_zhifu"
                        style="@style/shop_title_40"
                        android:layout_alignParentRight="true"
                        android:text="已支付" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/yipx"
                    android:layout_marginBottom="@dimen/ershiwu"
                    android:layout_marginTop="@dimen/ershiwu"
                    android:background="@color/_cccccc" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_caidan_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#50000000"
                android:clickable="true"
                android:visibility="gone" />
        </FrameLayout>
    </com.xueyiche.zjyk.xueyiche.homepage.view.ObservableScrollView>
</LinearLayout>