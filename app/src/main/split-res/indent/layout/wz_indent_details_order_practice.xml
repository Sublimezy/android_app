<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/indent_details_include"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />

    <ScrollView
        android:layout_below="@+id/indent_details_include"
        android:layout_above="@+id/view_line"
        android:layout_width="match_parent"
        android:background="@color/color_white"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/color_white"
            android:paddingLeft="@dimen/all_zouyou"
            android:paddingRight="@dimen/all_zouyou">

            <TextView
                android:id="@+id/tv_indent_pay_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sanshi"
                android:text="待支付"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/text_fifteensp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/shiwu">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开始时间"
                        android:textColor="@color/_666"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/shiwu"
                        android:text="--:--"
                        android:textColor="@color/_9999"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_total_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="共0小时"
                    android:textColor="@color/colorOrange"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="结束时间"
                        android:textColor="@color/_666"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/shiwu"
                        android:text="--:--"
                        android:textColor="@color/_9999"
                        android:textSize="@dimen/side_letter_bar_letter_size" />
                </LinearLayout>
            </RelativeLayout>

            <View
                style="@style/_cccline"
                android:layout_marginTop="@dimen/all_include_height" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="价格"
                        style="@style/indent_order_practice_title" />

                    <TextView
                        android:id="@+id/tv_indent_carstyle"
                        android:visibility="gone"
                        style="@style/indent_order_practice_title"
                        android:layout_alignParentRight="true"
                        android:text="奥迪"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/shiwu"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="单价预算："
                        android:textSize="@dimen/text_fifteensp"
                        android:textColor="@color/_666" />
                    <TextView
                        android:id="@+id/tv_indent_danjia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="@dimen/text_fifteensp"
                        android:textColor="@color/colorOrange" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元"
                        android:textSize="@dimen/text_fifteensp"
                        android:textColor="@color/_666" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="共计："
                        android:layout_marginLeft="@dimen/shiwu"
                        android:textSize="@dimen/text_fifteensp"
                        android:textColor="@color/_666" />
                    <TextView
                        android:id="@+id/tv_indent_total_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="@dimen/text_fifteensp"
                        android:textColor="@color/colorOrange" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元"
                        android:textSize="@dimen/text_fifteensp"
                        android:textColor="@color/_666" />
                </LinearLayout>
            </LinearLayout>
            <View
                style="@style/_cccline"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    style="@style/indent_order_practice_title"
                    android:text="上车地址"/>
                <TextView
                    android:id="@+id/tv_indent_jie_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/shiwu"
                    android:textSize="@dimen/text_fifteensp"
                    android:textColor="@color/_666" />
            </LinearLayout>
            <View
                style="@style/_cccline"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    style="@style/indent_order_practice_title"
                    android:text="下车地址"/>
                <TextView
                    android:id="@+id/tv_indent_song_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/shiwu"
                    android:textSize="@dimen/text_fifteensp"
                    android:textColor="@color/_666" />
            </LinearLayout>
            <View
                style="@style/_cccline"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    style="@style/indent_order_practice_title"
                    android:text="意向练车项目"/>
                <TextView
                    android:id="@+id/tv_indent_will_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/shiwu"
                    android:textSize="@dimen/text_fifteensp"
                    android:textColor="@color/_666" />
            </LinearLayout>
            <View
                style="@style/_cccline"/>
            <TextView
                android:id="@+id/tv_indent_beizhu"
                android:textColor="@color/_9999"
                android:paddingBottom="@dimen/ershi"
                android:paddingLeft="@dimen/slide_top_and_left_two"
                android:paddingTop="@dimen/slide_top_and_left_two"
                android:textSize="@dimen/text_fifteensp"
                android:layout_marginTop="@dimen/shiwu"
                android:background="#f5f5f5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/all_include_height"
                android:text="订单信息"
                android:textColor="@color/_666"
                android:textSize="25sp"
                android:textStyle="bold" />
            <View
                android:layout_marginTop="@dimen/ershiwu"
                style="@style/_cccline"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="@dimen/liushiba">
                <TextView
                    style="@style/indent_order_practice_title"
                    android:text="订单编号"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_indent_number"
                    style="@style/indent_order_practice_title"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View
                style="@style/_cccline"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="@dimen/liushiba">
                <TextView
                    style="@style/indent_order_practice_title"
                    android:text="订单时间"/>
                <TextView
                    android:id="@+id/tv_indent_date"
                    style="@style/indent_order_practice_title"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View
                style="@style/_cccline"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="@dimen/liushiba">
                <TextView
                    style="@style/indent_order_practice_title"
                    android:text="支付状态"/>
                <TextView
                    android:id="@+id/tv_indent_state"
                    style="@style/indent_order_practice_title"
                    android:text="已支付"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View
                android:layout_marginBottom="@dimen/sanshi"
                style="@style/_cccline"/>
        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/view_line"
        style="@style/_cccline"
        android:layout_above="@+id/rl_bottom"
        />

    <LinearLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sishiba"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/isGone"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="@dimen/sishiba">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:gravity="center_vertical"
                android:text="总金额:"
                android:textColor="@color/title_one"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/tv_pay_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/title_one"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:gravity="center_vertical"
                android:text="元"
                android:textColor="@color/title_one"
                android:textSize="12sp" />

        </LinearLayout>

        <Button
            android:id="@+id/bt_indent_content_quxiao"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#cccccc"
            android:text="取消预约"
            android:textStyle="bold"
            android:textColor="@color/color_white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bt_indent_content_pay"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/colorOrange"
            android:text="立即支付"
            android:textStyle="bold"
            android:textColor="@color/color_white"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>