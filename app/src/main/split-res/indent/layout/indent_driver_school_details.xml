<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">


    <include
        android:id="@+id/title"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />

    <com.xueyiche.zjyk.xueyiche.homepage.view.ObservableScrollView
        android:id="@+id/sv_indent_dentails"
        android:layout_width="match_parent"
        android:listSelector="@null"
        android:scrollbars="none"
        android:layout_height="match_parent"
        android:background="@color/color_white">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/all_zouyou"
                android:layout_marginRight="@dimen/all_zouyou"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_fanxian_states"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text=""
                    android:textColor="@color/colorOrange"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_school_head"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/lunbotu" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/slide_top_and_left_two"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_shop_name"
                                style="@style/shop_title_1"
                                android:maxEms="6"
                                android:maxLines="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="金鹏驾校" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <ImageView
                                android:id="@+id/iv_indent_content_daohang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:src="@mipmap/indent_content_daohang" />

                            <ImageView
                                android:id="@+id/iv_indent_content_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:src="@mipmap/indent_content_phone" />
                        </LinearLayout>


                        <TextView
                            android:id="@+id/tv_shop_place"
                            style="@style/shop_title_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:maxLines="1"
                            android:text="哈尔滨市南岗区征友路543号"
                            android:textColor="@color/test_color"
                            android:textScaleX="1"
                            android:textSize="@dimen/text_fourteensp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/yipx"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/_cccccc" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/shop_title_40"
                        android:text="订单编号"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_indent_number"
                        style="@style/shop_title_40"
                        android:layout_alignParentRight="true"
                        android:text="E123456789"
                        android:textStyle="bold" />
                </RelativeLayout>


                <View
                    android:id="@+id/xian_list_up"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/yipx"
                    android:layout_marginTop="@dimen/ershiwu"
                    android:background="@color/_cccccc" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <com.xueyiche.zjyk.xueyiche.homepage.view.AdListView
                        android:id="@+id/lv_shangpin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@null"
                        android:listSelector="@color/color_white"
                        android:scrollbars="none" />


                    <TextView
                        android:id="@+id/tv_indent_content_style_fuwu"
                        style="@style/shop_title_40"
                        android:layout_marginTop="@dimen/ershiwu"
                        android:text="一站式C1驾驶证" />
                </LinearLayout>

                <View
                    android:id="@+id/xian_list_bot"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/yipx"
                    android:layout_marginTop="25dp"
                    android:background="@color/_cccccc" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/ershiwu"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/shop_title_40"
                        android:text="产品金额" />

                    <TextView
                        android:id="@+id/tv_indent_content_money"
                        style="@style/shop_title_40"
                        android:layout_alignParentRight="true"
                        android:text=""
                        android:textColor="@color/colorOrange" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/yipx"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="25dp"
                    android:background="@color/_cccccc" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/shop_title_40"
                        android:text="实际付款" />

                    <TextView
                        android:id="@+id/tv_indent_content_money_shifu"
                        style="@style/shop_title_40"
                        android:layout_alignParentRight="true"
                        android:text=""
                        android:textColor="@color/colorOrange" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/yipx"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="25dp"
                    android:background="@color/_cccccc" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/shop_title_40"
                        android:text="订单时间" />

                    <TextView
                        android:id="@+id/tv_indent_time"
                        style="@style/shop_title_40"
                        android:layout_alignParentRight="true"
                        android:text="2018.01.03 14:43" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/yipx"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="25dp"
                    android:background="@color/_cccccc" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/shop_title_40"
                        android:text="支付状态" />

                    <TextView
                        android:id="@+id/tv_indent_content_style_zhifu"
                        style="@style/shop_title_40"
                        android:layout_alignParentRight="true"
                        android:text="已支付" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/yipx"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="25dp"
                    android:background="@color/_cccccc" />

                <TextView
                    style="@style/shop_title_40"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    android:text="订单二维码"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:text="让门店扫一扫，节约您和门店的对接时间"
                    android:textColor="@color/_666"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/tv_erweima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textColor="@color/_666"
                    android:textSize="15sp" />
                <ImageView
                    android:id="@+id/iv_ew_caode"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="50dp"
                    android:src="@mipmap/lunbotu" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_caidan_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#50000000"
                android:clickable="true"
                android:visibility="gone" />
        </FrameLayout>
    </com.xueyiche.zjyk.xueyiche.homepage.view.ObservableScrollView>
</LinearLayout>