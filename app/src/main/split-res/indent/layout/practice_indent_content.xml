<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical"
   >

    <include
        android:id="@+id/indent_details_include"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:paddingLeft="@dimen/all_zouyou"
                android:paddingRight="@dimen/all_zouyou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_driver_head"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/lunbotu" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/slide_top_and_left_two"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_driver_name"
                            style="@style/shop_title_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />
                        <ImageView
                            android:id="@+id/iv_indent_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/iv_order_dervers_phone"
                            android:textColor="@color/_666"
                            android:textSize="@dimen/text_fifteensp" />

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/iv_indent_content_daohang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/indent_content_daohang"
                            android:text="接单：1次"
                            android:textColor="@color/_666"
                            android:textSize="@dimen/text_fifteensp" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_driver_miaoshu"
                        style="@style/shop_title_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:maxLines="1"
                        android:textColor="@color/test_color"
                        android:textScaleX="1"
                        android:textSize="@dimen/text_eightteensp" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:paddingLeft="@dimen/all_zouyou"
                android:paddingRight="@dimen/all_zouyou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/all_include_height">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开始时间"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:textColor="@color/_666"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/shiwu"
                        android:text="--:--"
                        android:textColor="@color/_9999"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_total_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="----"
                    android:textColor="@color/colorOrange"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="结束时间"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/_666"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/shiwu"
                        android:text="--:--"
                        android:textColor="@color/_9999"
                        android:textSize="@dimen/side_letter_bar_letter_size" />
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/seek_bar_time"
                    android:layout_marginTop="@dimen/all_include_height"
                    android:layout_width="wrap_content"
                    android:textColor="@color/_666"
                    android:textSize="@dimen/side_letter_bar_letter_size"
                    android:text="0分钟"
                    android:gravity="center_horizontal"
                    android:paddingTop="7dp"
                    android:background="@mipmap/seek_text_bg"
                    android:layout_height="wrap_content" />
                <SeekBar
                    android:id="@+id/ribbon_speed_seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="@dimen/slide_top_and_left_two"
                    android:minHeight="@dimen/slide_top_and_left_two"
                    android:splitTrack="false"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="@dimen/all_zouyou"
                    android:layout_marginRight="@dimen/all_zouyou"
                    android:progressDrawable="@drawable/numberseekbar_background"
                    android:thumb="@mipmap/seek_bar_car" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_kaishi_time"
                    android:text="距离训练：2:00"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/_666"
                    android:textSize="@dimen/text_fifteensp"
                    android:layout_marginTop="@dimen/all_include_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="教练未准时到场 延误时间5:00"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/_666"
                    android:textSize="@dimen/text_fifteensp"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/ershiwu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <Button
                android:id="@+id/bt_queren"
                android:layout_width="280dp"
                android:gravity="center"
                android:text="确认完成"
                android:textSize="@dimen/text_ershisp"
                android:textColor="@color/color_white"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/sishi"
                android:background="@color/colorOrange"
                android:layout_height="@dimen/all_include_height" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>