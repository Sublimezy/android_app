                android:src="@mipmap/iv_practice_quxiao" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_finish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="horizontal"
        >

            <ImageView
                android:id="@+id/iv_practice_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/all_16dp"
                android:src="@mipmap/iv_practice_finish" />

            <ImageView
                android:id="@+id/iv_practice_pingjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/shiwu"
                android:layout_toLeftOf="@+id/iv_practice_finish"
                android:src="@mipmap/iv_practice_pingjia"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_time_go"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_time_go"
                android:layout_width="@dimen/yibaiyi"
                android:layout_height="@dimen/sishi"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/all_16dp"
                android:background="@drawable/time_go_shape"
                android:gravity="center"
                android:src="@mipmap/iv_practice_finish"
                android:text="12:00:00"
                android:textColor="#A2A2A2"
                android:textSize="@dimen/text_eightteensp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/shiwu"
                android:layout_toLeftOf="@+id/tv_time_go"
                android:text="距离结束还有："
                android:textColor="#A2A2A2"
                android:textSize="@dimen/text_eightteensp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
