<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:windowTranslucentNavigation="false">

    <RelativeLayout
        android:id="@+id/home_title"
        android:layout_width="match_parent"
        android:layout_marginTop="17dp"
        android:background="@color/color_white"
        android:layout_height="56dp"
        android:clickable="true">


        <RadioGroup
            android:id="@+id/rg_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="60dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/rl_zixun"
                android:layout_width="36dp"
                android:layout_height="24dp">

                <RadioButton
                    android:id="@+id/rb_shequ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center_horizontal"
                    android:text="资讯"
                    android:textColor="#ff000000"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/iv_zixun"
                    android:layout_width="7dp"
                    android:layout_height="6dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/pic_home_rb" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_shipin"
                android:layout_marginLeft="30dp"
                android:layout_width="36dp"
                android:layout_height="24dp">

                <RadioButton
                    android:layout_centerInParent="true"
                    android:id="@+id/rb_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:gravity="center_horizontal"
                    android:text="视频"
                    android:textColor="#ff000000"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/iv_shipin"
                    android:layout_width="7dp"
                    android:layout_height="6dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/pic_home_rb" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_wenda"
                android:layout_marginLeft="30dp"
                android:layout_width="36dp"
                android:layout_height="24dp">

                <RadioButton
                    android:id="@+id/rb_wenda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_centerInParent="true"
                    android:button="@null"
                    android:gravity="center_horizontal"
                    android:text="问答"
                    android:textColor="#ff000000"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/iv_wenda"
                    android:layout_width="7dp"
                    android:layout_height="6dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/pic_home_rb" />
            </RelativeLayout>
        </RadioGroup>
    </RelativeLayout>
    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#E3E3E3" />

