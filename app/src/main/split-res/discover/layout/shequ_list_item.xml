<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_video_item"
        android:layout_width="match_parent"
        android:layout_toLeftOf="@+id/rivSheQuPicture"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSheQuTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/slide_top_and_left"
            android:maxLines="1"
            android:text="设置UITextView的行间距有多种方法 一、设置静态textview行间距 UITextView不需要输入直接显示非常简单 NSMutableParagraphStyle这个类,这是设置段落..."
            android:textColor="#161616"
            android:textSize="14dp" />
        <com.xueyiche.zjyk.xueyiche.driverschool.view.RoundImageView
            android:id="@+id/rivSheQuPicture"
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/lunbotu" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="·"
                    android:id="@+id/aa"
                    android:textColor="#9E9E9E"

                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/tvSheQuName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="来源于360浏览器"
                    android:layout_marginLeft="4dp"
                    android:textColor="#9E9E9E"
                    android:textSize="12sp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvSheQuNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/six"
                    android:text="103评论"
                    android:textColor="#9E9E9E"
                    android:textSize="12sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/six"
                    android:text="|"
                    android:textColor="#9E9E9E"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/tvZanNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/six"
                    android:text="---点赞"
                    android:textColor="#9E9E9E"
                    android:textSize="12sp"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="#e0e0e0"
            android:layout_marginTop="19dp"
            android:layout_height="1dp">
        </View>
    </LinearLayout>
</RelativeLayout>