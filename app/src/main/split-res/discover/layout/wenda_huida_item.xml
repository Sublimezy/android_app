<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <com.xueyiche.zjyk.xueyiche.mine.view.CircleImageView
            android:id="@+id/cv_head"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="19dp"
            android:src="@mipmap/mine_head" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="24dp"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学易车小编"
                    android:id="@+id/tv_huida_name"
                    android:textColor="#ff161616"
                    android:textSize="14sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123"
                    android:id="@+id/tv_dz_number_pl"
                    android:drawablePadding="2dp"
                    android:drawableLeft="@mipmap/wd_dz"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:textColor="#ff999999"
                    android:textSize="12sp"
                    />
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_huida_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="朋友们，我可离合器掌握不住怎么办？才练了一天倒库，我们身不会开车总共学车学了一天半，半天溜车，那一天练倒库始终觉得自己不行，都有点想放弃了，又不想半途而废。求大神指点"
                android:textColor="#333333"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-11-22 00:02"
                android:id="@+id/tv_huida_time"
                android:layout_marginTop="15dp"
                android:textColor="#ff9a9a9a"
                android:textSize="12sp"
                />
        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="#E3E3E3"></View>
</LinearLayout>