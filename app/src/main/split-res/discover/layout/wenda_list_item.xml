<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_video_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/all_16dp"
        android:gravity="center_vertical">

        <com.xueyiche.zjyk.xueyiche.mine.view.CircleImageView
            android:id="@+id/wd_head"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/mine_head" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:text="学易车"
            android:textColor="#ff333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_release_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="刚刚"
            android:textColor="#ff9a9a9a"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_wenda_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:maxLines="2"
        android:text="综合续航达950公里，东风风光E3增程版怎么样？"
        android:textColor="#ff161616"
        android:textSize="16sp" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:id="@+id/ll_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        >

            <com.xueyiche.zjyk.xueyiche.driverschool.view.RoundImageView
                android:id="@+id/iv_one"
                android:layout_width="132dp"
                android:layout_height="102dp"
                android:layout_marginRight="@dimen/slide_top_and_left"
                android:scaleType="centerCrop"
                android:src="@mipmap/lunbotu" />

            <!--        <com.xueyiche.zjyk.xueyiche.driverschool.view.RoundImageView-->
            <!--            android:id="@+id/iv_two"-->
            <!--            android:layout_marginLeft="@dimen/slide_top_and_left"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="78dp"-->
            <!--            android:layout_weight="1"-->
            <!--            android:scaleType="centerCrop"-->
            <!--            android:src="@mipmap/lunbotu" />-->

            <!--        <com.xueyiche.zjyk.xueyiche.driverschool.view.RoundImageView-->
            <!--            android:id="@+id/iv_three"-->
            <!--            android:layout_marginLeft="@dimen/slide_top_and_left_two"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="78dp"-->
            <!--            android:layout_weight="1"-->
            <!--            android:scaleType="centerCrop"-->
            <!--            android:src="@mipmap/lunbotu" />-->
        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_alignBottom="@id/ll_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/iv_wd_zan"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@mipmap/dianzan" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_wenda_dianzan_number"
                android:layout_width="8dp"
                android:layout_height="19dp"
                android:layout_marginLeft="3dp"
                android:text="0"
                android:textColor="#ff666666"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/tv_dianzan"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点赞"
                android:textColor="#ff505050"
                android:textSize="12dp"
                />
            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/pinglun" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_wenda_pinglun_number"
                android:layout_width="8dp"
                android:layout_height="19dp"
                android:layout_marginLeft="3dp"
                android:text="0"
                android:textColor="#ff666666"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_pinglun"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评论"
                android:textColor="#ff505050"
                android:textSize="12dp"
                />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="14dp"
        android:background="#ededed">

    </View>

</LinearLayout>