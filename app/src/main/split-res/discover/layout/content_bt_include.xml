<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View style="@style/_cccline" />

        <RelativeLayout
            android:id="@+id/rl_bottom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color_white">

            <TextView
                android:id="@+id/tv_gv_content"
                android:layout_width="130dp"
                android:drawableLeft="@mipmap/pl_pic"
                android:layout_height="36dp"
                android:layout_marginBottom="@dimen/slide_top_and_left_two"
                android:layout_marginLeft="@dimen/all_zouyou"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@+id/iv_back"
                android:background="@drawable/text_yuanjiao"
                android:gravity="center_vertical"
                android:drawablePadding="4dp"
                android:hint="说点什么..."
                android:paddingLeft="@dimen/all_zouyou"
                android:textColor="@color/_666"
                android:textSize="@dimen/text_fifteensp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/tv_gv_content">

                <TextView
                    android:id="@+id/tv_dz_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="---"
                    android:layout_gravity="center_vertical"
                    android:drawablePadding="7dp"
                    android:drawableLeft="@mipmap/dz_bt"
                    android:layout_alignParentRight="true"
                    />

                <TextView
                    android:id="@+id/tv_sc_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="---"
                    android:drawablePadding="7dp"
                    android:layout_marginLeft="18dp"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@mipmap/sc_bt"
                    android:layout_alignParentRight="true"
                    />

                <TextView
                    android:id="@+id/tv_fx_number"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:text="---"
                    android:visibility="gone"
                    android:drawablePadding="7dp"
                    android:drawableLeft="@mipmap/fenxiang_bt"
                    android:layout_alignParentRight="true"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>