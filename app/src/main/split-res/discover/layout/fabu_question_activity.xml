<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <include
        android:id="@+id/question_fabu_include"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="34dp"
                android:background="@null"
                android:hint="请输入问题~"
                android:textColor="#999999" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="#E3E3E3"></View>

            <EditText
                android:id="@+id/et_question_miaoshu"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:gravity="start"
                android:hint="问题简述~"
                android:textColor="#999999" />

            <RelativeLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/iv_pic_one"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/wd_fabu_pic" />

                <ImageView
                    android:id="@+id/iv_pic_one_qx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="72dp"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/wd_fabu_quxiao" />





                <ImageView
                    android:id="@+id/iv_pic_two"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/wd_fabu_pic" />
                <ImageView
                    android:id="@+id/iv_pic_two_qx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="182dp"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/wd_fabu_quxiao" />
                <ImageView
                    android:id="@+id/iv_pic_three"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/wd_fabu_pic" />
                <ImageView
                    android:id="@+id/iv_pic_three_qx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="292dp"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/wd_fabu_quxiao" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="50dp"
                android:background="#E3E3E3"></View>

            <TextView
                android:id="@+id/tv_fabu"
                android:layout_width="270dp"
                android:layout_height="@dimen/sishiwu"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:background="@drawable/wd_fb_bg"
                android:gravity="center"
                android:text="发布"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_ershisp" />
        </LinearLayout>


    </ScrollView>

</LinearLayout>