<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <include
        android:id="@+id/shop_top_include"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sanshier"
        android:layout_marginTop="@dimen/sanshiba"
        android:text="欢迎来到驾考APP"
        android:textColor="@color/_4f4f4f"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/etLoginPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sanshier"
        android:layout_marginTop="@dimen/all_include_height"
        android:layout_marginRight="@dimen/sanshier"
        android:background="@null"

        android:hint="请输入您的邮箱"
        android:textColor="@color/_4f4f4f"
        android:textColorHint="@color/_cccccc"
        android:textCursorDrawable="@drawable/edittext_cursor"
        android:textSize="@dimen/text_eightteensp" />
    <!--        android:inputType="number"-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/sanshier"
        android:layout_marginTop="@dimen/six"
        android:layout_marginRight="@dimen/sanshier"
        android:background="@color/_cccccc" />


    <Button
        android:id="@+id/btNextStep"
        android:layout_width="280dp"
        android:layout_height="@dimen/all_include_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="140sp"
        android:background="@drawable/button_shape"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/color_white"
        android:textSize="25sp" />


</LinearLayout>