<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/sanshi"
        android:text="服务协议和隐私政策"
        android:id="@+id/tv_title"
        android:textColor="@color/_4f4f4f"
        android:textSize="@dimen/text_seveneensp" />


    <TextView
        android:id="@+id/tv_tishi_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/test_color"
        android:textSize="@dimen/text_fifteensp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sishiwu"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_quxiao"
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/sishiwu"
            android:layout_weight="1"
            android:background="@drawable/youshape_hui"
            android:gravity="center"
            android:text="暂不使用"
            android:textColor="@color/test_color"
            android:textSize="@dimen/text_seveneensp" />

        <TextView
            android:id="@+id/tv_queren"
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/sishiwu"
            android:layout_weight="1"
            android:background="@drawable/zuoshape_huang"
            android:gravity="center"
            android:text="同意"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_seveneensp" />

    </LinearLayout>
</LinearLayout>