<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/sanshi"
        android:text="服务协议和隐私政策"
        android:id="@+id/tv_title"
        android:textColor="@color/_4f4f4f"
        android:textSize="@dimen/text_seveneensp" />
<ScrollView
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_tishi_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/test_color"
            android:textSize="@dimen/text_fifteensp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="在使用过程中，为了向您提供更好的服务，我们需要获取以下权限和信息，系统将会已弹窗的提示征求您的授权，请您特别关注："
            android:textColor="@color/test_color"
            android:textSize="@dimen/text_fifteensp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/dp_15"
            android:text="地理位置"
            android:textColor="#000000"
            android:textSize="@dimen/text_fifteensp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="在基于内容版本限制等需要，需要确认用户位置，使用代驾板块需要获取用户地理位置，在行驶过程中也会获取用户的地理位置，为了能后获取到用户是否在安全行驶中，经授权，我们才会获取地理位置，注意的是，在某些板块，如果拒绝授权会影响到正常使用。"
            android:textColor="@color/test_color"
            android:textSize="@dimen/text_fifteensp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/dp_15"
            android:text="麦克风"
            android:textColor="#000000"
            android:textSize="@dimen/text_fifteensp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="经授权，我们会在您使用代驾的过程中使用您的麦克风权限。"
            android:textColor="@color/test_color"
            android:textSize="@dimen/text_fifteensp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/dp_15"
            android:text="相机"
            android:textColor="#000000"
            android:textSize="@dimen/text_fifteensp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="经授权，我们会在拍照等对应服务的时候使用您的相机功能。"
            android:textColor="@color/test_color"
            android:textSize="@dimen/text_fifteensp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/dp_15"
            android:text="设备信息"
            android:textColor="#000000"
            android:textSize="@dimen/text_fifteensp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="经授权，我们会收集您的个人设备信息以保障系统运行和您的账号以及交易安全。"
            android:textColor="@color/test_color"
            android:textSize="@dimen/text_fifteensp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/dp_20"
            android:text="我们将通过《隐私政策》向您说明："
            android:textColor="@color/test_color"
            android:textSize="@dimen/text_fifteensp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/dp_4"
            android:text="1、为向您提供代驾，浏览视频，发布内容，支付等相关服务，我们会根据您使用的服务的具体功能，收集必要的用户个人信息。\n2、我们会采用先进的安全措施保护您的信息安全。\n3、未经您同意，我们不会与第三方共享或对外提供您的个人信息。\n4、我们为您提供账号注销的渠道来保护您的个人信息。"
            android:textColor="@color/test_color"
            android:textSize="@dimen/text_fifteensp" />
    </LinearLayout>
</ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sishiwu"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_quxiao"
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/sishiwu"
            android:layout_weight="1"
            android:background="@drawable/youshape_hui"
            android:gravity="center"
            android:text="暂不使用"
            android:textColor="@color/test_color"
            android:textSize="@dimen/text_seveneensp" />

        <TextView
            android:id="@+id/tv_queren"
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/sishiwu"
            android:layout_weight="1"
            android:background="@drawable/zuoshape_huang"
            android:gravity="center"
            android:text="同意"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_seveneensp" />

    </LinearLayout>
</LinearLayout>