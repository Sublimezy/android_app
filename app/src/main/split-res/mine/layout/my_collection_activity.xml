<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/rg_collection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/mine_selector_back"
            android:paddingBottom="18dp"
            android:paddingTop="18dp"
            >

            <RadioButton
                android:id="@+id/rb_driver_school"
                style="@style/MenuTab"
                android:checked="true"
                android:drawablePadding="@dimen/ba"
                android:text="驾校联盟"
                android:textColor="@drawable/mine_selector_text"
                android:textSize="18sp" />
            <View
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:layout_marginTop="7dp"
                android:background="@color/_cccccc" />
            <RadioButton
                android:id="@+id/rb_driver"
                style="@style/MenuTab"
                android:drawablePadding="@dimen/ba"
                android:text="有证练车"
                android:textColor="@drawable/mine_selector_text"
                android:textSize="18sp" />
            <View
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:layout_marginTop="7dp"
                android:background="@color/_cccccc" />
            <RadioButton
                android:id="@+id/rb_shop"
                style="@style/MenuTab"
                android:drawablePadding="@dimen/ba"
                android:text="一车生活"
                android:textColor="@drawable/mine_selector_text"
                android:textSize="18sp" />
            <View
                android:id="@+id/view_line"
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:layout_marginTop="7dp"
                android:background="@color/_cccccc" />
            <RadioButton
                android:id="@+id/rb_usdecar"
                style="@style/MenuTab"
                android:drawablePadding="@dimen/ba"
                android:text="二手车"
                android:textColor="@drawable/mine_selector_text"
                android:textSize="18sp" />
        </RadioGroup>

        <com.xueyiche.zjyk.xueyiche.main.view.NoScrollViewPager
            android:id="@+id/vp_collection"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>