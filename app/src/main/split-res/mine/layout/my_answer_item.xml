<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/shiwu"
        android:layout_marginRight="@dimen/shiwu"
        android:layout_marginTop="@dimen/shisan"
        android:background="@drawable/bg_yuanjiao"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_wenda_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/shisi"
            android:layout_marginTop="@dimen/ershi"
            android:layout_marginRight="@dimen/shiqi"
            android:text="“如何顺利通过科二考试”"
            android:textColor="#4A4A4A"
            android:textStyle="bold"
            android:textSize="@dimen/text_sixteensp" />

        <TextView
            android:id="@+id/tv_wenda_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/shisi"
            android:layout_marginRight="@dimen/shiqi"
            android:layout_marginTop="@dimen/ba"
            android:lineSpacingExtra="5dp"
            android:text="“如何顺利通过科二考试”,通过率比较低 好 奥迪厉害房间很舒服控件蓝思科技福克斯个复活卡萨飞机撒fj"
            android:textColor="@color/_3333"
            android:textSize="@dimen/text_fourteensp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/all_16dp"
            android:id="@+id/ll_pic"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/all_16dp">

            <com.xueyiche.zjyk.xueyiche.driverschool.view.RoundImageView
                android:id="@+id/iv_one"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:layout_height="78dp"
                android:layout_marginRight="@dimen/slide_top_and_left"
                android:src="@mipmap/lunbotu" />

            <com.xueyiche.zjyk.xueyiche.driverschool.view.RoundImageView
                android:id="@+id/iv_two"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/slide_top_and_left"
                android:layout_height="78dp"
                android:src="@mipmap/lunbotu" />

            <com.xueyiche.zjyk.xueyiche.driverschool.view.RoundImageView
                android:id="@+id/iv_three"
                android:layout_marginLeft="@dimen/slide_top_and_left_two"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="78dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/lunbotu" />
        </LinearLayout>
        <View
            android:background="#E3E3E3"
            android:layout_marginLeft="@dimen/seven"
            android:layout_marginTop="@dimen/shisi"
            android:layout_marginRight="@dimen/ershiyi"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

        <TextView
            android:id="@+id/tv_wenda_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/shisi"
            android:layout_marginTop="@dimen/six"
            android:layout_marginRight="@dimen/shiqi"
            android:text="学易车答案"
            android:lineSpacingExtra="5dp"
            android:layout_marginBottom="@dimen/shisan"
            android:textColor="#4A4A4A"
            android:textSize="@dimen/text_threeteensp" />

    </LinearLayout>


</LinearLayout>