<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_user_time"
        android:layout_width="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="2012-01-20 12:02:06"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/rl_zaixian_user"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/jiushi"
            android:layout_marginTop="10dp"
            android:layout_marginRight="12dp"
            android:layout_height="wrap_content">
            <com.xueyiche.zjyk.xueyiche.mine.view.CircleImageView
                android:layout_width="45dp"
                android:id="@+id/ci_user_zaixian_head"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/kefu_zaixin_heard" />
            <TextView
                android:id="@+id/tv_user_zaixian"
                android:layout_width="wrap_content"
                android:layout_toLeftOf="@+id/ci_user_zaixian_head"
                android:text="哈喽呀 "
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingRight="17dp"
                android:background="@drawable/text_back_user"
                android:lineSpacingExtra="5dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>