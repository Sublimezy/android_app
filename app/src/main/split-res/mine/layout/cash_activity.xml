<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/cash_include"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />
    <View
        android:background="@color/all_line_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/shisan"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/all_zouyou"
            android:layout_height="@dimen/all_include_height">
            <TextView
                android:text="@string/card_kaihuhang"
                android:textColor="@color/_3232"
                android:textSize="@dimen/text_sixteensp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/ed_bank_card_kaihu"
                android:textColor="@color/test_color"
                android:hint="例：哈尔滨融汇松北支行"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/text_sixteensp"
                android:background="@null"
                android:layout_marginRight="@dimen/all_zouyou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:background="@color/all_line_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/yi"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/all_zouyou"
            android:layout_height="@dimen/all_include_height">
            <TextView
                android:text="@string/daozhangyinhangka"
                android:textColor="@color/_3232"
                android:textSize="@dimen/text_sixteensp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/ed_bank_card"
                android:background="@null"
                android:maxLength="19"
                android:inputType="number"
                android:hint="请输入银行卡"
                android:textColor="@color/_536799"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/text_sixteensp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:background="@color/all_line_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/yi"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/all_zouyou"
            android:layout_height="@dimen/all_include_height">
            <TextView
                android:text="@string/card_name"
                android:textColor="@color/_3232"
                android:textSize="@dimen/text_sixteensp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/ed_bank_card_name"
                android:textColor="@color/test_color"
                android:hint="请输入持卡人姓名"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/text_sixteensp"
                android:maxLength="4"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:background="@color/all_line_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/yi"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/all_zouyou"
            android:layout_height="@dimen/jiushi">
            <TextView
                android:text="@string/tixianjie"
                android:textColor="@color/_3232"
                android:textSize="@dimen/text_sixteensp"
                android:layout_marginTop="@dimen/shiqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="@dimen/sishisi">
                <TextView
                    android:text="@string/xiaoyang"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/text_ershisisp"
                    android:layout_marginLeft="@dimen/er"
                    android:textColor="@color/_3232"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText

                    android:id="@+id/ed_cash_money"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/slide_top_and_left"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sishisi" />
            </LinearLayout>

        </LinearLayout>
        <View
            android:background="@color/all_line_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/yi"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/all_zouyou"
            android:layout_height="@dimen/sishisi">
            <TextView
                android:id="@+id/tv_tixian_yue"
                android:textColor="@color/test_color"
                android:textSize="@dimen/text_fourteensp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_all_cash"
                android:textColor="@color/_536799"
                android:textSize="@dimen/text_fourteensp"
                android:paddingLeft="@dimen/slide_top_and_left_two"
                android:text="@string/quanbutixian"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="@dimen/sishisi" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/all_line_color"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="10dp"
            android:textColor="@color/red"
            android:id="@+id/tv_show_info_msg"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:text=""
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/bt_cash"
            android:text="@string/tixian"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_ershisp"
            android:layout_marginTop="@dimen/sanshipx"
            android:layout_width="@dimen/sanbai"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/all_include_height"
            android:background="@drawable/my_wallet_back"
            />

    </LinearLayout>


</LinearLayout>