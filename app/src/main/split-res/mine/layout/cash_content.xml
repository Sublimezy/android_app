<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/cash_content_include"
        layout="@layout/bianji_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="@dimen/qishi"
            android:src="@mipmap/cash_ok"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_tixian_ok"
            android:text="@string/tixianshenqing"
            android:textColor="@color/_3232"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/sanshiyi"
            android:textSize="@dimen/text_eightteensp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/_3232"
            android:textSize="@dimen/side_letter_bar_letter_size"
            android:layout_marginTop="@dimen/ershi"
            android:layout_marginBottom="@dimen/sanshi"
            android:layout_gravity="center_horizontal"
            android:text="@string/daozhangshijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/all_line_color"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/bt_cash_ok"
            android:text="@string/finish"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_eightteensp"
            android:layout_marginTop="@dimen/sanshijiu"
            android:layout_width="@dimen/sanbai"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/all_include_height"
            android:background="@drawable/my_wallet_back"
            android:shadowColor="@color/green"
            android:shadowRadius="5"
            />

    </LinearLayout>


</LinearLayout>