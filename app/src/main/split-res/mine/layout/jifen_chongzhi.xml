<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/color_white"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/jifen_chongzhi_include"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
<ScrollView
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RadioGroup
            android:id="@+id/rg_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/er"
            android:paddingTop="@dimen/shiqi">

            <RadioButton
                android:id="@+id/rb_shi"
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:checked="false"
                android:drawableTop="@drawable/jifen_select_shi" />

            <RadioButton
                android:id="@+id/rb_ershi"
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:checked="false"
                android:drawableTop="@drawable/jifen_select_ershi"
                android:textSize="@dimen/side_letter_bar_letter_size" />

            <RadioButton
                android:id="@+id/rb_sanshi"
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:checked="false"
                android:drawableTop="@drawable/jifen_select_sanshi" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/rg_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/er"
            android:paddingTop="@dimen/san">

            <RadioButton
                android:id="@+id/rb_wushi"
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:checked="false"
                android:drawableTop="@drawable/jifen_select_wushi" />

            <RadioButton
                android:id="@+id/rb_yibai"
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:checked="false"
                android:drawableTop="@drawable/jifen_select_yibai"
                android:textSize="@dimen/side_letter_bar_letter_size" />

            <RadioButton
                android:id="@+id/rb_erbai"
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:checked="false"
                android:drawableTop="@drawable/jifen_select_erbai" />

        </RadioGroup>

        <include
            android:id="@+id/jiayou_include"
            layout="@layout/app_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/slide_top_and_left_two"
            android:layout_below="@+id/scroll_view"
            android:background="@color/all_line_color" />

        <Button
            android:id="@+id/bt_pay"
            android:layout_width="@dimen/sanbai"
            android:layout_height="@dimen/all_include_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/ershiwu"
            android:background="@drawable/my_wallet_back"
            android:text="@string/bt_pay"
            android:layout_marginBottom="@dimen/sanshi"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_ershisp" />

    </LinearLayout>
</ScrollView>


</LinearLayout>