<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_coupon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/slide_top_and_left"
        android:layout_marginLeft="@dimen/all_zouyou"
        android:layout_marginRight="@dimen/all_zouyou"
        android:layout_marginTop="@dimen/slide_top_and_left_two"
        android:background="@mipmap/my_jifen_duihuan_back"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_offset_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/shiqi"
                    android:layout_gravity="center_horizontal"
                    android:text="减50"
                    android:textColor="@color/_3333"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tv_coupon_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/slide_top_and_left_two"
                    android:layout_gravity="center_horizontal"
                    android:text="无门槛优惠券"
                    android:paddingBottom="@dimen/shiwu"
                    android:textColor="@color/_3333"
                    android:textSize="@dimen/side_letter_bar_letter_size" />
            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_marginLeft="@dimen/slide_top_and_left_two"
                android:layout_marginTop="@dimen/yi"
                android:layout_marginRight="@dimen/slide_top_and_left_two"
                android:layout_height="match_parent"
                android:background="@color/_cccccc" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_coupon_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:text="车捷仕免费洗车券"
                    android:layout_marginTop="@dimen/ershiliu"
                    android:textColor="@color/_3333"
                    android:textSize="@dimen/text_fifteensp" />
                <TextView
                    android:id="@+id/tv_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="@dimen/slide_top_and_left_two"
                    android:text="截止日期2018.01.31"
                    android:textColor="@color/test_color"
                    android:textSize="@dimen/side_letter_bar_letter_size" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_use"
                android:layout_width="70dp"
                android:text="立即兑换"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/sishier"
                android:background="@drawable/button_shape"
                android:layout_marginRight="20dp"
                />
        </LinearLayout>
        <View

            android:background="@color/_cccccc"
            android:layout_marginLeft="@dimen/er"
            android:layout_marginRight="@dimen/er"
            android:layout_width="match_parent"
            android:layout_height="1px"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/slide_top_and_left"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ba"
            android:layout_marginLeft="15dp"
            >

            <TextView
                android:id="@+id/tv_shiyongyu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="适用于：洗车"
                android:textColor="@color/test_color"
                android:textSize="@dimen/side_letter_bar_letter_size" />

            <TextView
                android:id="@+id/tv_jifen_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="8000"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/aa"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/side_letter_bar_letter_size" />
            <TextView
                android:id="@+id/aa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="积分"
                android:layout_marginRight="12dp"
                android:textColor="@color/test_color"
                android:textSize="@dimen/side_letter_bar_letter_size" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>