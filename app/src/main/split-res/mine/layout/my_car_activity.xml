<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/title_include"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_include"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/sishiwu"
            android:layout_marginTop="13dp"
            android:orientation="horizontal">

            <TextView
                style="@style/shop_title_40"
                android:layout_gravity="center_vertical"
                android:text="车架号" />

            <TextView
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.xueyiche.zjyk.xueyiche.mine.view.MClearEditText
                android:id="@+id/ed_chejia"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginRight="@dimen/all_zouyou"
                android:gravity="right"
                android:hint="请输入车架号"
                android:lines="1"
                android:textColor="@color/_3232"
                android:textCursorDrawable="@drawable/edittext_cursor"
                android:textSize="@dimen/text_sixteensp"
                app:mClearEditText_showBottomLine="false"

                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="@dimen/shisan"
            android:layout_marginTop="@dimen/shisan"
            android:background="@color/_cccccc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/sishiwu"
            android:orientation="horizontal">

            <TextView
                style="@style/shop_title_40"
                android:layout_gravity="center_vertical"
                android:text="发动机号" />

            <TextView
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.xueyiche.zjyk.xueyiche.mine.view.MClearEditText
                android:id="@+id/ed_fadongji"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginRight="@dimen/all_zouyou"
                android:gravity="right"
                android:hint="请输入发动机号"
                android:lines="1"
                android:textColor="@color/_3232"
                android:textCursorDrawable="@drawable/edittext_cursor"
                android:textSize="@dimen/text_sixteensp"
                app:mClearEditText_showBottomLine="false"

                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="@dimen/shisan"
            android:layout_marginTop="@dimen/shisan"
            android:background="@color/_cccccc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/ll_chepai"
            android:gravity="center_vertical"
            android:layout_height="@dimen/sishiwu"
            android:orientation="horizontal">

            <TextView
                style="@style/shop_title_40"
                android:layout_gravity="center_vertical"
                android:text="车牌号" />

            <TextView
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/ed_chepai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/all_zouyou"
                android:gravity="right"
                android:hint="请输入车牌号"
                android:lines="1"
                android:maxLength="8"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:textColor="@color/_3232"
                android:textCursorDrawable="@drawable/edittext_cursor"
                android:textSize="@dimen/text_sixteensp"
                app:mClearEditText_showBottomLine="false"

                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:id="@+id/xian_chepai"
            android:layout_marginBottom="@dimen/shisan"
            android:layout_marginTop="@dimen/shisan"
            android:background="@color/_cccccc" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_query"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/driver_submit_shape"
        android:text="确认绑定"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:textColor="@color/color_white"
        android:textSize="20sp" />
    <LinearLayout
        android:id="@+id/aa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <android.inputmethodservice.KeyboardView
            android:id="@+id/keyboard_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/aa"
            android:layout_alignParentBottom="true"
            android:background="#d1d5db"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:keyBackground="@drawable/selector_key_background"
            android:keyPreviewHeight="43dp"
            android:keyPreviewLayout="@layout/key_preview_layout"
            android:keyTextColor="#333333"
            android:keyTextSize="16sp"
            android:paddingBottom="5dp"
            android:shadowColor="#00000000"
            android:shadowRadius="0.0"
            android:visibility="gone"
            android:paddingTop="5dp"/>
    </LinearLayout>

</LinearLayout>
