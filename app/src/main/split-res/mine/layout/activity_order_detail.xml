<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/title_include"
        layout="@layout/new_title_bar" />



        <androidx.core.widget.NestedScrollView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.lihang.ShadowLayout
                android:id="@+id/mShadowLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                app:hl_cornerRadius="10dp"
                app:hl_shadowColor="#2a000000"
                app:hl_shadowLimit="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="18dp">

                    <TextView
                        android:layout_marginTop="15dp"
                        android:id="@+id/tv_order_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单号:2022032108073212345"
                        android:textColor="@color/normal_text_color"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/sy_heng_xuxian" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用户信息"
                        android:textColor="@color/normal_text_color"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">


                        <TextView
                            android:id="@+id/tv_weihao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="用户信息"
                            android:textColor="@color/normal_text_color"
                            android:textSize="14dp" />

                        <ImageView
                            android:id="@+id/iv_call_phone"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentRight="true"
                            android:scaleType="fitXY"
                            android:src="@mipmap/logo" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_order_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="用户信息"
                        android:textColor="@color/normal_text_color"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="用户信息"
                        android:textColor="@color/normal_text_color"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_start_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="用户信息"
                        android:textColor="@color/normal_text_color"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_end_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="用户信息"
                        android:textColor="@color/normal_text_color"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="用户信息"
                        android:textColor="@color/normal_text_color"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="行驶轨迹："
                            android:textColor="@color/normal_text_color"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_drive_path"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="查看行驶路线"
                            android:textColor="@color/order_finish"
                            android:textSize="14dp" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llPingJia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的评价："
                            android:textColor="@color/normal_text_color"
                            android:textSize="14dp" />
                        <TextView
                            android:id="@+id/tvPingJia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="未评价，点击评价"
                            android:visibility="gone"
                            android:textColor="@color/red"
                            android:textSize="14dp" />
                        <RatingBar
                            android:id="@+id/rb_star"
                            android:layout_width="wrap_content"
                            android:stepSize="1"
                            android:isIndicator="true"
                            android:visibility="gone"
                            style="@style/MyRatingBarNowSmall"
                            android:layout_marginLeft="@dimen/slide_top_and_left"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:numStars="5" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="17dp"
                        android:background="@drawable/sy_heng_xuxian" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="费用明细"
                        android:textColor="@color/normal_text_color"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp">

                        <TextView
                            android:id="@+id/tv_qibujia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="用户信息"
                            android:textColor="@color/normal_text_color"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_qibujia_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="用户信息"
                            android:textColor="@color/normal_text_color"
                            android:textSize="14dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/tv_shichang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="用户信息"
                            android:textColor="@color/normal_text_color"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_shichang_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="用户信息"
                            android:textColor="@color/normal_text_color"
                            android:textSize="14dp" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/tv_wait_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="用户信息"
                            android:textColor="@color/normal_text_color"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_waitfei"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="用户信息"
                            android:textColor="@color/normal_text_color"
                            android:textSize="14dp" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/tv_licheng"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="用户信息"
                            android:textColor="@color/normal_text_color"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_licheng_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="用户信息"
                            android:textColor="@color/normal_text_color"
                            android:textSize="14dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/tv_quyunei_licheng"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="优惠金额"
                            android:textColor="@color/normal_text_color"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_quyunei_licheng_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="用户信息"
                            android:textColor="@color/normal_text_color"
                            android:textSize="14dp" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/tv_quyuwai_licheng"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="优惠金额"
                            android:textColor="@color/normal_text_color"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_quyuwai_licheng_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="用户信息"
                            android:textColor="@color/normal_text_color"
                            android:textSize="14dp" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/tv_youhui"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="优惠金额"
                            android:textColor="@color/normal_text_color"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_youhui_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="用户信息"
                            android:textColor="@color/normal_text_color"
                            android:textSize="14dp" />

                    </RelativeLayout>

                    <View
                        android:layout_marginVertical="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#bbbbbb"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="23dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:text="合计费用"
                            android:textColor="@color/normal_text_color"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_total_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="用户信息"
                            android:textColor="@color/normal_text_color"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                    </RelativeLayout>
                </LinearLayout>

            </com.lihang.ShadowLayout>
        </androidx.core.widget.NestedScrollView>


    <!--    </com.scwang.smart.refresh.layout.SmartRefreshLayout>-->
</LinearLayout>
