<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            style="@style/MyStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:splitMotionEvents="false">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/shiwu"
                android:layout_marginTop="@dimen/sanshier"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_mine_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/ershiwu"
                    android:src="@mipmap/new_mine_setting" />

                <ImageView
                    android:id="@+id/iv_mine_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/new_mine_message" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/ershiyi">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_mine_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/shisi"
                        android:layout_marginTop="@dimen/jiu"
                        android:text="点击头像登录"
                        android:textColor="@color/_3333"
                        android:textSize="21sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_mine_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/shiwu"
                        android:layout_marginTop="@dimen/san"
                        android:ellipsize="end"
                        android:maxLength="11"
                        android:maxLines="1"
                        android:text="点击头像登录"
                        android:textColor="@color/test_color"
                        android:textSize="@dimen/text_threeteensp"
                        android:visibility="gone" />
                </LinearLayout>

                <com.xueyiche.zjyk.xueyiche.mine.view.CircleImageView
                    android:id="@+id/mine_head"
                    android:layout_width="69dp"
                    android:layout_height="69dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/sanshi"
                    android:layout_marginRight="@dimen/shiwu"

                    android:src="@mipmap/mine_head" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ershiqi"
                android:layout_marginRight="@dimen/ershiqi"
                android:layout_marginTop="@dimen/ershisan"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_mine_jifen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的积分"
                        android:textColor="@color/_666"
                        android:textSize="@dimen/text_threeteensp" />

                    <TextView
                        android:id="@+id/tv_mine_jifen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/six"
                        android:text="--"
                        android:textColor="#161616"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_mine_youhuiquan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="优惠券"
                        android:textColor="@color/_666"
                        android:textSize="@dimen/text_threeteensp" />

                    <TextView
                        android:id="@+id/tv_mine_youhuiquan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/six"
                        android:text="--"
                        android:textColor="#161616"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_mine_zuji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                   android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的足迹"
                        android:textColor="@color/_666"
                        android:textSize="@dimen/text_threeteensp" />

                    <TextView
                        android:id="@+id/tv_mine_zuji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/six"
                        android:text="--"
                        android:textColor="#161616"
                        android:textSize="20sp" />

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:layout_marginLeft="@dimen/shisi"
                android:layout_marginRight="@dimen/shisi"
                android:layout_marginTop="@dimen/ershiyi"
                android:background="@mipmap/new_mine_bg_two"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/tv_my_car_room"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/shisan"
                        android:layout_marginTop="@dimen/shiyi"
                        android:text="我的爱车"
                        android:textColor="#0f0f0f"
                        android:textSize="@dimen/text_seveneensp"
                        android:textStyle="bold" />

                    <TextView
                            android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/shiba"
                        android:layout_marginTop="@dimen/all_16dp"
                        android:drawableRight="@mipmap/jiantou"
                        android:gravity="center_vertical"
                        android:text="我的车库  "
                        android:textColor="@color/test_color"
                        android:textSize="@dimen/text_threeteensp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_my_love_car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/shiwu"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/my_love_car_line_bg"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_car_pro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="学"
                        android:paddingBottom="@dimen/si"
                        android:paddingTop="@dimen/si"
                        android:paddingLeft="@dimen/slide_top_and_left"
                        android:paddingRight="@dimen/slide_top_and_left"
                        android:gravity="center"
                        android:background="@drawable/my_love_car_bg"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/text_threeteensp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_car_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A12345"
                        android:paddingBottom="@dimen/si"
                        android:paddingTop="@dimen/si"
                        android:paddingLeft="@dimen/slide_top_and_left"
                        android:paddingRight="@dimen/slide_top_and_left"
                        android:gravity="center"
                        android:textColor="#2015FC"
                        android:textSize="@dimen/text_threeteensp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_add_my_car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/slide_top_and_left_two"
                    android:src="@mipmap/mine_add_love_car" />
            </LinearLayout>

            <RelativeLayout

                android:id="@+id/tv_mine_all_indent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/shiba">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ershiqi"
                    android:text="我的订单"
                    android:textColor="#0f0f0f"
                    android:textSize="@dimen/text_seveneensp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/sanshisi"
                    android:drawableRight="@mipmap/jiantou"
                    android:text="全部订单 "
                    android:textColor="@color/test_color"
                    android:textSize="@dimen/text_threeteensp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ershi"
                android:layout_marginRight="@dimen/ba"
                android:layout_marginTop="@dimen/all_16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_mine_indent_wait"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="30dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/new_mine_wait_go_pay" />

                        <TextView
                            android:id="@+id/tv_wait_pay_number"
                            android:layout_width="@dimen/shiwu"
                            android:layout_height="@dimen/shiwu"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/circle_red_mine_shape"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/side_letter_bar_letter_size"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/seven"
                        android:text="待付款"
                        android:textColor="@color/_3333"
                        android:textSize="@dimen/text_threeteensp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_mine_indent_jinxingzhong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="30dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/new_mine_jingxingzhong" />

                        <TextView
                            android:id="@+id/tv_on_number"
                            android:layout_width="@dimen/shiwu"
                            android:layout_height="@dimen/shiwu"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/circle_red_mine_shape"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/side_letter_bar_letter_size"
                            android:visibility="gone" />
                    </RelativeLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/seven"
                        android:text="进行中"
                        android:textColor="@color/_3333"
                        android:textSize="@dimen/text_threeteensp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_mine_indent_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/new_mine_end" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/seven"
                        android:text="已完成"
                        android:textColor="@color/_3333"
                        android:textSize="@dimen/text_threeteensp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_mine_indent_tuikuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/mine_indent_tuikuan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/six"
                        android:text="退款/售后"
                        android:textColor="@color/_3333"
                        android:textSize="@dimen/text_threeteensp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sishiqi"
                android:layout_marginLeft="@dimen/shisi"
                android:layout_marginRight="@dimen/shisi"
                android:layout_marginTop="@dimen/ershiwu"
                android:background="@mipmap/new_mine_bg_two"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/shisan"
                    android:layout_marginTop="@dimen/shiyi"
                    android:text="我的服务"
                    android:textColor="#0f0f0f"
                    android:textSize="@dimen/text_seveneensp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/all_16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_my_wallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/new_mine_chongzhi" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/ba"
                            android:text="我的钱包"
                            android:textColor="@color/_3333"
                            android:textSize="@dimen/text_threeteensp" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_usually_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/changyong_address" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/ba"
                            android:text="常用地址"
                            android:textColor="@color/_3333"
                            android:textSize="@dimen/text_threeteensp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_question"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/myquestion" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/ba"
                            android:text="问答"
                            android:textColor="@color/_3333"
                            android:textSize="@dimen/text_threeteensp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_my_collection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/iv_mine_collection" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/ba"
                            android:text="我的收藏"
                            android:textColor="@color/_3333"
                            android:textSize="@dimen/text_threeteensp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/shisan"
                    android:layout_marginTop="@dimen/ershier"
                    android:text="其他服务"
                    android:textColor="#0f0f0f"
                    android:textSize="@dimen/text_seveneensp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/sanshi"
                    android:layout_marginTop="@dimen/all_16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_shared_app"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/new_mine_share" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/six"
                            android:text="推荐APP"
                            android:textColor="@color/_3333"
                            android:textSize="@dimen/text_threeteensp" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_kefu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/new_mine_help" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/six"
                            android:text="客服中心"
                            android:textColor="@color/_3333"
                            android:textSize="@dimen/text_threeteensp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_about"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/mine_new_about" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/six"
                            android:text="关于学易车"
                            android:textColor="@color/_3333"
                            android:textSize="@dimen/text_threeteensp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:visibility="invisible">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/mine_indent_tuikuan" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/shiwu"
                            android:textColor="@color/_3333"
                            android:textSize="@dimen/text_threeteensp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>