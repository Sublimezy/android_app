<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/all_zouyou"
    android:paddingRight="@dimen/all_zouyou"
    android:minHeight="@dimen/qishi"
    android:layout_height="match_parent">
    <View
        android:background="@color/_cccccc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/yi"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_mine_service_name"
            android:textColor="#4f4f4f"
            android:textSize="@dimen/text_ershisp"
            android:text="充值中心"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.xueyiche.zjyk.xueyiche.mine.view.CircleImageView
            android:id="@+id/iv_mine_point"
            android:layout_width="@dimen/ba"
           android:src="#ff0000"
            android:visibility="invisible"
            android:layout_marginLeft="@dimen/slide_top_and_left"
            android:layout_height="@dimen/ba" />
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_mine_service_logo"
        android:src="@mipmap/new_mine_chongzhi"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content" />

</RelativeLayout>