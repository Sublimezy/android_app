<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/feed_back_include"
        layout="@layout/bianji_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_below="@+id/feed_back_include"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/slide_top_and_left_two"
            android:layout_marginLeft="@dimen/slide_top_and_left_two"
            android:layout_marginRight="@dimen/slide_top_and_left_two"
            android:layout_height="@dimen/yibaiba">

            <EditText
                android:id="@+id/ed_think_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:background="@null"
                android:textSize="@dimen/text_fourteensp"
                android:maxLines="9"
                android:hint="@string/miaoshuyijian"
                />

            <TextView
                android:id="@+id/text_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/text_fourteensp"
                android:textColor="@color/_9999"
                android:layout_marginRight="@dimen/ershi"
                android:layout_marginBottom="@dimen/slide_top_and_left_two"
                android:text="@string/tv_zishu"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/slide_top_and_left_two"
            android:background="@color/all_line_color" />

        <EditText
            android:id="@+id/ed_think_number"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_include_height"
            android:layout_marginLeft="@dimen/all_zouyou"
            android:textSize="@dimen/text_fourteensp"
            android:minLines="1"
            android:layout_marginRight="@dimen/all_zouyou"
            android:background="@null"
            android:hint="@string/lianxidianhua"
            android:numeric="integer" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/all_line_color">

            <Button
                android:id="@+id/bt_think_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sishi"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/yibaier"
                android:background="@drawable/button_shape"
                android:text="@string/tv_tijiao"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_sixteensp" />
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>