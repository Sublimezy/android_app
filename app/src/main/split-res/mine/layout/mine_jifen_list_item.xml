<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/all_zouyou"
    android:paddingRight="@dimen/all_zouyou"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/shiwu"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_mine_jifen_name"
            android:textColor="@color/_4f4f4f"
            android:textSize="@dimen/text_ershisp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="@dimen/zero"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_jifen_number"
            android:textColor="#4f4f4f"
            android:textSize="@dimen/text_ershisp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_jifen_time"
        android:layout_width="match_parent"
        android:textSize="@dimen/side_letter_bar_letter_size"
        android:textColor="@color/_9999"
        android:layout_marginTop="@dimen/slide_top_and_left_two"
        android:layout_height="wrap_content" />
    <View
        android:background="@color/_cccccc"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/shiwu"
        android:layout_height="@dimen/yipx"/>
</LinearLayout>