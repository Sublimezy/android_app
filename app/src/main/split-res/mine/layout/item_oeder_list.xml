<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="32dp"
    android:paddingVertical="12dp"
    android:paddingRight="22dp">

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_last_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="尾号4799"
        android:textColor="@color/normal_text_color"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_order_sn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:drawableLeft="@mipmap/icon_shijian"
        android:drawablePadding="10dp"
        android:text="2022-03-21 21:32"
        android:textColor="#6f6d6d"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_last_number"
        app:layout_constraintTop_toBottomOf="@id/tv_last_number" />

    <TextView
        android:id="@+id/tv_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="始: 科技大厦"
        android:textColor="@color/normal_text_color"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_last_number"
        app:layout_constraintTop_toBottomOf="@id/tv_order_sn" />

    <TextView
        android:id="@+id/tv_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="终: 松浦观江国际A区"
        android:textColor="@color/normal_text_color"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_last_number"
        app:layout_constraintTop_toBottomOf="@id/tv_start" />


    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4278d7"
        android:textSize="14dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_last_number"
        android:text="已完成"
        />
</androidx.constraintlayout.widget.ConstraintLayout>