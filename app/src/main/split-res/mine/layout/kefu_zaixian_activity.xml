<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical">

    <include
        android:id="@+id/message_include"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />

    <!--<androidx.recyclerview.widget.RecyclerView-->
        <!--android:id="@+id/lv_kefu_zaixian"-->
        <!--android:layout_marginBottom="50dp"-->
        <!--android:layout_width="match_parent"-->
        <!--android:scrollbars="none"-->
        <!--android:divider="#00000000"-->
        <!--android:background="#f0f0f0"-->
        <!--android:layout_below="@+id/message_include"-->
        <!--android:transcriptMode="alwaysScroll"-->
        <!--android:listSelector="@android:color/transparent"-->
        <!--android:layout_height="match_parent"-->
         <!--/>-->

    <ListView
        android:id="@+id/lv_kefu_zaixian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_include"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:background="#f0f0f0"
        android:divider="#00000000"
        android:stackFromBottom="true"
        android:overScrollMode="never"
        android:paddingBottom="@dimen/sishi"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none"
        android:transcriptMode="alwaysScroll" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#f5f5f7">

        <View style="@style/_cccline" />

        <EditText
            android:id="@+id/ed_zaixian_user"
            android:layout_width="294dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/kefu_zaixian_edtext"
            android:imeOptions="actionDone" />

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="12dp"
            android:text="发送"
            android:textColor="@color/_4f4f4f"
            android:textSize="16sp" />
    </RelativeLayout>
</RelativeLayout>