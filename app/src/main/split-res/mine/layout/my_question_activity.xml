<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/rg_indent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:layout_below="@+id/indent_include"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_fabu"
                style="@style/MenuTab"
                android:layout_height="60dp"
                android:checked="true"
                android:text="发布"
                android:drawablePadding="3dp"
                android:drawableBottom="@drawable/rb_xian_select"
                android:textColor="@drawable/mine_selector_text"
                android:textSize="@dimen/text_eightteensp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/indent_radio" />

            <RadioButton
                android:id="@+id/rb_huida"
                style="@style/MenuTab"
                android:layout_height="60dp"
                android:text="回答"
                android:drawablePadding="3dp"
                android:drawableBottom="@drawable/rb_xian_select"
                android:textColor="@drawable/mine_selector_text"
                android:textSize="@dimen/text_eightteensp"
               />
        </RadioGroup>

        <ListView
            android:id="@+id/lv_myquestion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:background="#f7f7f7"
            android:listSelector="@color/color_white"
            android:scrollbars="none" />
    </LinearLayout>
</LinearLayout>