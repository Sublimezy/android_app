<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_qiandao_tixing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/all_zouyou"
            android:layout_marginTop="56dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="签到提醒"
                android:textColor="@color/_4f4f4f"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/iv_qiandao_kaiguan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/qiandao"
                android:button="@null"
                android:checked="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:text="当前积分"
                android:textColor="@color/_666"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="1900000"
                android:textColor="@color/colorOrange"
                android:textSize="35sp" />
        </LinearLayout>

        <RadioButton
            android:id="@+id/rb_qiandao"
            android:text="签到"
            android:gravity="center"
            android:checked="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_eightteensp"
            android:layout_width="@dimen/jiushi"
            android:layout_marginTop="66dp"
            android:textColor="@color/color_white"
            android:background="@drawable/qiandao_selecter"
            android:layout_marginRight="@dimen/all_zouyou"
            android:layout_height="@dimen/sishi"
            android:button="@null" />

    </RelativeLayout>


    <ListView
        android:id="@+id/lv_jifen_mingxi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:divider="@null" />

</LinearLayout>