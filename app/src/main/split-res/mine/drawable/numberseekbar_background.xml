<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

	<!-- 背景 -->
	<item android:id="@android:id/background">
		<shape>
			<!-- 圆角 -->
			<corners android:radius="5dip" />
			<gradient
				android:angle="270"
			android:centerColor="@color/_cccccc"
			android:centerY="0.75"
			android:endColor="@color/_cccccc"
			android:startColor="@color/_cccccc" />
		</shape>
	</item>
	<!-- 第二进度条 -->
	<!--&lt;!&ndash;-->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="@color/colorOrange"
                    android:centerY="0.75"
                    android:endColor="@color/colorOrange"
                    android:startColor="@color/colorOrange" />
            </shape>
        </clip>
    </item>
	<!-- 第一进度条 -->
	<item android:id="@android:id/progress">
		<clip>
			<shape>
				<corners android:radius="5dip" />

				<gradient
					android:angle="270"
					android:centerColor="@color/colorOrange"
					android:centerY="0.75"
					android:endColor="@color/colorOrange"
					android:startColor="@color/colorOrange" />
			</shape>
		</clip>
	</item>
</layer-list>