<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />

    <com.xueyiche.zjyk.xueyiche.usedcar.view.UsedCarFlyBanner
        android:id="@+id/fb_sell_car"
        android:layout_width="match_parent"
        android:layout_height="160dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="26dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有" />

        <TextView
            android:id="@+id/tv_sell_car_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorOrange"
            android:text="187436" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="辆车成功出售" />
    </LinearLayout>
    <View
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="25dp"
        style="@style/_cccline" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text="手机号"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:inputType="number"
            android:maxLength="11"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:hint="请输入您的手机号"
            android:textColor="@color/_4f4f4f"
            android:textColorHint="@color/_cccccc"
            android:textSize="@dimen/text_eightteensp" />
    </RelativeLayout>
    <View
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="25dp"
        style="@style/_cccline" />

    <TextView
        android:id="@+id/tv_yuyue_sell"
        android:layout_width="280dp"
        android:layout_gravity="center_horizontal"
        android:text="预约卖车"
        android:gravity="center"
        android:textColor="@color/color_white"
        android:background="@drawable/yuyue_sell_car_bacg"
        android:layout_marginTop="50dp"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/tv_call"
        android:layout_width="280dp"
        android:layout_gravity="center_horizontal"
        android:text="0451-51068980"
        android:gravity="center"
        android:textColor="@color/colorOrange"
        android:background="@drawable/my_wallet_back_two"
        android:layout_marginTop="25dp"
        android:layout_height="50dp" />
</LinearLayout>