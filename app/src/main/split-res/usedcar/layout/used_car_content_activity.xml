<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom"
        android:layout_below="@+id/title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="186dp">

                <com.xueyiche.zjyk.xueyiche.homepage.fragments.bannerview.LoopViewPager
                    android:id="@+id/vp_shop_lunbo"
                    android:layout_width="match_parent"
                    android:layout_height="186dp" />

                <TextView
                    android:id="@+id/tv_lunbo_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/shiwu"
                    android:layout_marginRight="@dimen/shisi"
                    android:gravity="center"
                    android:text="-/--"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="学易车"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:layout_marginTop="@dimen/ershiwu"
                android:textColor="@color/_3333"
                android:textSize="@dimen/text_eightteensp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/slide_top_and_left_two"
                android:paddingLeft="@dimen/all_16dp"
                android:paddingRight="@dimen/all_16dp">

                <LinearLayout
                    android:id="@+id/ll_shou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/used_car_sell" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="售价："
                        android:textColor="@color/test_color"
                        android:textSize="@dimen/text_fourteensp" />
                    <TextView
                        android:id="@+id/tv_sell_now_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0万元"
                        android:textStyle="bold"
                        android:textColor="#D0021B"
                        android:textSize="@dimen/text_seveneensp" />


                    <TextView
                        android:id="@+id/tv_sell_price_old"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/_9999"
                        android:textSize="@dimen/side_letter_bar_letter_size" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_rent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_shou"
                    android:layout_marginTop="@dimen/shiwu"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/used_car_rent" />

                    <TextView
                        android:id="@+id/tv_rent_now_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/slide_top_and_left_two"
                        android:textColor="@color/colorOrange"
                        android:textSize="@dimen/side_letter_bar_letter_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/slide_top_and_left_two"
                        android:text="---"
                        android:visibility="gone"
                        android:textColor="@color/_9999"
                        android:textSize="@dimen/side_letter_bar_letter_size" />

                    <TextView
                        android:id="@+id/tv_rent_price_old"
                        android:layout_width="wrap_content"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:textColor="@color/_9999"
                        android:textSize="@dimen/side_letter_bar_letter_size" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_loan_jieshsao"
                    android:layout_width="@dimen/bashiwu"
                    android:layout_height="@dimen/sanshi"
                    android:visibility="gone"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/daikuai_bg_shape"
                    android:gravity="center"
                    android:text="贷款介绍"
                    android:textColor="@color/colorOrange" />
            </RelativeLayout>

            <View
                android:id="@+id/xian"
                style="@style/_cccline"
                android:background="#F7F7F7"
                android:layout_height="@dimen/slide_top_and_left_two"
                android:layout_marginTop="@dimen/shiyi" />

            <com.xueyiche.zjyk.xueyiche.homepage.view.MyGridView
                android:id="@+id/gv_used_car_miaoshu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ershier"
                android:layout_marginRight="@dimen/ershier"
                android:layout_marginTop="@dimen/sanshi"
                android:focusableInTouchMode="true"
                android:horizontalSpacing="@dimen/slide_top_and_left_two"
                android:listSelector="@color/color_white"
                android:numColumns="3"
                android:scrollbars="none"
                android:verticalSpacing="@dimen/ershiwu" />

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/ll_peizhi"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sanshi"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/all_zouyou"
                android:paddingRight="@dimen/all_zouyou">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="亮点配置"
                    android:textColor="@color/_3333"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_eightteensp" />

                <com.xueyiche.zjyk.xueyiche.homepage.view.MyGridView
                    android:id="@+id/gv_used_car_liangdian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:listSelector="@color/color_white"
                    android:numColumns="3"
                    android:layout_marginLeft="@dimen/shiwu"
                    android:scrollbars="none"
                    android:verticalSpacing="@dimen/shiwu" />
            </LinearLayout>

            <View
                style="@style/_cccline"
                android:layout_marginLeft="@dimen/all_zouyou"
                android:visibility="gone"
                android:layout_marginRight="@dimen/all_zouyou"
                android:layout_marginTop="@dimen/all_include_height" />

            <RelativeLayout
                android:id="@+id/rl_look_baogao"
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_include_height"
                android:paddingLeft="@dimen/all_zouyou"
                android:paddingRight="@dimen/all_zouyou">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="车辆检测报告"
                    android:textStyle="bold"
                    android:textColor="@color/_3333"
                    android:textSize="@dimen/text_sixteensp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@mipmap/look_baogao"
                    android:text="                 "
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/side_letter_bar_letter_size" />
            </RelativeLayout>

            <View
                style="@style/_cccline"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/all_zouyou"
                android:layout_marginRight="@dimen/all_zouyou" />

            <com.xueyiche.zjyk.xueyiche.homepage.view.AdListView
                android:id="@+id/lv_used_car_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/all_zouyou"
                android:layout_marginRight="@dimen/all_zouyou"
                android:listSelector="@color/color_white"
                android:scrollbars="none" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/all_zouyou"
                android:paddingRight="@dimen/all_zouyou">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="相关推荐"
                    android:textColor="@color/_3333"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_eightteensp" />

                <View
                    style="@style/_cccline"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/shiwu" />
            </LinearLayout>

            <com.xueyiche.zjyk.xueyiche.homepage.view.AdListView
                android:id="@+id/alv_hot_used_car"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/all_include_height"
                android:layout_marginLeft="@dimen/all_zouyou"
                android:layout_marginRight="@dimen/all_zouyou"
                android:layout_marginTop="@dimen/ershiwu"
                android:divider="@color/color_white"
                android:listSelector="@color/color_white"
                android:scrollbars="none" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <View style="@style/_cccline" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/slide_top_and_left_two"
            android:layout_marginBottom="@dimen/slide_top_and_left_two"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="@dimen/liushiyi"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">
                <CheckBox
                    android:id="@+id/cb_collection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shoucang_bg_select"
                    android:button="@null"
                    android:checked="false"
                    />
                <TextView
                    android:id="@+id/tv_collection"
                    android:text="收藏"
                    android:layout_marginTop="@dimen/yi"
                    android:textSize="@dimen/text_threeteensp"
                    android:textColor="@color/test_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <TextView
                android:id="@+id/tv_order_look_car"
                android:text="预约看车"
                android:gravity="center"
                android:layout_width="@dimen/zero"
                android:background="@drawable/used_car_bg_biankuang"
                android:textSize="@dimen/text_seveneensp"
                android:textColor="@color/colorOrange"
                android:layout_weight="1"
                android:layout_height="@dimen/sishi" />
            <TextView
                android:id="@+id/tv_rent_car"
                android:layout_width="@dimen/zero"
                android:text="试车"
                android:gravity="center"
                android:layout_marginLeft="@dimen/slide_top_and_left_two"
                android:background="@drawable/usedcar_bt_bg"
                android:textSize="@dimen/text_seveneensp"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/shiwu"
                android:textColor="@color/color_white"
                android:layout_height="@dimen/sishi" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>