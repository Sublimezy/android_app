<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <include
        android:id="@+id/fenjidaikuan_include"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom"
        android:layout_below="@+id/fenjidaikuan_include">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/all_zouyou"
            android:paddingRight="@dimen/all_zouyou">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/shiwu">

                <TextView
                    style="@style/used_car_feiyongmingxi_style_title"
                    android:text="车辆整备费" />

                <TextView
                    android:id="@+id/tv_car_hostling"
                    style="@style/used_car_feiyongmingxi_style_content"
                    android:text="¥0" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/shiwu">

                <TextView
                    style="@style/used_car_feiyongmingxi_style_title"
                    android:text="优惠折扣" />

                <TextView
                    style="@style/used_car_feiyongmingxi_style_title"
                    android:layout_alignParentRight="true"
                    android:text="-¥5" />
            </RelativeLayout>

            <View style="@style/_cccline"
                android:layout_marginTop="@dimen/shiwu"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/shiwu"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_peccancy_deposit"
                        android:textSize="@dimen/side_letter_bar_letter_size"
                        style="@style/used_car_feiyongmingxi_style_title"
                        android:text="违章押金（可退）¥0" />
                    <TextView
                        android:id="@+id/tv_car_deposit"
                        android:layout_marginTop="@dimen/shiwu"
                        android:textSize="@dimen/side_letter_bar_letter_size"
                        style="@style/used_car_feiyongmingxi_style_title"
                        android:text="车辆押金（可退）¥0" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/text_fifteensp"
                        style="@style/used_car_feiyongmingxi_style_title"
                        android:text="订单总额" />
                    <TextView
                        android:id="@+id/tv_indent_total_price"
                        android:textSize="@dimen/text_fifteensp"
                        android:layout_marginLeft="@dimen/si"
                        style="@style/used_car_feiyongmingxi_style_content"
                        android:text="¥0" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_marginTop="@dimen/liushi"
                style="@style/used_car_feiyongmingxi_style_title"
                android:text="费用说明" />
            <com.xueyiche.zjyk.xueyiche.homepage.view.AdListView
                android:id="@+id/lv_shuoming"
                android:scrollbars="none"
                android:divider="@null"
                android:layout_marginBottom="@dimen/ershi"
                android:listSelector="@color/color_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>