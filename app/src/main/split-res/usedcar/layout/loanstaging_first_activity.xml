<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/color_white"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/fenjidaikuan_include"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_below="@+id/fenjidaikuan_include"
        android:layout_width="match_parent"
        android:layout_above="@+id/ll_bottom"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_title"
                android:textSize="@dimen/text_ershisp"
                android:textColor="@color/_4f4f4f"
                android:text="大众速腾 2017款 180TSI 自动尊享版显示该车简介"
                android:paddingLeft="@dimen/all_zouyou"
                android:paddingRight="@dimen/all_zouyou"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/ershiwu"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/text_fifteensp"
                android:textColor="@color/test_color"
                android:text="推荐方案"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/all_zouyou"
                android:layout_marginTop="@dimen/all_include_height"
                android:layout_height="wrap_content" />
            <View
                android:layout_below="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginRight="@dimen/all_zouyou"
                android:layout_marginLeft="@dimen/all_zouyou"
                android:layout_marginTop="@dimen/ershiwu"
                android:background="@color/_cccccc" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="@dimen/qishi">
                <TextView
                    android:textSize="@dimen/text_ershisp"
                    android:textColor="@color/test_color"
                    android:text="首期款"
                    android:paddingLeft="@dimen/all_zouyou"
                    android:paddingRight="@dimen/all_zouyou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_first_money"
                    android:textSize="@dimen/text_ershisp"
                    android:textColor="@color/colorOrange"
                    android:text="6.81万起"
                    android:layout_alignParentRight="true"
                    android:paddingRight="@dimen/all_zouyou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_below="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginRight="@dimen/all_zouyou"
                android:layout_marginLeft="@dimen/all_zouyou"
                android:background="@color/_cccccc" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="@dimen/qishi">
                <TextView
                    android:textSize="@dimen/text_ershisp"
                    android:textColor="@color/test_color"
                    android:text="月供（24期）"
                    android:paddingLeft="@dimen/all_zouyou"
                    android:paddingRight="@dimen/all_zouyou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="@dimen/text_ershisp"
                    android:textColor="@color/colorOrange"
                    android:text="2500元"
                    android:layout_alignParentRight="true"
                    android:paddingRight="@dimen/all_zouyou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_below="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginRight="@dimen/all_zouyou"
                android:layout_marginLeft="@dimen/all_zouyou"
                android:background="@color/_cccccc" />
        </LinearLayout>
    </ScrollView>
<LinearLayout
    android:id="@+id/ll_bottom"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:layout_height="51dp">
    <View
        android:layout_below="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/_cccccc" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_zixun"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/color_white"
            android:gravity="center"
            android:text="咨询"
            android:textColor="@color/test_color"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_shenqing"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/colorOrange"
            android:gravity="center"
            android:text="马上申请"
            android:textColor="@color/color_white"
            android:textSize="20sp"/>
    </LinearLayout>

</LinearLayout>

</RelativeLayout>