<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/title_used_car_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/all_16dp"
        />
    <View
        android:layout_width="match_parent"
        android:background="@color/all_line_color"
        android:layout_height="1px"/>

    <ScrollView
        android:id="@+id/sv_used_car"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.xueyiche.zjyk.xueyiche.usedcar.view.UsedCarFlyBanner
                    android:id="@+id/fb_used_car"
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    android:layout_marginBottom="@dimen/slide_top_and_left_two"
                    />

                    <RelativeLayout
                        android:id="@+id/rl_used_car_search"
                        android:layout_width="289dp"
                        android:layout_alignParentBottom="true"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@mipmap/used_car_search_bg">

                        <EditText
                            android:id="@+id/tv_search_title"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/iv_serch_quxiao"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:hint="搜索您想要的车"
                            android:maxLines="1"
                            android:textColor="@color/_4f4f4f"
                            android:textCursorDrawable="@drawable/edittext_cursor"
                            android:textSize="@dimen/text_threeteensp" />

                        <ImageView
                            android:id="@+id/iv_serch_quxiao"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="7dp"
                            android:src="@mipmap/ic_search" />
                        <TextView
                            android:id="@+id/tv_search"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/text_fifteensp"
                            android:gravity="center"
                            android:text="搜索"
                            android:layout_width="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="@mipmap/serach_text_bg"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/all_zouyou"
                android:layout_marginRight="@dimen/all_zouyou"
                android:layout_marginTop="@dimen/sanshiqi">

                <LinearLayout
                    android:id="@+id/ll_one"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:src="@mipmap/buycar_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="买车"
                        android:textColor="@color/_4f4f4f"
                        android:textSize="@dimen/text_threeteensp"
                       />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_two"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:src="@mipmap/zuche_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="试车"
                        android:textColor="@color/_4f4f4f"
                        android:textSize="@dimen/text_threeteensp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_three"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:src="@mipmap/sellcar_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="卖车"
                        android:textColor="@color/_4f4f4f"
                        android:textSize="@dimen/text_threeteensp"
                       />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_four"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:src="@mipmap/newcar_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="新车"
                        android:textColor="@color/_4f4f4f"
                        android:textSize="@dimen/text_threeteensp"
                         />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_five"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:src="@mipmap/carpinggu_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="车辆评估"
                        android:lines="1"
                        android:textColor="@color/_4f4f4f"
                        android:textSize="@dimen/text_threeteensp"
                        />
                </LinearLayout>
            </LinearLayout>

            <com.xueyiche.zjyk.xueyiche.homepage.view.MyGridView
                android:id="@+id/gv_text_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ershiwu"
                android:layout_marginLeft="@dimen/all_zouyou"
                android:layout_marginRight="@dimen/all_zouyou"
                android:layout_marginTop="25dp"
                android:focusableInTouchMode="true"
                android:horizontalSpacing="@dimen/shiwu"
                android:listSelector="@color/color_white"
                android:numColumns="4"
                android:scrollbars="none"
                android:verticalSpacing="@dimen/shiwu" />

            <LinearLayout
                android:id="@+id/ll_show_all_usedcar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看全部"
                    android:textColor="#0F0F0F"
                    android:textSize="@dimen/text_sixteensp" />

                <TextView
                    android:id="@+id/tv_allcar_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/text_sixteensp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="辆车源 >"
                    android:textColor="#0F0F0F"
                    android:textSize="@dimen/text_sixteensp" />
            </LinearLayout>

            <com.xueyiche.zjyk.xueyiche.homepage.view.MyGridView
                android:id="@+id/gv_image_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="29dp"
                android:focusableInTouchMode="true"
                android:horizontalSpacing="@dimen/shiwu"
                android:listSelector="@color/color_white"
                android:numColumns="2"
                android:scrollbars="none"
                android:verticalSpacing="@dimen/shiwu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="热门推荐"
                android:textColor="@color/_3333"
                android:textSize="@dimen/text_eightteensp"
                android:textStyle="bold" />

            <com.xueyiche.zjyk.xueyiche.homepage.view.AdListView
                android:id="@+id/alv_hot_used_car"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp"
                android:divider="@color/color_white"
                android:listSelector="@color/color_white"
                android:scrollbars="none" />

            <LinearLayout
                android:id="@+id/ll_show_all_usedca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看全部"
                    android:textColor="#0F0F0F"
                    android:textSize="@dimen/text_sixteensp" />

                <TextView
                    android:id="@+id/tv_allcar_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/text_sixteensp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="辆车源 >"
                    android:textColor="#0F0F0F"
                    android:textSize="@dimen/text_sixteensp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>