<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ershi"
            android:layout_marginLeft="@dimen/shiwu"
            android:layout_marginTop="@dimen/ershi"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编号：123456"
                android:textColor="@color/test_color"
                android:textSize="@dimen/text_eightteensp" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/shiwu"
                android:text="日期：2018-02-12"
                android:textColor="@color/test_color"
                android:textSize="@dimen/text_eightteensp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/ershi"
            android:layout_marginTop="50dp"
            android:src="@mipmap/zx_ls_chakan" />
    </RelativeLayout>


</LinearLayout>