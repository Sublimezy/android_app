<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <include
        android:id="@+id/submit_usedcar_indent_include"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom"
        android:layout_below="@+id/submit_usedcar_indent_include"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/all_zouyou"
            android:paddingRight="@dimen/all_zouyou">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sanshi"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_head"
                    android:layout_width="@dimen/bashi"
                    android:layout_height="@dimen/liushi"
                    android:scaleType="fitXY"
                    android:src="@mipmap/lunbotu" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/shiwu"
                    android:textColor="@color/_4f4f4f"
                    android:textSize="@dimen/text_ershisp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/sanshi"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_getcar_address"
                    android:drawableLeft="@mipmap/qu_used_car_indent_submit"
                    android:text="   哈尔滨市学易车取车"
                    android:gravity="center_vertical"
                    android:textColor="@color/_666"
                    android:textSize="@dimen/text_eightteensp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_getcar_date"
                        android:layout_marginLeft="@dimen/sanshiwu"
                        android:text="取车时间"
                        android:gravity="center_vertical"
                        android:textColor="@color/_9999"
                        android:layout_marginTop="@dimen/shiwu"
                        android:textSize="@dimen/side_letter_bar_letter_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/change_getcar_date"
                        android:layout_marginLeft="@dimen/sanshiwu"
                        android:text="修改"
                        android:gravity="center_vertical"
                        android:textColor="@color/colorOrange"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/shiwu"
                        android:textSize="@dimen/side_letter_bar_letter_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/sanshi"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_returncar_address"
                    android:drawableLeft="@mipmap/huan_used_car_indent_submit"
                    android:text="   哈尔滨市学易车还车"
                    android:gravity="center_vertical"
                    android:textColor="@color/_666"
                    android:textSize="@dimen/text_eightteensp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_returncar_date"
                        android:layout_marginLeft="@dimen/sanshiwu"
                        android:text="还车时间"
                        android:gravity="center_vertical"
                        android:textColor="@color/_9999"
                        android:layout_marginTop="@dimen/shiwu"
                        android:textSize="@dimen/side_letter_bar_letter_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/change_returncar_date"
                        android:layout_marginLeft="@dimen/sanshiwu"
                        android:text="修改"
                        android:gravity="center_vertical"
                        android:textColor="@color/colorOrange"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/shiwu"
                        android:textSize="@dimen/side_letter_bar_letter_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/ershiwu"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_total_date"
                    android:textColor="@color/colorOrange"
                    android:text="共0天"
                    android:textSize="@dimen/text_ershisp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_total_price"
                        android:textColor="@color/colorOrange"
                        android:text="¥0"
                        android:textSize="24sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_mingxi"
                        android:textColor="@color/test_color"
                        android:text="费用明细  "
                        android:layout_marginTop="@dimen/shiwu"
                        android:drawableRight="@mipmap/jiantou"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/side_letter_bar_letter_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>
            <View
                android:layout_marginTop="@dimen/sanshi"
                style="@style/_cccline"/>
            <TextView
                android:text="1.租车须知"
                android:textSize="@dimen/text_fifteensp"
                android:textColor="@color/_4f4f4f"
                android:layout_marginTop="@dimen/sanshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="取车凭证：本人信用卡+本人二代有效身份证+本人驾驶证、副本。"
                android:textSize="@dimen/side_letter_bar_letter_size"
                android:textColor="@color/test_color"
                android:layout_marginTop="@dimen/slide_top_and_left_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="2.租车须知"
                android:textSize="@dimen/text_fifteensp"
                android:textColor="@color/_4f4f4f"
                android:layout_marginTop="@dimen/slide_top_and_left_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="下单前，需上传本人身份证图片+绑定信用卡。"
                android:textSize="@dimen/side_letter_bar_letter_size"
                android:textColor="@color/test_color"
                android:layout_marginTop="@dimen/slide_top_and_left_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="取车去，需上传本人驾驶证图片。"
                android:textSize="@dimen/side_letter_bar_letter_size"
                android:textColor="@color/test_color"
                android:layout_marginTop="@dimen/slide_top_and_left_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="具体权利义务以门店取车时签署的租车合同为准。"
                android:textSize="@dimen/side_letter_bar_letter_size"
                android:textColor="@color/test_color"
                android:layout_marginBottom="@dimen/ershi"
                android:layout_marginTop="@dimen/slide_top_and_left_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
<LinearLayout
    android:id="@+id/ll_bottom"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_height="@dimen/all_include_height">
    <View
      style="@style/_cccline"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="@dimen/zero"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/shifujine"
                android:textColor="@color/_4f4f4f"
                android:textSize="@dimen/text_ershisp" />
            <TextView
                android:id="@+id/tv_pay_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:text="0"
                android:textColor="@color/_4f4f4f"
                android:textSize="@dimen/text_ershisp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="@color/_4f4f4f"
                android:textSize="@dimen/text_fifteensp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="@dimen/zero"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/colorOrange"
            android:gravity="center"
            android:text="立即支付"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_ershisp" />
    </LinearLayout>
</LinearLayout>

</RelativeLayout>