<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_tijiao"
        android:layout_below="@+id/title">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_brand"
                android:layout_width="match_parent"
                android:layout_height="@dimen/liushiba">

                <TextView
                    style="@style/order_practice_title"
                    android:text="品牌车系" />

                <LinearLayout style="@style/order_practice_right_ll">

                    <TextView
                        android:id="@+id/tv_choose_car_style"
                        style="@style/order_practice_chooice_content" />

                    <ImageView
                        style="@style/order_practice_right_jiantou"
                        android:src="@mipmap/jiantou" />
                </LinearLayout>
            </RelativeLayout>

            <View style="@style/_cccline" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/liushiba">

                <TextView
                    style="@style/order_practice_title"
                    android:text="当前里程（万公里）" />

                <EditText
                    android:id="@+id/et_kil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="请输入"
                    android:inputType="number|numberDecimal"
                    android:textColor="@color/_4f4f4f"
                    android:textColorHint="@color/_cccccc"
                    android:textCursorDrawable="@drawable/edittext_cursor"
                    android:textSize="@dimen/text_eightteensp" />

            </RelativeLayout>

            <View style="@style/_cccline" />

            <RelativeLayout
                android:id="@+id/rl_car_location"
                android:layout_width="match_parent"
                android:layout_height="@dimen/liushiba">

                <TextView
                    style="@style/order_practice_title"
                    android:text="车辆所在地" />

                <LinearLayout style="@style/order_practice_right_ll">

                    <TextView
                        android:id="@+id/tv_choose_car_location"
                        style="@style/order_practice_chooice_content" />

                    <ImageView
                        style="@style/order_practice_right_jiantou"
                        android:src="@mipmap/jiantou" />
                </LinearLayout>
            </RelativeLayout>

            <View style="@style/_cccline" />

            <RelativeLayout
                android:id="@+id/rl_is_bendi"
                android:layout_width="match_parent"
                android:layout_height="@dimen/liushiba">

                <TextView
                    style="@style/order_practice_title"
                    android:text="是否为当地车牌" />

                <LinearLayout style="@style/order_practice_right_ll">

                    <TextView
                        android:id="@+id/tv_local_car_card"
                        style="@style/order_practice_chooice_content" />

                    <ImageView
                        style="@style/order_practice_right_jiantou"
                        android:src="@mipmap/jiantou" />
                </LinearLayout>
            </RelativeLayout>

            <View style="@style/_cccline" />

            <RelativeLayout
                android:id="@+id/rl_guohu_number"
                android:layout_width="match_parent"
                android:layout_height="@dimen/liushiba">

                <TextView
                    style="@style/order_practice_title"
                    android:text="过户次数" />

                <LinearLayout style="@style/order_practice_right_ll">

                    <TextView
                        android:id="@+id/tv_choose_transfer_number"
                        style="@style/order_practice_chooice_content" />

                    <ImageView
                        style="@style/order_practice_right_jiantou"
                        android:src="@mipmap/jiantou" />
                </LinearLayout>
            </RelativeLayout>

            <View style="@style/_cccline" />

            <RelativeLayout
                android:id="@+id/rl_shangpan_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/liushiba">

                <TextView
                    style="@style/order_practice_title"
                    android:text="初次上牌时间" />

                <LinearLayout style="@style/order_practice_right_ll">

                    <TextView
                        android:id="@+id/tv_choose_first_onTheCards_time"
                        style="@style/order_practice_chooice_content" />

                    <ImageView
                        style="@style/order_practice_right_jiantou"
                        android:src="@mipmap/jiantou" />
                </LinearLayout>
            </RelativeLayout>

            <View style="@style/_cccline" />

            <RelativeLayout
                android:id="@+id/rl_car_kuang"
                android:layout_width="match_parent"
                android:layout_height="@dimen/liushiba">

                <TextView
                    style="@style/order_practice_title"
                    android:text="车况" />

                <LinearLayout style="@style/order_practice_right_ll">

                    <TextView
                        android:id="@+id/tv_choose_vehicle_condition"
                        style="@style/order_practice_chooice_content" />

                    <ImageView
                        style="@style/order_practice_right_jiantou"
                        android:src="@mipmap/jiantou" />
                </LinearLayout>
            </RelativeLayout>

            <View style="@style/_cccline" />

            <RelativeLayout
                android:id="@+id/rl_follow_up"
                android:layout_width="match_parent"
                android:layout_height="@dimen/liushiba">

                <TextView
                    style="@style/order_practice_title"
                    android:text="后续计划" />

                <LinearLayout style="@style/order_practice_right_ll">

                    <TextView
                        android:id="@+id/tv_choose_followUp_plan"
                        style="@style/order_practice_chooice_content" />

                    <ImageView
                        style="@style/order_practice_right_jiantou"
                        android:src="@mipmap/jiantou" />
                </LinearLayout>
            </RelativeLayout>

            <View style="@style/_cccline" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_tijiao"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorOrange"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/color_white"
        android:textSize="20sp" />
</RelativeLayout>