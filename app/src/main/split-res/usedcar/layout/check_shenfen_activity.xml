<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/color_white"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/checkshenfen_include"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_tijiao"
        android:layout_below="@+id/checkshenfen_include"

        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/liushiwu">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/all_zouyou"
                android:text="姓名"
                android:textColor="@color/_4f4f4f"
                android:textSize="@dimen/text_ershisp" />

            <com.xueyiche.zjyk.xueyiche.mine.view.MClearEditText
                android:id="@+id/ed_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/all_zouyou"
                android:maxLength="5"
                android:hint="请输入真实姓名"
                android:lines="1"
                android:textColor="@color/_9999"
                android:gravity="right"
                android:textSize="@dimen/text_fifteensp"
                app:mClearEditText_showBottomLine="false" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/all_zouyou"
            android:layout_marginRight="@dimen/all_zouyou"
            android:background="@color/_cccccc" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/liushiwu">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/all_zouyou"
                android:text="身份证号"
                android:textColor="@color/_4f4f4f"
                android:textSize="@dimen/text_ershisp" />

            <com.xueyiche.zjyk.xueyiche.mine.view.MClearEditText
                android:id="@+id/ed_idcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/all_zouyou"
                android:hint="请输入身份证号"
                android:lines="1"
                android:maxLength="18"
                android:digits="0123456789Xx"
                android:textColor="@color/_9999"
                android:textSize="@dimen/text_fifteensp"
                app:mClearEditText_showBottomLine="false" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/all_zouyou"
            android:layout_marginRight="@dimen/all_zouyou"
            android:background="@color/_cccccc" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/liushiwu">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/all_zouyou"
                android:text="证件有效期"
                android:textColor="@color/test_color"
                android:textSize="@dimen/text_ershisp" />

            <TextView
                android:id="@+id/ed_idcard_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/all_zouyou"
                android:hint="请输入证件有效期"
                android:lines="1"
                android:textColor="@color/_9999"
                android:textSize="@dimen/text_fifteensp"
                app:mClearEditText_showBottomLine="false" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/all_zouyou"
            android:layout_marginRight="@dimen/all_zouyou"
            android:background="@color/_cccccc" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_tijiao"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorOrange"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/color_white"
        android:textSize="20sp" />
</RelativeLayout>