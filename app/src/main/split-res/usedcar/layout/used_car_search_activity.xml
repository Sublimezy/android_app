<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="46dp"
            android:layout_toLeftOf="@+id/iv_title_search"
            android:layout_toRightOf="@+id/iv_login_back"
            android:background="@drawable/sousuo_background"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/tv_search_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/shiwu"
                android:background="@null"
                android:hint="搜索您想要的车"
                android:maxLines="1"
                android:textColor="@color/_4f4f4f"
                android:textCursorDrawable="@drawable/edittext_cursor"
                android:textSize="@dimen/text_eightteensp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="@dimen/slide_top_and_left"
                android:layout_marginTop="3dp"
                android:src="@mipmap/ic_search" />
        </RelativeLayout>

        <TextView
            android:id="@+id/iv_title_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="52dp"
            android:text="取消"
            android:textColor="@color/_3232"
            android:textSize="@dimen/text_eightteensp" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/sanshi"
            android:paddingRight="@dimen/sanshi">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ershiwu"
                    android:text="历史记录"
                    android:textColor="@color/_666"
                    android:textSize="@dimen/text_ershisp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_clean_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/ershijiu"
                    android:src="@mipmap/search_clean" />
            </RelativeLayout>


            <com.xueyiche.zjyk.xueyiche.homepage.view.MyGridView
                android:id="@+id/gv_history_search_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:listSelector="@color/color_white"
                android:layout_marginTop="@dimen/shiwu"
                android:numColumns="3"
                android:verticalSpacing="@dimen/shiwu" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/sanshi"
                android:background="@color/_cccccc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sanshi"
                android:text="热门搜索"
                android:textColor="@color/_666"
                android:textSize="@dimen/text_ershisp"
                android:textStyle="bold" />

            <com.xueyiche.zjyk.xueyiche.homepage.view.MyGridView
                android:id="@+id/gv_search_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/shiwu"
                android:numColumns="3"
                android:listSelector="@color/color_white"
                android:verticalSpacing="@dimen/shiwu" />
        </LinearLayout>


    </ScrollView>
</LinearLayout>