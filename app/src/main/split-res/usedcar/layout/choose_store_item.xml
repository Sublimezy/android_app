<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ershiwu"
        android:orientation="horizontal">

        <com.xueyiche.zjyk.xueyiche.driverschool.view.RoundImageView
            android:id="@+id/iv_store_imag"
            android:layout_width="110dp"
            android:layout_height="@dimen/jiushi"
            android:scaleType="fitXY"
            android:src="@mipmap/lunbotu" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/shiwu"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:lineSpacingExtra="@dimen/slide_top_and_left"
                android:text="你欧迪芬谁都撒谎飞碟说飞虎队撒哦飞虎队撒佛的赛道啥佛光"
                android:textColor="@color/_4f4f4f"
                android:textSize="@dimen/text_fifteensp" />
            <LinearLayout
                android:layout_marginTop="@dimen/shiwu"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="4dp"
                    android:src="@mipmap/choose_store_item_location"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="3dp"
                    android:id="@+id/tv_store_address"
                    android:text="  哈尔滨市松北滨市松北滨市松北区滨市松北区区科技大厦"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:textColor="@color/test_color"
                    android:textSize="@dimen/side_letter_bar_letter_size" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="@dimen/shiwu"
        style="@style/_cccline"/>
</LinearLayout>