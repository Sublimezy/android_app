<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_title"
        android:gravity="center_vertical"
        android:background="@color/color_white"
        android:layout_height="80dp">
        <LinearLayout
            android:id="@+id/ll_exam_back"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/sishi"
            android:layout_marginLeft="@dimen/slide_top_and_left_two"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_login_back"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/driver_school_back_hei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_login_back"
                android:text=""
                style="@style/shop_title_1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="37dp"
            android:layout_marginLeft="@dimen/sanshi"
            android:layout_toRightOf="@+id/ll_exam_back"
            android:layout_toLeftOf="@+id/tv_search"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="@dimen/all_zouyou"
            android:background="@drawable/sousuo_background"
            android:layout_height="34dp">
            <TextView
                android:id="@+id/tv_search_title"
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:hint="输入地址选择周边门店"
                android:maxLines="1"
                android:gravity="center_vertical"
                android:layout_centerHorizontal="true"
                android:textColor="@color/_4f4f4f"
                android:textCursorDrawable="@drawable/edittext_cursor"
                android:background="@null"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/iv_serch_quxiao"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="3dp"
                android:src="@mipmap/carlife_service_search"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="7dp"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:text="搜索"
            android:layout_marginTop="45dp"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:textColor="@color/_4f4f4f"
            android:layout_marginRight="12dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/_cccccc"
        android:layout_height="1px"/>
</LinearLayout>