<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/color_white"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.xueyiche.zjyk.xueyiche.usedcar.view.UsedCarFlyBanner
                android:id="@+id/fb_rent_car"
                android:layout_width="match_parent"
                android:layout_height="160dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="50dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/used_car_rent_qu" />

                <TextView
                    android:id="@+id/tv_qu_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/sanjiao"
                    android:paddingLeft="15dp"
                    android:text="哈尔滨" />

                <TextView
                    android:id="@+id/tv_qu_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="请选择门店"
                    android:textColor="@color/_9999"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_qu_sd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:src="@mipmap/used_car_rent_daodian" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="25dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/used_car_rent_huan" />

                <TextView
                    android:id="@+id/tv_huan_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/sanjiao"
                    android:paddingLeft="15dp"
                    android:text="哈尔滨" />

                <TextView
                    android:id="@+id/tv_huan_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="请选择门店"
                    android:textColor="@color/_9999"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_huan_sd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:src="@mipmap/used_car_rent_daodian" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sanshiwu"
                android:paddingLeft="@dimen/all_zouyou"
                android:paddingRight="@dimen/all_zouyou">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/ll_begin_time"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开始时间"
                        android:textColor="@color/_666"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/shiwu"
                        android:text="请选择开始时间"
                        android:textColor="@color/_9999"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_total_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="共0小时"
                    android:textColor="@color/colorOrange"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_jiantou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/rent_jiantou"

                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_end_time"
                    android:gravity="center_horizontal"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="结束时间"
                        android:textColor="@color/_666"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/shiwu"
                        android:text="请选择结束时间"
                        android:textColor="@color/_9999"
                        android:textSize="@dimen/side_letter_bar_letter_size" />
                </LinearLayout>
            </RelativeLayout>

            <Button
                android:id="@+id/vt_now_chose"
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_include_height"
                android:layout_marginRight="@dimen/sishi"
                android:layout_marginLeft="@dimen/sishi"
                android:text="立即选车"
                android:textSize="@dimen/text_ershisp"
                android:textColor="@color/color_white"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/all_include_height"
                android:background="@drawable/driver_submit_shape" />
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/test_color"
                android:textSize="@dimen/text_ershisp"
                android:textStyle="bold"
                android:text="车型推荐"
                android:layout_marginLeft="@dimen/all_zouyou"
                android:layout_marginTop="@dimen/all_include_height"
                android:layout_height="wrap_content" />
            <com.xueyiche.zjyk.xueyiche.homepage.view.AdListView
                android:id="@+id/lv_car_tuijian"
                android:divider="@null"
                android:layout_marginLeft="@dimen/all_zouyou"
                android:layout_marginRight="@dimen/all_zouyou"
                android:layout_marginTop="@dimen/slide_top_and_left_two"
                android:listSelector="@color/color_white"
                android:layout_width="match_parent"
                android:scrollbars="none"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>