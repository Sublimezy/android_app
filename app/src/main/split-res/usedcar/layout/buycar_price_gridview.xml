<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:seekbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/dialog_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_listview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ersiba"
        android:background="@color/_f2f3f4f5"
        android:orientation="vertical">

        <com.xueyiche.zjyk.xueyiche.homepage.view.MyGridView
            android:id="@+id/gv_shaixuan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/all_zouyou"
            android:layout_marginRight="@dimen/all_zouyou"
            android:layout_marginTop="@dimen/slide_top_and_left_two"
            android:listSelector="#00ffffff"
            android:numColumns="3"
            android:scrollbars="none"
            android:verticalSpacing="@dimen/shiwu" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/all_zouyou"
            android:layout_marginRight="@dimen/all_zouyou"
            android:layout_marginTop="@dimen/shiwu">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自定义价格（单位：万）"
                android:textColor="@color/test_color"
                android:textSize="@dimen/side_letter_bar_letter_size" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/tv_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/ershiwu"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/text_fifteensp" />

                <TextView
                    android:id="@+id/tv_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="确定"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/side_letter_bar_letter_size" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/slide_top_and_left_two">

            <TextView
                android:layout_width="@dimen/all_zouyou"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:text="ad" />

            <com.xueyiche.zjyk.xueyiche.usedcar.view.RangeSeekbar
                android:id="@+id/seekbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_weight="2"
                seekbar:leftCursorBackground="@drawable/seek_bar_bg"
                seekbar:rightCursorBackground="@drawable/seek_bar_bg"
                seekbar:seekbarColorNormal="@color/_cccccc"
                seekbar:seekbarColorSelected="@color/colorOrange"
                seekbar:seekbarHeight="3dp"
                seekbar:spaceBetween="0dp"
                seekbar:textColorNormal="@color/test_color"
                seekbar:textColorSelected="@color/test_color"
                seekbar:textSize="15dp" />

            <TextView
                android:layout_width="@dimen/all_zouyou"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_alignParentRight="true"
                android:text="ad" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_heng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/all_zouyou"
            android:orientation="horizontal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_xian"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sanshiqipx"
        android:layout_below="@+id/ll_listview"
        android:background="@color/color_white"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:src="@mipmap/choose_top" />
    </LinearLayout>
</RelativeLayout>