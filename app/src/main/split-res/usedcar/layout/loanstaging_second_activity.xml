<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/color_white"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/fenjidaikuan_include"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_below="@+id/fenjidaikuan_include"
        android:layout_width="match_parent"
        android:layout_above="@+id/tv_tijiao"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/ll_top"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/text_ershisp"
                    android:textColor="@color/_4f4f4f"
                    android:text="您能获得的分期额度？"
                    android:paddingLeft="@dimen/all_zouyou"
                    android:paddingRight="@dimen/all_zouyou"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/ershiwu"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:id="@+id/ll_chaxun_after"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/ershi"
                    android:visibility="gone"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="@dimen/text_fifteensp"
                            android:textColor="@color/test_color"
                            android:text="根据您的资质，您可分期"
                            android:paddingLeft="@dimen/all_zouyou"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="@dimen/shiwu"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textSize="@dimen/text_fifteensp"
                            android:textColor="@color/colorOrange"
                            android:text="30.0"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="@dimen/shiwu"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textSize="@dimen/text_fifteensp"
                            android:textColor="@color/test_color"
                            android:text="万"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="@dimen/shiwu"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <TextView
                        android:textSize="@dimen/side_letter_bar_letter_size"
                        android:textColor="@color/_cccccc"
                        android:text="注：最终可分期金额以实际合同为准"
                        android:paddingLeft="@dimen/all_zouyou"
                        android:paddingRight="@dimen/all_zouyou"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/shiwu"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="@dimen/text_fifteensp"
                            android:textColor="@color/test_color"
                            android:text="分期"
                            android:paddingLeft="@dimen/all_zouyou"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="@dimen/all_include_height"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textSize="@dimen/text_fifteensp"
                            android:textColor="@color/colorOrange"
                            android:text="30.08"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="@dimen/all_include_height"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textSize="@dimen/text_fifteensp"
                            android:textColor="@color/test_color"
                            android:text="万，您可以考虑以下车源"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="@dimen/all_include_height"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_gusuan"
                    android:textSize="@dimen/text_fifteensp"
                    android:textColor="@color/test_color"
                    android:text="估算您能获得的分期额度"
                    android:paddingLeft="@dimen/all_zouyou"
                    android:paddingRight="@dimen/all_zouyou"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/all_include_height"
                    android:layout_height="wrap_content" />

                <View
                    android:id="@+id/view_line"
                    android:layout_below="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginRight="@dimen/all_zouyou"
                    android:layout_marginLeft="@dimen/all_zouyou"
                    android:layout_marginTop="@dimen/ershiwu"
                    android:background="@color/_cccccc" />
            </LinearLayout>

            <com.xueyiche.zjyk.xueyiche.homepage.view.AdListView
                android:id="@+id/lv_daikuan"
                android:divider="@null"
                android:layout_below="@+id/ll_top"
                android:scrollbars="none"
                android:paddingRight="@dimen/all_zouyou"
                android:paddingLeft="@dimen/all_zouyou"
                android:layout_marginTop="@dimen/si"
                android:listSelector="@color/color_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/tv_tijiao"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorOrange"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/color_white"
        android:textSize="20sp" />
</RelativeLayout>