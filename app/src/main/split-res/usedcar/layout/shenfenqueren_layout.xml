<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <include
        android:id="@+id/shenfenqueren_include"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_next"
        android:layout_below="@+id/shenfenqueren_include">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/ll_idcard_zheng_bg"
                android:layout_width="310dp"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/ershiwu"
                android:background="@mipmap/bg_xuxian"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="310dp"
                    android:layout_height="160dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sishi"
                        android:src="@mipmap/add_image" />

                    <TextView
                        android:id="@+id/tv_idcard_zheng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="扫描身份证正面"
                        android:textColor="@color/_cccccc"
                        android:textSize="18sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_idcard_zheng"
                    android:layout_width="310dp"
                    android:layout_height="160dp"
                    android:scaleType="fitXY" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/ll_idcard_fan_bg"
                android:layout_width="310dp"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/shiwu"
                android:layout_marginTop="@dimen/ershiwu"
                android:background="@mipmap/bg_xuxian"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="310dp"
                    android:layout_height="160dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sishi"
                        android:src="@mipmap/add_image" />

                    <TextView
                        android:id="@+id/tv_idcard_fan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="扫描身份证反面"
                        android:textColor="@color/_cccccc"
                        android:textSize="18sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_idcard_fan"
                    android:layout_width="310dp"
                    android:layout_height="160dp"
                    android:scaleType="fitXY" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份证不在身边？你也可以" />

                <TextView
                    android:id="@+id/tv_shoudongshuru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shoudongshuru"
                    android:textColor="@color/colorOrange" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/all_include_height"
        android:layout_alignParentBottom="true"
        android:background="@color/colorOrange"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/color_white"
        android:textSize="20sp" />
</RelativeLayout>