<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rk_item_onclick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/qishi"
            android:text="zhanglei"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:textColor="@color/test_color"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/liushiba"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/slide_top_and_left"
                android:layout_centerVertical="true"
                android:textColor="@color/test_color"
                android:textSize="20sp" />
            <ImageView
                android:id="@+id/iv_jiantou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:src="@mipmap/jiantou"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </LinearLayout>

    </RelativeLayout>


    <View
        android:layout_below="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/_cccccc" />
</LinearLayout>