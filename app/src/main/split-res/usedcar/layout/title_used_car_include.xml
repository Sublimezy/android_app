<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@color/color_white">

        <LinearLayout
            android:id="@+id/ll_exam_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/slide_top_and_left_two"
            android:layout_marginTop="@dimen/sishi"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_login_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/driver_school_back_hei" />

            <TextView
                android:id="@+id/tv_login_back"
                style="@style/shop_title_1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sishiyi"
            android:text="购车"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="80dp"
            android:textColor="@color/_3333"
            android:textSize="@dimen/text_seveneensp" />

        <ImageView
            android:id="@+id/iv_saoma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="47dp"
            android:src="@mipmap/usedcar_erweima"
            android:visibility="gone" />

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginTop="@dimen/sishi"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/choice_shaixuan"
            android:textColor="#161616"
            android:textSize="@dimen/text_sixteensp"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>