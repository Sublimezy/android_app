<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_shop_top_backg"
        android:background="@mipmap/shop_top_bg"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:clickable="true">

        <ImageView
            android:id="@+id/iv_shop_back_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="45dp"
            android:src="@mipmap/car_meirong_back" />

        <TextView
            android:id="@+id/tv_shop_title_xiuxi"
            android:layout_width="wrap_content"
            android:text="休息中..."
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:textColor="@color/color_white"
            android:paddingTop="13dp"
            android:textSize="18dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_shop_kefu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginTop="46dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/kefu_content_bai" />
        <ImageView
            android:id="@+id/iv_shop_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="46dp"
            android:layout_marginRight="44dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/share_shop" />
        <ImageView
            android:id="@+id/iv_shop_shoucang_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="74dp"
            android:layout_marginTop="46dp"
            android:src="@mipmap/shoucang_shop" />
    </RelativeLayout>
</LinearLayout>