<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/all_zouyou"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.xueyiche.zjyk.xueyiche.driverschool.view.RoundImageView
                    android:id="@+id/iv_bg"
                    android:layout_width="109dp"
                    android:layout_height="84dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/lunbotu" />

                <com.xueyiche.zjyk.xueyiche.driverschool.view.RoundImageView
                    android:id="@+id/iv_photo_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/pinggu_photo" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="@dimen/shiwu"
                android:text="学易车"
                android:textColor="#4f4f4f"
                android:textSize="@dimen/text_fifteensp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_no_content"
                android:layout_width="wrap_content"
                android:textColor="@color/_666"
                android:textSize="15sp"
                android:text=""
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>