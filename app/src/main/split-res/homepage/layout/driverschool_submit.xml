<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <include
        android:id="@+id/driver_pay_include"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_bottom"
        android:layout_below="@+id/driver_pay_include"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_school_head"
                    android:layout_width="75dp"
                    android:scaleType="fitXY"
                    android:layout_height="75dp"
                    android:src="@mipmap/lunbotu"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/all_16dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_shop_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="哈尔滨中电巨鹰考场"
                        android:layout_marginTop="10dp"
                        android:textColor="#ff333333"
                        android:textSize="17sp"
                        />
                    <TextView
                        android:id="@+id/tv_service_content"
                        android:layout_width="154dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="16dp"
                        android:text="哈尔滨松北区龙轩路西侧"
                        android:textColor="#ff666666"
                        android:textSize="14sp"
                        />
                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginBottom="@dimen/shisan"
                android:layout_marginTop="@dimen/all_16dp"
                android:background="#F9F7F7" />

            <LinearLayout
                android:id="@+id/ll_caotan_chose"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sishiwu"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/shop_title_40"
                    android:layout_gravity="center_vertical"
                    android:text="服务项目" />

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_taocan"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_marginRight="@dimen/all_zouyou"
                    android:gravity="center_vertical"
                    android:hint="请选择"
                    android:lines="1"
                    android:textColor="@color/_3232"
                    android:textCursorDrawable="@drawable/edittext_cursor"
                    android:textSize="@dimen/text_sixteensp"
                    app:mClearEditText_showBottomLine="false"

                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="@dimen/shisan"
                android:layout_marginTop="@dimen/shisan"
                android:background="@color/_cccccc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:layout_height="@dimen/sishiwu"
                android:orientation="horizontal">

                <TextView
                    style="@style/shop_title_40"
                    android:layout_gravity="center_vertical"
                    android:text="姓        名" />

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.xueyiche.zjyk.xueyiche.mine.view.MClearEditText
                    android:id="@+id/tv_driver_content_name"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_marginRight="@dimen/all_zouyou"
                    android:gravity="right"
                    android:hint="请输入姓名"
                    android:lines="1"
                    android:textColor="@color/_3232"
                    android:textCursorDrawable="@drawable/edittext_cursor"
                    android:textSize="@dimen/text_sixteensp"
                    app:mClearEditText_showBottomLine="false"

                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="@dimen/shisan"
                android:layout_marginTop="@dimen/shisan"
                android:background="@color/_cccccc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:layout_height="@dimen/sishiwu"
                android:orientation="horizontal">

                <TextView
                    style="@style/shop_title_40"
                    android:layout_gravity="center_vertical"
                    android:text="身份证号" />

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.xueyiche.zjyk.xueyiche.mine.view.MClearEditText
                    android:id="@+id/tv_driver_content_card"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/sishisi"
                    android:layout_marginRight="@dimen/all_zouyou"
                    android:digits="0123456789Xx"
                    android:gravity="right"
                    android:hint="@string/shenfenzhnghao"
                    android:lines="1"
                    android:maxLength="18"
                    android:textColor="@color/_3232"
                    android:textCursorDrawable="@drawable/edittext_cursor"
                    android:textSize="@dimen/text_sixteensp"
                    app:mClearEditText_showBottomLine="false" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="@dimen/shisan"
                android:layout_marginTop="@dimen/shisan"
                android:background="@color/_cccccc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:layout_height="@dimen/sishiwu"
                android:orientation="horizontal">

                <TextView
                    style="@style/shop_title_40"
                    android:layout_gravity="center_vertical"
                    android:text="手 机 号" />

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_driver_content_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:lines="1"
                    android:textColor="@color/_3232"
                    android:textSize="@dimen/text_sixteensp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="@dimen/shisan"
                android:layout_marginTop="@dimen/shisan"
                android:background="@color/_cccccc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:layout_height="@dimen/sishiwu"
                android:orientation="horizontal">

                <TextView
                    style="@style/shop_title_40"
                    android:layout_gravity="center_vertical"
                    android:text="服务价格" />

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_service_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:lines="1"
                    android:textColor="@color/_3232"
                    android:textSize="@dimen/text_sixteensp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="@dimen/shisan"
                android:layout_marginTop="@dimen/shisan"
                android:background="@color/_cccccc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:layout_height="@dimen/sishiwu"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_dingjin"
                    style="@style/shop_title_40"
                    android:layout_gravity="center_vertical"
                    android:text="支付定金" />

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_driver_school_dingjin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:lines="1"
                    android:textColor="@color/_3232"
                    android:textSize="@dimen/text_sixteensp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/shisan"
                android:background="@color/_cccccc" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="22dp"
                android:orientation="vertical">

                <TextView
                    style="@style/shop_title_40"
                    android:textColor="#ff666666"
                    android:textSize="17sp"
                    android:text="是否有推荐人：" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="14dp"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/rb_ok"
                        android:layout_width="wrap_content"
                        android:button="@null"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/driver_school_select"
                        android:gravity="center_vertical"
                        android:text="  有"
                        android:textColor="#ff333333"
                        android:textSize="18sp"
                        />

                    <RadioButton
                        android:id="@+id/rb_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:checked="true"
                        android:drawableLeft="@drawable/driver_school_select"
                        android:gravity="center_vertical"
                        android:text="  无"
                        android:layout_marginLeft="25dp"
                        android:textColor="#ff333333"
                        android:textSize="18sp" />

                </RadioGroup>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:id="@+id/ll_tuijianren_phone"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/_cccccc" />
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sishiwu"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <TextView
                        style="@style/shop_title_40"
                        android:text="推荐人手机号：" />

                    <com.xueyiche.zjyk.xueyiche.mine.view.MClearEditText
                        android:id="@+id/tv_tuijian_phone"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_marginRight="@dimen/all_zouyou"
                        android:layout_weight="1"
                        android:hint="请输入手机号"
                        android:inputType="number"
                        android:lines="1"
                        android:maxEms="11"
                        android:textColor="@color/_4f4f4f"
                        android:textSize="@dimen/text_sixteensp"
                        app:mClearEditText_showBottomLine="false" />

                    <TextView
                        android:id="@+id/tv_tuijian_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="()"
                        android:textColor="@color/_4f4f4f"
                        android:textSize="@dimen/text_sixteensp"
                        android:visibility="gone" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="@dimen/shisan"
                android:layout_marginTop="@dimen/shisan"
                android:background="@color/_cccccc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/all_16dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentBottom="true">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="实付金额:"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_pay_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text=" ¥ -----"
                    android:textColor="#ffef3a2e"
                    android:textSize="21sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <Button
                android:id="@+id/bt_indent_content_ok"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:background="@drawable/cheng_yuan_bg"
                android:layout_gravity="center_horizontal"
                android:text="立即支付"
                android:textStyle="bold"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="38dp"
                android:textColor="@color/color_white"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>