<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_item_pinpai_listview_letter"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/liushiwu"
        android:text="A"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_fifteensp"
        android:textColor="@color/test_color"
        android:clickable="false"/>
    <View
        android:layout_width="match_parent"
        android:background="@color/_cccccc"
        android:layout_height="@dimen/yipx"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="@dimen/liushiwu">
        <ImageView
            android:layout_width="@dimen/sishi"
            android:id="@+id/iv_car"
            android:padding="@dimen/si"
            android:scaleType="centerCrop"
            android:src="@mipmap/lunbotu"
            android:layout_height="@dimen/all_include_height"
             />

        <TextView
            android:id="@+id/tv_car"
            android:layout_gravity="center_vertical"
            android:textColor="@color/_4f4f4f"
            android:textSize="20sp"
            android:layout_marginLeft="@dimen/slide_top_and_left_two"
            android:padding="@dimen/slide_top_and_left_two"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/_cccccc"
        android:layout_height="@dimen/yipx"/>
</LinearLayout>