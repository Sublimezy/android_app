<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/all_zouyou"
        android:layout_marginRight="@dimen/all_zouyou"
        android:layout_marginTop="@dimen/shiwu"
        android:lineSpacingExtra="@dimen/si"
        android:text="考虑符合拉康师傅safhdslkfh的史莱克安徽发了多少立刻返回科技大厦老坏"
        android:textColor="@color/_3333"
        android:textSize="@dimen/text_seveneensp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/shiwu"
        android:layout_marginBottom="@dimen/shiwu"
        android:layout_marginLeft="@dimen/all_zouyou"
        android:layout_marginRight="@dimen/all_zouyou"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_head_one"
            android:src="@mipmap/lunbotu"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/yilingba"
            android:layout_height="@dimen/qishiwu" />
        <ImageView
            android:layout_marginLeft="@dimen/shiyi"
            android:id="@+id/iv_head_two"
            android:src="@mipmap/lunbotu"
            android:layout_marginRight="@dimen/shiyi"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/yilingba"
            android:layout_height="@dimen/qishiwu" />
        <ImageView
            android:id="@+id/iv_head_three"
            android:src="@mipmap/lunbotu"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/yilingba"
            android:layout_height="@dimen/qishiwu" />
    </RelativeLayout>
    <View
        android:background="@color/all_line_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/yi"/>
</LinearLayout>