<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/yibi_queren_include"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/yi"
        android:background="@color/all_line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sishiwu"
        android:layout_marginLeft="@dimen/all_zouyou"
        android:layout_marginRight="@dimen/all_zouyou">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textColor="@color/test_color"
            android:textSize="20sp" />

        <com.xueyiche.zjyk.xueyiche.mine.view.MClearEditText
            android:id="@+id/ed_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sishisi"
            android:layout_marginLeft="@dimen/ershi"
            android:layout_marginRight="@dimen/all_zouyou"
            android:hint="请输入收货人姓名"
            android:lines="1"
            android:textColor="@color/_4f4f4f"
            android:textSize="20sp"
            app:mClearEditText_showBottomLine="false" />
    </LinearLayout>

    <View
        android:layout_marginRight="@dimen/all_zouyou"
        android:layout_marginLeft="@dimen/all_zouyou"
        style="@style/_cccline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sishiwu"
        android:layout_marginLeft="@dimen/all_zouyou"
        android:layout_marginRight="@dimen/all_zouyou">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话"
            android:textColor="@color/test_color"
            android:textSize="20sp" />

        <com.xueyiche.zjyk.xueyiche.mine.view.MClearEditText
            android:id="@+id/ed_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sishisi"
            android:layout_marginLeft="@dimen/ershi"
            android:layout_marginRight="@dimen/all_zouyou"
            android:hint="请输入收货人电话"
            android:lines="1"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="@color/_4f4f4f"
            android:textSize="20sp"
            app:mClearEditText_showBottomLine="false" />
    </LinearLayout>
    <View
        android:layout_marginRight="@dimen/all_zouyou"
        android:layout_marginLeft="@dimen/all_zouyou"
        style="@style/_cccline" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sishiwu"
        android:layout_marginLeft="@dimen/all_zouyou"
        android:layout_marginRight="@dimen/all_zouyou">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址"
            android:textColor="@color/test_color"
            android:textSize="20sp" />

        <com.xueyiche.zjyk.xueyiche.mine.view.MClearEditText
            android:id="@+id/ed_location"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sishisi"
            android:layout_marginLeft="@dimen/ershi"
            android:layout_marginRight="@dimen/all_zouyou"
            android:hint="请输入收货人地址"
            android:lines="1"

            android:textColor="@color/_4f4f4f"
            android:textSize="20sp"
            app:mClearEditText_showBottomLine="false" />
    </LinearLayout>

    <View
        android:layout_marginRight="@dimen/all_zouyou"
        android:layout_marginLeft="@dimen/all_zouyou"
        style="@style/_cccline" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/all_include_height"
        android:paddingLeft="@dimen/all_zouyou"
        android:paddingRight="@dimen/all_zouyou">

        <ImageView
            android:id="@+id/iv_indent_head"
            android:layout_width="@dimen/yibaidp"
            android:layout_height="@dimen/yibaidp"
            android:layout_marginBottom="@dimen/ershi"
            android:scaleType="centerCrop"
            android:src="@mipmap/lunbotu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/yibaidp"
            android:layout_marginLeft="@dimen/shiwu"
            android:layout_toRightOf="@+id/iv_indent_head"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_indent_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学易车拉杆箱"
                    android:textColor="@color/_3333"
                    android:textSize="@dimen/text_seveneensp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X 1"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/_3333"
                    android:textSize="@dimen/text_seveneensp" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/shiwu">

                <TextView
                    android:id="@+id/tv_indent_yibi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/slide_top_and_left_two"
                    android:text="1800易币"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/text_fifteensp" />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:background="@color/all_line_color"
        android:layout_height="0dp">

    </LinearLayout>
    <LinearLayout
        android:id="@+id/rl_bottom"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/all_include_height"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/zero"
            android:orientation="vertical"
            android:clickable="true"

            android:background="@color/color_white"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/si"
                android:orientation="horizontal"
                android:gravity="center_vertical"

                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_goods_money"
                    android:layout_width="wrap_content"
                    android:text="总计："
                    android:textColor="@color/test_color"
                    android:textSize="@dimen/text_fourteensp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@mipmap/yibi_jifen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_pay_yibi"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorOrange"
                    android:text="1800"
                    android:textSize="@dimen/text_fourteensp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/bt_xiadan"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorOrange"
            android:text="立即下单"
            android:textColor="@color/color_white"
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>