<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/yibi_content_include"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <WebView
        android:id="@+id/shop_web"
        android:layout_above="@+id/view_one"
        android:layout_below="@+id/yibi_content_include"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <View
        android:id="@+id/view_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/yi"
        android:layout_above="@+id/rl_bottom"
        android:background="@color/all_line_color" />

    <LinearLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/all_include_height"
        android:layout_alignParentBottom="true"
        android:background="@color/color_white"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_share"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
           android:background="@color/color_white"
            android:text="分享"
            android:textColor="@color/test_color"
            android:textSize="18sp" />
    <LinearLayout
        android:id="@+id/ll_pay"
        android:layout_width="@dimen/zero"
        android:orientation="vertical"
        android:clickable="true"
        android:background="@color/colorOrange"
        android:gravity="center_horizontal"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/si"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_goods_money"
                android:layout_width="wrap_content"
                android:text="100易币"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_fourteensp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_goods_yuanjia_shop"
                android:layout_width="wrap_content"
                android:textColor="@color/color_white"
                android:text="立即支付"
                android:textSize="@dimen/text_eightteensp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
</RelativeLayout>