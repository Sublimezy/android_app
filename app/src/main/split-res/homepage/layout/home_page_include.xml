<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/home_title"
    android:layout_height="match_parent"
    android:background="@color/_22000000"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_include_location"
        android:layout_width="@dimen/ershi"
        android:layout_height="@dimen/ershi"
        android:layout_marginLeft="@dimen/ershi"
        android:layout_marginTop="@dimen/sanshier"
        android:src="@mipmap/home_city" />

    <TextView
        android:id="@+id/text_include_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/slide_top_and_left"
        android:layout_marginTop="@dimen/sanshier"
        android:layout_toRightOf="@+id/image_include_location"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_fourteensp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/sanshiqi"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_eightteensp" />

    <ImageView

        android:id="@+id/image_include_search"
        android:layout_width="@dimen/ershi"
        android:layout_height="@dimen/ershi"
        android:layout_marginRight="@dimen/slide_top_and_left_two"
        android:layout_marginTop="@dimen/sishi"
        android:layout_toLeftOf="@+id/image_include_message"
         />

    <ImageView
        android:id="@+id/image_include_message"
        android:layout_width="@dimen/ershi"
        android:layout_height="@dimen/ershi"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/slide_top_and_left_two"
        android:layout_marginTop="@dimen/sishi"
        android:src="@mipmap/home_past" />
</RelativeLayout>