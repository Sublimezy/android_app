<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">
    <!--标题-->
    <include
        android:id="@+id/baoxian_indent_include"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    style="@style/shangchuan_content"
                    android:text="姓名" />

                <EditText
                    android:id="@+id/ed_name"
                    style="@style/shangchuan_content_ed"
                    android:hint="请输入" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/yi"
                android:background="@color/all_line_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    style="@style/shangchuan_content"
                    android:text="年龄" />

                <EditText
                    android:id="@+id/ed_old"
                    android:inputType="number"
                    style="@style/shangchuan_content_ed"
                    android:hint="请输入" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/yi"
                android:background="@color/all_line_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/shangchuan_content"
                    android:text="性别" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/all_zouyou">

                    <RadioButton
                        android:id="@+id/rb_man"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/sishiwu"
                        android:layout_marginRight="@dimen/ershi"
                        android:button="@null"
                        android:checked="true"
                        android:drawableLeft="@drawable/driver_school_select"
                        android:gravity="center_vertical"
                        android:text="   男"
                        android:textColor="@color/_3333"
                        android:textSize="@dimen/text_sixteensp" />

                    <RadioButton
                        android:id="@+id/rb_woman"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/sishiwu"
                        android:button="@null"
                        android:drawableLeft="@drawable/driver_school_select"
                        android:gravity="center_vertical"
                        android:text="   女"
                        android:textColor="@color/_3333"
                        android:textSize="@dimen/text_sixteensp" />


                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/yi"
                android:background="@color/all_line_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    style="@style/shangchuan_content"

                    android:text="身份证号" />

                <EditText
                    android:id="@+id/ed_idcard"
                    android:digits="0123456789xX"
                    style="@style/shangchuan_content_ed"
                    android:hint="请输入" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/yi"
                android:background="@color/all_line_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >

                <TextView
                    style="@style/shangchuan_content"
                    android:text="手机号" />

                <EditText
                    android:id="@+id/ed_phone"
                    android:inputType="number"
                    android:maxLength="11"
                    style="@style/shangchuan_content_ed"
                    android:hint="请输入" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/yi"
                android:background="@color/all_line_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
               >

                <TextView
                    style="@style/shangchuan_content"
                    android:text="品牌车系" />

                <TextView
                    android:id="@+id/ed_car_style"
                    style="@style/shangchuan_content_ed"
                    android:text="请输入"
                    android:layout_marginRight="@dimen/sanshi"
                     />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/all_zouyou"
                    android:src="@mipmap/jiantou" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/yi"
                android:background="@color/all_line_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
              >

                <TextView
                    style="@style/shangchuan_content"
                    android:text="车牌" />

                <EditText
                    android:id="@+id/ed_carnumber"
                    style="@style/shangchuan_content_ed"
                    android:hint="请输入" />
            </RelativeLayout>

            <TextView
                style="@style/shangchuan_title"
                android:text="上传身份证照片" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ershi">

                <FrameLayout
                    android:id="@+id/fl_idcard_zheng"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="@dimen/shiwu"
                    android:background="@mipmap/bg_xuxian"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/slide_top_and_left_two"
                        android:layout_marginTop="@dimen/slide_top_and_left_two"
                        android:text="正面"
                        android:textColor="@color/_9999"
                        android:textSize="@dimen/side_letter_bar_letter_size" />

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:src="@mipmap/add" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="上传照片"
                            android:textColor="#999999"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_idcard_zheng"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/fl_idcard_fan"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/shiwu"
                    android:background="@mipmap/bg_xuxian"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/slide_top_and_left_two"
                        android:layout_marginTop="@dimen/slide_top_and_left_two"
                        android:text="反面"
                        android:textColor="@color/_9999"
                        android:textSize="@dimen/side_letter_bar_letter_size" />

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:src="@mipmap/add" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="上传照片"
                            android:textColor="#999999"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_idcard_fan"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY" />
                </FrameLayout>
            </RelativeLayout>

            <TextView
                style="@style/shangchuan_title"
                android:layout_marginTop="@dimen/ershi"
                android:text="上传行驶证照片" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp">

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="12dp"
                    android:background="@mipmap/xingshizheng">

                    <TextView
                        style="@style/shili"
                        android:text="示例" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/ll_xingshizheng_bg"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:background="@mipmap/bg_xuxian"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:src="@mipmap/add" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="上传照片"
                            android:textColor="#999999"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_xingshizheng"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY" />
                </FrameLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/all_line_color"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="@dimen/wushisi"
                    android:layout_weight="1"
                    android:background="@color/all_line_color"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/ershi"
                    android:text="注意：预约可享受20%~30%优惠"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/side_letter_bar_letter_size" />

                <TextView
                    android:id="@+id/tv_toubao"
                    android:layout_width="@dimen/view_pager_turn_top"
                    android:layout_height="@dimen/wushisi"
                    android:background="@color/colorOrange"
                    android:gravity="center"
                    android:text="立即投保"
                    android:layout_marginTop="@dimen/ershi"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/text_sixteensp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>