<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <include
        android:id="@+id/yibi_wuliu_include"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_wuliu_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/all_zouyou"
        android:layout_marginTop="@dimen/ershiwu"
        android:text="物流公司：张磊速运"
        android:textColor="@color/test_color"
        android:textSize="@dimen/text_eightteensp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_wuliu_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/all_zouyou"
            android:layout_marginTop="@dimen/shiwu"
            android:text="物流单号：18346012117"
            android:textColor="@color/test_color"
            android:textSize="@dimen/text_eightteensp" />

        <Button
            android:id="@+id/bt_fuzhi"
            android:layout_width="@dimen/all_include_height"
            android:layout_height="@dimen/ershiwu"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/all_zouyou"
            android:layout_marginTop="@dimen/shiqi"
            android:background="@drawable/button_white"
            android:text="复制"
            android:textColor="@color/test_color"
            android:textSize="@dimen/text_fifteensp" />
    </RelativeLayout>

    <View
        android:layout_marginTop="@dimen/ershiwu"
        android:layout_marginRight="@dimen/all_zouyou"
        android:layout_marginLeft="@dimen/all_zouyou"
        style="@style/_cccline"/>
    <!--物流追踪的列表-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_liucheng"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/sanshi"
        />
</LinearLayout>