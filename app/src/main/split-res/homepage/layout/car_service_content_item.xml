<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_car_service"
    android:paddingLeft="13dp" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/car_service_content_name"
        android:textColor="@color/_3232"
        android:textSize="@dimen/text_sixteensp"
        android:layout_marginTop="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/car_service_content_ct"
        android:textColor="@color/_9999"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/slide_top_and_left_two"
        android:layout_width="wrap_content"
        android:minLines="2"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_marginTop="@dimen/slide_top_and_left_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_car_service_content_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/car_service_content_money"
                    android:textSize="15sp"
                    android:text="sdfdsf"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/_9999"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:id="@+id/yuanjia_"
                    android:layout_centerVertical="true"
                    android:background="@color/_9999"
                    android:layout_width="50dp"
                    android:layout_height="1dp"/>
            </RelativeLayout>

        </FrameLayout>
        <TextView
            android:id="@+id/car_service_content_pay"
            android:textColor="@color/red"
            android:layout_marginLeft="80dp"
            android:layout_toRightOf="@+id/car_service_content_money"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/car_service_content_maidan"
            android:layout_marginRight="@dimen/all_zouyou"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/car_service_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <View
        android:background="@color/all_line_color"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="1dp"/>

</LinearLayout>