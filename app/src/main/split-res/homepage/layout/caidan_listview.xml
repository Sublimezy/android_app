<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/dialog_bg"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_listview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ersiba"
        android:orientation="horizontal"
        >
        <ListView
            android:id="@+id/yijicandan"
            android:layout_width="@dimen/zero"
            android:layout_weight="1"
            android:divider="@null"
            android:scrollbars="none"
            android:layout_height="match_parent"
            android:background="@color/white"/>
        <ListView
            android:id="@+id/erjicaidan"
            android:background="@color/_f9f9f9"
            android:layout_width="@dimen/zero"
            android:layout_weight="2"
            android:scrollbars="none"
            android:divider="@null"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_xian"
        android:layout_width="match_parent"
        android:layout_below="@+id/ll_listview"
        android:background="@color/color_white"
        android:gravity="center"
        android:layout_height="@dimen/sanshiqipx">
        <ImageView
            android:layout_centerHorizontal="true"
            android:src="@mipmap/choose_top"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>