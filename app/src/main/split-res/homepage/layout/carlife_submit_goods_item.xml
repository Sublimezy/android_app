<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/qishi"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qishi"
        android:gravity="center_vertical">

        <TextView
            android:layout_toLeftOf="@+id/tv_goods_money"
            android:layout_marginRight="20dp"
            android:id="@+id/tv_goods_name"
            style="@style/shop_title_40"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:text="产品总额" />

        <TextView
            android:id="@+id/tv_goods_money"
            style="@style/shop_title_40"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:text="¥1300" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/yipx"
        android:background="@color/_cccccc" />

</LinearLayout>