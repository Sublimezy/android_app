<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/color_white"
    android:layout_height="match_parent">
    <include
        android:id="@+id/title_include"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_carlife"
        android:layout_below="@+id/title_include"
        android:layout_width="match_parent"
        android:background="@color/color_white"
        android:layout_marginTop="@dimen/shiwu"
        android:layout_marginLeft="@dimen/all_zouyou"
        android:layout_above="@+id/iv_xiayibu"
        android:layout_height="match_parent"/>
    <Button
        android:id="@+id/iv_xiayibu"
        android:layout_width="200dp"
        android:textColor="@color/color_white"
        android:text="下一步"
        android:textSize="15sp"
        android:background="@drawable/button_shape"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/slide_top_and_left_two"
        android:layout_marginTop="@dimen/slide_top_and_left_two"
        android:layout_height="wrap_content" />
</RelativeLayout>