<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:background="@color/colorOrange"
    android:layout_width="match_parent"
    android:layout_height="76dp">

    <LinearLayout
        android:id="@+id/ll_question_back"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/sanshier"
        android:layout_marginLeft="@dimen/slide_top_and_left_two"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@mipmap/test_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/all_back"
            android:layout_gravity="center_vertical"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_sixteensp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_title_num"
        android:text="@string/shu"
        android:layout_marginTop="34dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_fifteensp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:id="@+id/ll_collection"
        android:layout_marginRight="@dimen/slide_top_and_left_two"
        android:layout_marginTop="18dp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/ck_collection"
            android:layout_gravity="center_horizontal"
            android:button="@null"
            android:text="@string/collection"
            android:layout_width="wrap_content"
            android:textColor="@color/color_white"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout >