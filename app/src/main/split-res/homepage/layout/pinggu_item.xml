        android:text="周边服务"
        android:layout_marginTop="10dp"
        android:textColor="@color/test_color"
        android:textSize="@dimen/text_fourteensp" />
    <com.xueyiche.zjyk.xueyiche.custom.MaxRecyclerView
        android:id="@+id/rv_carlife"
        android:layout_width="match_parent"
        android:background="@color/color_white"
        android:layout_marginTop="@dimen/shiwu"
        android:layout_marginLeft="@dimen/all_zouyou"
        android:layout_height="match_parent"/>
</LinearLayout>