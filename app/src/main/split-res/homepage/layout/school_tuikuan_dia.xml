<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_practice_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/ershi"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="@dimen/sanshi"
            android:textSize="@dimen/text_sixteensp"
            android:text="姓           名："
            android:textColor="@color/_3232"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:textSize="@dimen/text_fifteensp"
            android:layout_marginLeft="@dimen/slide_top_and_left"
            android:id="@+id/ed_order_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/shuruzhenhsi" />

    </LinearLayout>
    <View
        android:layout_marginTop="@dimen/slide_top_and_left"
        android:background="@color/all_line_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/yi"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/ershi"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_idcard"
            android:layout_marginLeft="@dimen/sanshi"
            android:textColor="@color/_3232"
            android:textSize="@dimen/text_sixteensp"
            android:text="手    机    号："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="@dimen/text_fifteensp"
            android:layout_marginLeft="@dimen/slide_top_and_left"
            android:id="@+id/ed_order_phone"
            android:numeric="integer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/qingshurushoujihao" />
    </LinearLayout>
    <View
        android:background="@color/all_line_color"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/slide_top_and_left"
        android:layout_height="@dimen/yi"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/ershi"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/text_sixteensp"
            android:text="银 行 卡 号："
            android:layout_marginLeft="@dimen/sanshi"
            android:textColor="@color/_3232"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:textSize="@dimen/text_fifteensp"
            android:layout_marginLeft="@dimen/slide_top_and_left"
            android:id="@+id/ed_card_number"
            android:numeric="integer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/qingshurulianmingkahao" />

    </LinearLayout>
    <View
        android:background="@color/all_line_color"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/slide_top_and_left"
        android:layout_height="@dimen/yi"/>
       <TextView
        android:layout_width="wrap_content"
        android:text="@string/wenxintishi"
        android:textSize="12sp"
        android:layout_marginTop="@dimen/ershi"
        android:layout_marginLeft="@dimen/sanshi"
        android:textColor="@color/colorOrange"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="@string/yinhangkawenxintishi"
        android:textSize="9sp"
        android:lineSpacingExtra = "3dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/sanshi"
        android:layout_marginRight="@dimen/sanshi"
        android:textColor="@color/colorOrange"
        android:layout_height="wrap_content" />
</LinearLayout>