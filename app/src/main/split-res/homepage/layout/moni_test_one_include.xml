<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:background="@color/colorOrange"
    android:layout_width="match_parent"
    android:layout_height="76dp">

    <LinearLayout
        android:id="@+id/ll_moni_back"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="@dimen/slide_top_and_left_two"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@mipmap/test_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/all_back"
            android:layout_gravity="center_vertical"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_sixteensp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_title_time"
        android:text="45:00"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="34dp"
        android:layout_toRightOf="@+id/ll_moni_back"
        android:textColor="@color/color_white"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_title_num"
        android:text="1/100"
        android:layout_marginTop="34dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_white"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_title_give"
        android:text="交卷"
        android:layout_marginLeft="@dimen/sishi"
        android:layout_marginTop="34dp"
        android:layout_toRightOf="@+id/tv_title_num"
        android:textColor="@color/color_white"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/slide_top_and_left_two"
        android:layout_marginTop="34dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/ck_moni_collection"
            android:layout_gravity="center_horizontal"
            android:text="收藏"
            android:textSize="16sp"
            android:textColor="@color/color_white"
            android:layout_width="wrap_content"
            android:button="@null"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout >