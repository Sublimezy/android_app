<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/dialog_bg"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_dis"
        android:layout_width="wrap_content"
        android:src="@mipmap/login_cancle"
        android:layout_marginTop="12dp"
        android:layout_gravity="right"
        android:layout_marginRight="12dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_title"
        android:textColor="@color/colorOrange"
        android:text="@string/wenxinTishi"
        android:textSize="@dimen/text_seveneensp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/sanshi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_content"
        android:text="@string/shenqingxinxi"
        android:textSize="@dimen/text_fourteensp"
        android:textColor="@color/test_color"
        android:layout_marginLeft="@dimen/shiwu"
        android:layout_marginRight="@dimen/shiwu"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/sanshi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/bt_know"
        android:text="@string/zhidaole"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_fifteensp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_shape"
        android:layout_width="@dimen/jiushi"
        android:layout_marginBottom="@dimen/ershiliu"
        android:layout_marginTop="@dimen/sanshi"
        android:layout_height="@dimen/ershiqi" />
</LinearLayout>