<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:minHeight="@dimen/yibaisan"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/all_16dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_kemusan"
            android:scaleType="fitXY"
            android:src="@mipmap/lunbotu"
            android:layout_width="@dimen/yibailiu"
            android:layout_height="@dimen/jiushisi" />
        <TextView
            android:id="@+id/tv_kemusan"
            android:textSize="@dimen/text_fourteensp"
            android:layout_marginTop="@dimen/slide_top_and_left_two"
            android:textColor="@color/_3232"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>