<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/yibaisan"
            android:layout_height="@dimen/jiushi"
            android:layout_marginBottom="@dimen/shiwu"
            android:layout_marginLeft="@dimen/all_zouyou"
            android:layout_marginTop="@dimen/shiwu"
            android:scaleType="centerCrop"
            android:src="@mipmap/lunbotu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/shiwu"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/all_zouyou"
                android:layout_marginRight="@dimen/all_zouyou"
                android:lineSpacingExtra="@dimen/si"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/_3333"
                android:textSize="@dimen/text_seveneensp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/slide_top_and_left"
                android:layout_marginLeft="@dimen/all_zouyou"
                android:layout_marginRight="@dimen/all_zouyou"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/tv_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ershisan"
                    android:gravity="bottom"
                    android:text="新华网"
                    android:textColor="@color/test_color"
                    android:textSize="@dimen/text_fourteensp" />

                <TextView
                    android:id="@+id/tv_order_sn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/ershisan"
                    android:gravity="bottom"
                    android:text="2017-06-18 07:56"
                    android:textColor="@color/_9999"
                    android:textSize="@dimen/side_letter_bar_letter_size" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/yi"
        android:background="@color/all_line_color" />
</LinearLayout>