<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
        <!--洗车美容的筛选-->
        <RadioGroup
            android:id="@+id/ll_shaixuantiaojian"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sishier"
            android:visibility="gone"
            android:layout_below="@+id/car_meirong_include"
            android:layout_marginLeft="@dimen/all_16dp"
            android:layout_marginRight="@dimen/all_16dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/ll_choice_city"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/sishier"
                android:button="@null"
                android:drawableRight="@drawable/selector"
                android:text="区域 "
                android:lines="1"
                android:textColor="@drawable/shaixuan_text_color"
                android:textSize="@dimen/text_fifteensp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/shugang_choice" />
            <RadioButton
                android:id="@+id/ll_choice_service"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/sishier"
                android:lines="1"
                android:button="@null"
                android:drawableRight="@drawable/selector"
                android:text="普通洗车 "
                android:textColor="@drawable/shaixuan_text_color"
                android:textSize="@dimen/text_fifteensp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/shugang_choice" />
            <RadioButton
                android:id="@+id/ll_choice_carstyle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/sishier"
                android:button="@null"
                android:lines="1"
                android:drawableRight="@drawable/selector"
                android:text="车型 "
                android:textColor="@drawable/shaixuan_text_color"
                android:textSize="@dimen/text_fifteensp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/shugang_choice" />

            <RadioButton
                android:layout_gravity="end"
                android:id="@+id/ll_choice_paixu"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/sishier"
                android:button="@null"
                android:lines="1"
                android:drawableRight="@drawable/selector"
                android:text="默认排序 "
                android:textColor="@drawable/shaixuan_text_color"
                android:textSize="@dimen/text_fifteensp" />
        </RadioGroup>
    <RadioGroup
        android:id="@+id/ll_shaixuantiaojian_weixiu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sishier"
        android:visibility="gone"
        android:layout_below="@+id/car_meirong_include"
        android:layout_marginLeft="@dimen/all_16dp"
        android:layout_marginRight="@dimen/all_16dp"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/ll_choice_city_weixiu"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sishier"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingLeft="@dimen/all_include_height"
            android:paddingRight="@dimen/all_include_height"
            android:drawableRight="@drawable/selector"
            android:text="@string/quyu"
            android:textColor="@drawable/shaixuan_text_color"
            android:textSize="@dimen/text_fifteensp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@mipmap/shugang_choice" />

        <RadioButton
            android:layout_weight="1"
            android:id="@+id/ll_choice_paixu_weixiu"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sishier"
            android:button="@null"
            android:gravity="center"
            android:paddingLeft="@dimen/all_include_height"
            android:paddingRight="@dimen/all_include_height"
            android:drawableRight="@drawable/selector"
            android:text="@string/morenpaixu"
            android:textColor="@drawable/shaixuan_text_color"
            android:textSize="@dimen/text_fifteensp" />
    </RadioGroup>
    <RadioGroup
        android:id="@+id/ll_shaixuantiaojian_4s"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@+id/car_meirong_include"
        android:layout_marginLeft="@dimen/all_16dp"
        android:visibility="gone"
        android:layout_marginRight="@dimen/all_16dp"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/ll_choice_pinpai_4s"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:button="@null"
            android:paddingLeft="20dp"
            android:drawableRight="@drawable/selector"
            android:text="品牌  "
            android:textColor="@drawable/shaixuan_text_color"
            android:textSize="15sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:src="@mipmap/shugang_choice" />
        <RadioButton
            android:id="@+id/ll_choice_city_4s"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:button="@null"
            android:paddingLeft="35dp"
            android:drawableRight="@drawable/selector"
            android:text="区域  "
            android:textColor="@drawable/shaixuan_text_color"
            android:textSize="15sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:src="@mipmap/shugang_choice" />

        <RadioButton
            android:layout_gravity="right"
            android:id="@+id/ll_choice_paixu_4s"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:button="@null"
            android:paddingLeft="@dimen/sanshiwu"
            android:drawableRight="@drawable/selector"
            android:text="默认排序  "
            android:textColor="@drawable/shaixuan_text_color"
            android:textSize="15sp" />
    </RadioGroup>
    <RadioGroup
        android:id="@+id/ll_shaixuantiaojian_ktv"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@+id/car_meirong_include"
        android:layout_marginLeft="@dimen/all_16dp"
        android:visibility="gone"
        android:layout_marginRight="@dimen/all_16dp"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/ll_choice_city_ktv"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:button="@null"
            android:paddingLeft="20dp"
            android:drawableRight="@drawable/selector"
            android:text="区域  "
            android:textColor="@drawable/shaixuan_text_color"
            android:textSize="15sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:src="@mipmap/shugang_choice" />
        <RadioButton
            android:id="@+id/ll_choice_baoxing_ktv"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:button="@null"
            android:paddingLeft="35dp"
            android:drawableRight="@drawable/selector"
            android:text="包型  "
            android:textColor="@drawable/shaixuan_text_color"
            android:textSize="15sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:src="@mipmap/shugang_choice" />

        <RadioButton
            android:layout_gravity="right"
            android:id="@+id/ll_choice_paixu_ktv"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:button="@null"
            android:paddingLeft="@dimen/sanshiwu"
            android:drawableRight="@drawable/selector"
            android:text="默认排序  "
            android:textColor="@drawable/shaixuan_text_color"
            android:textSize="15sp" />
    </RadioGroup>
        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ll_shaixuantiaojian"
            android:background="@color/all_line_color" />

</LinearLayout>