<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_exam_back"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/sanshier"
        android:layout_marginLeft="@dimen/slide_top_and_left_two"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_login_back"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/yibi_shop_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_login_back"
            android:text="@string/all_back"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/test_color"
            android:textSize="@dimen/text_fifteensp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_title"
        android:layout_marginTop="@dimen/ershijiu"
        android:layout_centerHorizontal="true"
        android:textColor="@color/_3333"
        android:ellipsize="end"
        android:maxEms="10"
        android:singleLine="true"
        android:textSize="@dimen/text_eightteensp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_indent"
        android:layout_width="wrap_content"
        android:text="订单"
        android:layout_marginRight="15dp"
        android:padding="5dp"
        android:layout_marginTop="@dimen/sanshi"
        android:layout_alignParentRight="true"
        android:textColor="@color/test_color"
        android:textSize="@dimen/text_fifteensp"
        android:layout_height="wrap_content" />
</RelativeLayout >