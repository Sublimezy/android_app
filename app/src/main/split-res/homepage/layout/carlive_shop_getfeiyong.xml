<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:text="----"
        android:textColor="#0F0F0F"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_title_fu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:text=""
        android:textColor="#333333"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:layout_marginLeft="18dp"
            android:textColor="#ff454545"
            android:layout_marginTop="4dp"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/et_feiyong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dp"
            android:background="@null"

            android:hint="点击输入"
            android:inputType="number"
            android:maxLength="9"
            android:textColor="#EF3A2E"
            android:textSize="27sp" />

        <View
            android:layout_width="185dp"
            android:layout_below="@+id/et_feiyong"
            android:layout_height="1dp"
            android:background="#FF5000" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_quxiao"
            android:layout_width="wrap_content"
            android:src="@mipmap/csh_content_qx"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/tv_queren"
            android:layout_width="wrap_content"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/csh_content_qd"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>