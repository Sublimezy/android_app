<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_huojiang_item"
    android:paddingTop="@dimen/slide_top_and_left_two"
    android:paddingBottom="@dimen/slide_top_and_left_two"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="59dp"
        android:gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_huojiang_paiming"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#fec500"
            android:textSize="30px"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_huojiang_phone"
        android:layout_width="wrap_content"
        android:textColor="#2f2f2f"
        android:textSize="30px"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_huojiang_defen"
        android:layout_width="wrap_content"
        android:layout_marginLeft="21dp"
        android:textColor="#2f2f2f"
        android:textSize="30px"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_hupjiang_shijian"
        android:layout_width="wrap_content"
        android:layout_marginLeft="31dp"
        android:textColor="#2f2f2f"
        android:textSize="30px"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_huojiang_jiangjin"
        android:layout_width="wrap_content"
        android:layout_marginLeft="25dp"
        android:textColor="@color/colorOrange"
        android:textSize="28px"
        android:layout_height="wrap_content" />
</LinearLayout>