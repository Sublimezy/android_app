<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:text="----"
            android:layout_marginTop="@dimen/shiwu"
            android:textColor="@color/test_color"
            android:textSize="@dimen/text_eightteensp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:textColor="@color/_9999"
            android:layout_marginTop="@dimen/slide_top_and_left_two"
            android:textSize="@dimen/side_letter_bar_letter_size"
            android:text="----"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:src="@mipmap/driver_school_location"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/shiwu"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content" />
</RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/_cccccc"
        android:layout_marginTop="@dimen/shiwu"
        android:layout_height="1px"/>

</LinearLayout>