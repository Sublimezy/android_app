<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/yibi_indent_include"
        layout="@layout/yibi_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/view_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/yi"
        android:background="@color/all_line_color" />
    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_below="@+id/rg_indent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/list_view_shop"
                android:divider="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:id="@+id/ll_not_indent"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/yiyisan"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/not_indent"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/zanwuindent"
                    android:layout_marginTop="@dimen/ershisi"
                    android:textSize="@dimen/text_fifteensp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/_9999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>


    </FrameLayout>

</LinearLayout>