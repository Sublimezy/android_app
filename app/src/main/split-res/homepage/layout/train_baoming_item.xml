<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_car_fuwu_item_top"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/all_zouyou"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="@dimen/all_zouyou"
        android:layout_height="wrap_content">
        <TextView
            android:layout_toLeftOf="@+id/aaa"
            android:ellipsize="end"
            android:layout_alignParentLeft="true"
            android:lines="1"
            android:id="@+id/tv_shop_service_cartype"
            android:textColor="@color/_666"
            android:layout_width="wrap_content"
            android:paddingTop="15dp"
            android:text="-----"
            android:textSize="18sp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/aaa"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_goods_money_shop"
                android:paddingTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:textColor="@color/colorOrange"
                android:textSize="20sp"
                android:text="-----"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_fuwu_chick"
                android:layout_width="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="11dp"
                android:paddingRight="5dp"
                android:src="@mipmap/csh_fuwu_item_false"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_car_fuwu_item_more"
        android:textColor="@color/_9999"
        android:textSize="12sp"
        android:lineSpacingExtra="5dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="5dp"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:gravity="left"
        android:text=""
        android:layout_marginLeft="@dimen/all_zouyou"
        android:layout_marginRight="@dimen/all_zouyou"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/all_zouyou"
        android:layout_marginRight="@dimen/all_zouyou"
        android:background="@color/all_line_color"
        android:layout_height="@dimen/yi"/>
</LinearLayout>