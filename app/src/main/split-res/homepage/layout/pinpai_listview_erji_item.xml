<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="@dimen/liushiwu">
        <ImageView
            android:layout_width="@dimen/all_include_height"
            android:id="@+id/iv_car"
            android:scaleType="centerCrop"
            android:layout_marginLeft="@dimen/all_zouyou"
            android:src="@mipmap/lunbotu"
            android:layout_height="50dp"
            />

        <TextView
            android:id="@+id/tv_car"
            android:layout_gravity="center_vertical"
            android:textColor="@color/_3232"
            android:textSize="20sp"
            android:layout_marginLeft="@dimen/shiwu"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/_cccccc"
        android:layout_height="1px"/>

</LinearLayout>