<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sanerer"
        android:background="@color/_00ad6b"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sishi">

            <ImageView
                android:id="@+id/iv_achievement_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ershi"
                android:src="@mipmap/achievement_back" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_good_and_bad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/ershi"
                android:src="@mipmap/achievement_grade" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/shisi">

            <TextView
                android:id="@+id/tv_achievement_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/shisan"
                android:textColor="@color/color_white"
                android:textSize="@dimen/jiushiwu" />

            <TextView
                android:id="@+id/tv_achievement_fen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_achievement_grade"
                android:layout_marginLeft="@dimen/all_include_height"
                android:layout_marginRight="@dimen/ershi"
                android:layout_toRightOf="@+id/tv_achievement_grade"
                android:text="@string/tv_grade"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sanshijiu" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/shisi">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/shisan"
                android:text="@string/datiyingxinajingrade"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_fifteensp" />

            <TextView
                android:id="@+id/tv_achievement_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/ershi"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_fifteensp" />
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/iv_achievement_once"
        android:layout_marginTop="@dimen/ershisi"
        android:layout_gravity="center_horizontal"
        android:text="@string/once_test"
        android:textSize="@dimen/text_fifteensp"
        android:textColor="@color/color_white"
        android:layout_marginRight="@dimen/all_16dp"
        android:layout_marginLeft="@dimen/all_16dp"
        android:background="@drawable/button_shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>