<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:windowTranslucentNavigation="false">

    <include
        android:id="@+id/driver_school_include"
        layout="@layout/common_home_include"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bashi" />

    <View style="@style/all_line" />

    <RadioGroup
        android:id="@+id/ll_shaixuantiaojian"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sishi"
        android:layout_below="@+id/choice_card_title"
        android:background="@color/color_white"
        android:orientation="horizontal">
        <TextView style="@style/kongxi"
            />
        <RadioButton
            android:id="@+id/ll_choice_diqu"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sishier"
            android:layout_weight="1"
            android:button="@null"
            android:drawableRight="@drawable/selector"
            android:gravity="center"
            android:text="驾校区域"
            android:textColor="@drawable/shaixuan_text_color"
            android:textSize="@dimen/text_fifteensp" />
        <TextView style="@style/kongxi"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/all_line_color" />
        <RadioButton
            android:id="@+id/ll_choice_practice_diqu"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sishier"
            android:layout_weight="1"
            android:button="@null"
            android:drawableRight="@drawable/selector"
            android:gravity="center"
            android:text="练车区域"
            android:textColor="@drawable/shaixuan_text_color"
            android:textSize="@dimen/text_fifteensp" />
        <TextView style="@style/kongxi"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/all_line_color" />
        <RadioButton
            android:id="@+id/ll_choice_paixu"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sishier"
            android:layout_weight="1"
            android:button="@null"
            android:drawableRight="@drawable/selector"
            android:gravity="center"
            android:text="@string/morenpaixu"
            android:textColor="@drawable/shaixuan_text_color"
            android:textSize="@dimen/text_fifteensp" />
        <TextView style="@style/kongxi"
            />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/yi"
        android:background="@color/all_line_color" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            app:srlEnableAutoLoadMore="false"
            app:srlPrimaryColor="@color/color_white">

            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srlAccentColor="@color/colorOrange"
                app:srlDrawableProgress="@drawable/animation_loading_frame"
                app:srlPrimaryColor="@color/color_white" />

            <ListView
                android:id="@+id/lv_driving_school"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:divider="#00000000"
                android:background="@color/_f5f5f5"
                android:listSelector="@android:color/transparent"
                android:scrollbars="none" />


            <com.scwang.smartrefresh.header.StoreHouseHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:shhEnableFadeAnimation="true"
                app:shhText="XueYiChe" />
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        <LinearLayout
            android:id="@+id/ll_jiaxiao_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/not_indent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/slide_top_and_left_two"
                android:text="@string/zanwujiaxiao"
                android:textColor="@color/_666"
                android:textSize="@dimen/text_fourteensp" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>