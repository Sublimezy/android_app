<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="57dp"
                android:layout_marginRight="57dp"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">


                <View
                    android:layout_width="1dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:background="#979797" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/dp_30"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="38dp"
                    android:paddingRight="30dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_threed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:text="@string/wodecuoti"
                        android:drawableTop="@mipmap/test_wrong"
                        android:textColor="@color/test_color"
                        android:textSize="@dimen/text_fifteensp" />

                    <TextView
                        android:id="@+id/tv_fived"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/tesy_my_result"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="47dp"
                        android:text="@string/mychnegji"
                        android:textColor="@color/test_color"
                        android:textSize="@dimen/text_fifteensp" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/ll_test_practice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="38dp"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/test_shunxu_practice"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:paddingTop="@dimen/sanshi"
                            android:text="顺序练习"
                            android:textColor="@color/color_white"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_shunxuid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/color_white" />
                    </LinearLayout>



                    <TextView
                        android:id="@+id/tv_practice_test"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="模拟考试"
                        android:layout_marginTop="140dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:background="@mipmap/test_exam"
                        android:layout_centerInParent="true"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="38dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_twod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/zhuanxianglianxi"
                        android:textColor="@color/test_color"
                        android:drawableTop="@mipmap/test_ptactice"
                        android:textSize="@dimen/text_fifteensp" />
                    <TextView
                        android:id="@+id/tv_fourd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/mycollection"
                        android:drawableTop="@mipmap/test_selection"
                        android:textColor="@color/test_color"
                        android:textSize="@dimen/text_fifteensp" />

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>


