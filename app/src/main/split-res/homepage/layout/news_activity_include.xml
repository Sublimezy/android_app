<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:background="@color/colorOrange"
    android:id="@+id/ll_must"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_exam_back"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/sanshier"
        android:layout_marginLeft="@dimen/slide_top_and_left_two"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_login_back"
            android:text="@string/guanbi"
            android:layout_gravity="center_vertical"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_fifteensp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:text="每日新闻"
        android:id="@+id/tv_news_title"
        android:layout_marginTop="@dimen/ershijiu"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_eightteensp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout >