<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/all_zouyou"
        android:layout_marginRight="@dimen/all_zouyou"
        android:layout_marginTop="@dimen/shiwu"
        android:lineSpacingExtra="@dimen/si"
        android:text="考虑符合拉康师傅safhdslkfh的史莱克安徽发了多少立刻返回科技大厦老坏"
        android:textColor="@color/_3333"
        android:textSize="@dimen/text_seveneensp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/shiwu"
        android:layout_marginLeft="@dimen/all_zouyou"
        android:layout_marginRight="@dimen/all_zouyou"
        android:gravity="bottom">

        <TextView
            android:id="@+id/tv_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_marginTop="@dimen/slide_top_and_left_two"
            android:text="新华网"
            android:textColor="@color/test_color"
            android:textSize="@dimen/text_fourteensp" />

        <TextView
            android:id="@+id/tv_order_sn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="bottom"
            android:layout_marginTop="@dimen/slide_top_and_left_two"
            android:text="2017-06-18 07:56"
            android:textColor="@color/_9999"
            android:textSize="@dimen/side_letter_bar_letter_size" />
    </RelativeLayout>

<View
    android:background="@color/all_line_color"
    android:layout_width="match_parent"
    android:layout_height="@dimen/yi"/>
</LinearLayout>