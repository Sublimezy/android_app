<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/title"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/rg_indent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/indent_include"
                android:orientation="horizontal"
                >

                <RadioButton
                    android:id="@+id/rb_indent1"
                    style="@style/MenuTab"
                    android:background="@drawable/mine_selector_back"
                    android:checked="true"
                    android:drawablePadding="8dp"
                    android:text="全部"
                    android:textColor="@drawable/mine_selector_text"
                    android:textSize="14dp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/indent_radio"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rb_indent2"
                    style="@style/MenuTab"
                    android:background="@drawable/mine_selector_back"
                    android:drawablePadding="8dp"
                    android:text="待付款"
                    android:textColor="@drawable/mine_selector_text"
                    android:textSize="14dp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/indent_radio"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rb_indent3"
                    style="@style/MenuTab"
                    android:background="@drawable/mine_selector_back"
                    android:drawablePadding="8dp"
                    android:text="@string/progressing"
                    android:textColor="@drawable/mine_selector_text"
                    android:textSize="14dp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/indent_radio"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rb_indent4"
                    style="@style/MenuTab"
                    android:background="@drawable/mine_selector_back"
                    android:drawablePadding="8dp"
                    android:text="已完成"
                    android:textColor="@drawable/mine_selector_text"
                    android:textSize="14dp" />
            </RadioGroup>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/_cccccc" />
            <com.xueyiche.zjyk.xueyiche.main.view.NoScrollViewPager
                android:id="@+id/indent_view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rg_indent" />
        </LinearLayout>

</LinearLayout>