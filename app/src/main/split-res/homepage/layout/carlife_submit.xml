<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/carlife_submit_include"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />
    <LinearLayout
        android:id="@+id/llTiShi"
        android:background="@color/_eeeeee"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_below="@+id/carlife_submit_include"
        android:layout_height="@dimen/sanshi">
        <TextView
            android:id="@+id/tvTiShi"
            android:text="积分不足，还需。。。。"
            android:layout_marginLeft="@dimen/all_zouyou"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_fourteensp"
            android:textColor="@color/_4f4f4f"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvGoChongZhi"
            android:textColor="@color/colorOrange"
            android:layout_width="wrap_content"
            android:text="去充值 "
            android:textSize="@dimen/text_fourteensp"
            android:drawableRight="@mipmap/quchongzhi"
            android:layout_height="wrap_content" />




    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:layout_above="@+id/rl_bottom"
        android:layout_below="@+id/llTiShi">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:layout_marginLeft="@dimen/all_zouyou"
            android:layout_marginRight="@dimen/all_zouyou"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/liushi"
                android:layout_marginTop="@dimen/sanshi"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_school_head"
                    android:layout_width="@dimen/bashi"
                    android:layout_height="@dimen/liushi"
                    android:scaleType="fitXY"
                    android:src="@mipmap/lunbotu" />
                <TextView
                    android:id="@+id/tv_shop_name"
                    android:layout_marginLeft="@dimen/slide_top_and_left_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxEms="10"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="@dimen/slide_top_and_left"
                    style="@style/shop_title_1"
                    android:text="学易车商品"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/shisan"
                android:background="@color/_cccccc" />

            <com.xueyiche.zjyk.xueyiche.homepage.view.AdListView
                android:id="@+id/lv_service_content"
                android:divider="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/shisan"
                android:layout_height="@dimen/sishiwu"
                android:orientation="horizontal">

                <TextView
                    android:layout_gravity="center_vertical"
                    style="@style/shop_title_40"
                    android:text="产品总额"
                    />
                <TextView
                    android:id="@+id/tv_total_money"
                    android:layout_gravity="center_vertical"
                    style="@style/shop_title_40"
                    android:layout_alignParentRight="true"
                    android:text="¥--"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/yipx"
                android:layout_marginBottom="@dimen/shisan"
                android:layout_marginTop="@dimen/shisan"
                android:background="@color/_cccccc" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="@dimen/sishiwu"
                android:orientation="horizontal">
                <TextView
                    android:layout_gravity="center_vertical"
                    style="@style/shop_title_40"
                    android:text="折扣"
                    />
                <TextView
                    android:id="@+id/tv_zhekou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:text="可用--积分抵扣¥--"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/text_ershisp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/yipx"
                android:layout_marginBottom="@dimen/shisan"
                android:layout_marginTop="@dimen/shisan"
                android:background="@color/_cccccc" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="@dimen/sishiwu"
                android:orientation="horizontal">

                <TextView
                    android:layout_gravity="center_vertical"
                    style="@style/shop_title_40"
                    android:text="优惠券"
                    />
                <TextView
                    android:layout_alignParentRight="true"
                    android:id="@+id/tv_youhuiquan_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorOrange"
                    android:gravity="center_vertical"
                    android:drawableRight="@mipmap/jiantou"
                    android:textSize="@dimen/text_ershisp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/yipx"
                android:layout_marginBottom="@dimen/shisan"
                android:layout_marginTop="@dimen/shisan"
                android:background="@color/_cccccc" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="@dimen/sishiwu"
                android:orientation="horizontal">
                <TextView
                    android:layout_gravity="center_vertical"
                    style="@style/shop_title_40"
                    android:text="实际付款"
                    />
                <TextView
                    android:id="@+id/tv_shifu_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:text="¥--"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/text_ershisp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/yipx"
                android:layout_marginBottom="@dimen/shisan"
                android:layout_marginTop="@dimen/shisan"
                android:background="@color/_cccccc" />
        </LinearLayout>

    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/yi"
        android:layout_alignTop="@+id/rl_bottom"
        android:background="@color/all_line_color" />

    <LinearLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sishiba"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ershier"
            android:gravity="center_vertical"
            android:text="总金额:"
            android:textColor="@color/title_one"
            android:textSize="@dimen/text_eightteensp" />
        <TextView
            android:id="@+id/tv_pay_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/slide_top_and_left"
            android:gravity="center_vertical"
            android:text="--"
            android:textColor="@color/title_one"
            android:textSize="@dimen/text_eightteensp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/er"
            android:gravity="center_vertical"
            android:text="元"
            android:textColor="@color/title_one"
            android:textSize="@dimen/side_letter_bar_letter_size" />

        <TextView
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/bt_indent_content_ok"
            android:layout_width="145dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/colorOrange"
            android:text="立即支付"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_eightteensp" />

    </LinearLayout>


</RelativeLayout>