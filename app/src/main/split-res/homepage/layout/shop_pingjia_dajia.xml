<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/in_shop_pingjia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_pingjia_number"
                style="@style/shop_title_1"
                android:text="毕业晒证" />
            <TextView
                android:id="@+id/tv_pingjia_more"
                android:layout_width="wrap_content"
                android:text="更多"
                android:textSize="12dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="#ffb10c"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_pinglun"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_shop_pingjia_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/shiwu"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.xueyiche.zjyk.xueyiche.mine.view.CircleImageView
                        android:id="@+id/cv_pingjia_one"
                        android:layout_width="@dimen/sanshiba"
                        android:layout_height="@dimen/sanshiba"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/mine_head" />

                    <TextView
                        android:id="@+id/tv_pingjia_name_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/_3333"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_pingjia_date_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/all_zouyou"
                        android:gravity="right"
                        android:textColor="@color/_9999"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_pingjia_content_one"
                    android:layout_width="match_parent"
                    android:textColor="@color/_666"
                    android:textSize="16sp"
                    android:layout_marginTop="15dp"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:lineSpacingExtra="5dp"
                    android:text="" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/yi"
                android:background="@color/_f5f5f5" />

            <LinearLayout
                android:id="@+id/ll_shop_pingjia_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/shiwu"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.xueyiche.zjyk.xueyiche.mine.view.CircleImageView
                        android:id="@+id/cv_pingjia_two"
                        android:layout_width="@dimen/sanshiba"
                        android:layout_height="@dimen/sanshiba"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/mine_head" />

                    <TextView
                        android:id="@+id/tv_pingjia_name_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/_3333"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_pingjia_date_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/all_zouyou"
                        android:gravity="right"
                        android:textColor="@color/_9999"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_pingjia_content_two"
                    android:layout_width="match_parent"
                    android:textColor="@color/_666"
                    android:layout_marginTop="15dp"
                    android:textSize="15dp"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:lineSpacingExtra="5dp"
                    android:text="" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>