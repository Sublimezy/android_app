<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="196dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_all_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/all_zouyou"
        android:background="@color/color_white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_good_head"
            android:layout_width="170dp"
            android:layout_height="105dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/lunbotu" />

        <TextView
            android:id="@+id/tv_good_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/slide_top_and_left_two"
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="10"
            android:text="学易车普通洗车"
            android:textColor="@color/test_color"
            android:textSize="@dimen/text_fifteensp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/slide_top_and_left_two"
            android:layout_marginBottom="@dimen/ershi"
            android:orientation="horizontal">
            <ImageView
                android:src="@mipmap/yibi_jifen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_yibi_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/slide_top_and_left_two"
                android:ellipsize="end"
                android:lines="1"
                android:maxEms="10"
                android:text="300易币"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/text_fourteensp" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>