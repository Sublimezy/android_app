<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_30">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="38dp"
                    android:paddingRight="30dp">

                    <TextView
                        android:id="@+id/tv_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:drawableTop="@mipmap/test_wrong"
                        android:text="@string/wodecuoti"
                        android:textColor="@color/test_color"
                        android:textSize="@dimen/text_fifteensp" />

                    <TextView
                        android:id="@+id/tv_five"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="47dp"
                        android:drawableTop="@mipmap/tesy_my_result"
                        android:text="@string/mychnegji"
                        android:textColor="@color/test_color"
                        android:textSize="@dimen/text_fifteensp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_test_practice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/test_shunxu_practice"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:paddingTop="@dimen/sanshi"
                            android:text="顺序练习"
                            android:textColor="@color/color_white"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_shunxuid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/color_white" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_practice_test"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="40dp"
                        android:background="@mipmap/test_exam"
                        android:gravity="center"
                        android:text="模拟考试"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="38dp"
                    android:paddingRight="30dp">

                    <TextView
                        android:id="@+id/tv_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:drawableTop="@mipmap/test_ptactice"
                        android:text="@string/zhuanxianglianxi"
                        android:textColor="@color/test_color"
                        android:textSize="@dimen/text_fifteensp" />

                    <TextView
                        android:id="@+id/tv_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="47dp"
                        android:drawableTop="@mipmap/test_selection"
                        android:text="@string/mycollection"
                        android:textColor="@color/test_color"
                        android:textSize="@dimen/text_fifteensp" />
                </LinearLayout>


            </RelativeLayout>

            <RadioGroup
                android:id="@+id/subject_group"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/subject1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="科目一" />


                <RadioButton
                    android:id="@+id/subject4"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="科目四" />

            </RadioGroup>

            <ProgressBar
                android:id="@+id/progress_par"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/text_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="Progress"
                android:textSize="18sp" />

        </LinearLayout>


    </ScrollView>


</LinearLayout>


