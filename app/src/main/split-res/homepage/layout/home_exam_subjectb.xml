<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/all_16dp"
                android:layout_marginLeft="@dimen/all_16dp"
                android:text="科目二教程"
                android:layout_marginTop="@dimen/dp_30"
                android:textColor="#ff333333"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/yibaisi">

                <LinearLayout
                    android:id="@+id/ll_daoche"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/all_16dp"
                    android:orientation="vertical">

                    <com.xueyiche.zjyk.jiakao.custom.RoundImageView
                        android:layout_width="170dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/subject_b_01" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/slide_top_and_left_two"
                        android:text="@string/daocheruku"
                        android:textColor="@color/_3232"

                        android:textSize="@dimen/text_fourteensp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_poting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/all_16dp"
                    android:orientation="vertical">

                    <com.xueyiche.zjyk.jiakao.custom.RoundImageView
                        android:layout_width="170dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/subject_b_02" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/slide_top_and_left_two"
                        android:text="@string/qibu"
                        android:textColor="@color/_3232"
                        android:textSize="@dimen/text_fourteensp" />
                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="@dimen/yibaisi">

                <LinearLayout
                    android:id="@+id/ll_cefang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/all_16dp"
                    android:orientation="vertical">

                    <com.xueyiche.zjyk.jiakao.custom.RoundImageView

                        android:layout_width="170dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/subject_b_03" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/slide_top_and_left_two"
                        android:text="@string/cefangwei"
                        android:textColor="@color/_3232"
                        android:textSize="@dimen/text_fourteensp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_quxian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/all_16dp"
                    android:orientation="vertical">

                    <com.xueyiche.zjyk.jiakao.custom.RoundImageView
                        android:layout_width="170dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/subject_b_04" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/slide_top_and_left_two"
                        android:text="@string/xuxianxingshi"
                        android:textColor="@color/_3232"
                        android:textSize="@dimen/text_fourteensp" />
                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/yibaisi">

                <LinearLayout
                    android:id="@+id/ll_zhijiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/all_16dp"
                    android:orientation="vertical">

                    <com.xueyiche.zjyk.jiakao.custom.RoundImageView
                        android:layout_width="170dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/subject_b_05" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/slide_top_and_left_two"
                        android:text="@string/zhijiaozhuanwan"
                        android:textColor="@color/_3232"
                        android:textSize="@dimen/text_fourteensp" />
                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>