<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9463c"
    android:orientation="vertical">

    <include
        android:id="@+id/test_moni_activity_include"
        layout="@layout/win_money_title_include"
        android:layout_width="match_parent"
        android:layout_height="64dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sanshi">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/ll_head"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="100dp"
                    android:src="@mipmap/win_money_xiexina" />

                <LinearLayout
                    android:id="@+id/ll_head"
                    android:layout_width="277dp"
                    android:layout_height="280dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/sanshiwu"
                    android:background="@drawable/bg_yuanjiao"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.xueyiche.zjyk.xueyiche.mine.view.CircleImageView
                            android:id="@+id/test_head"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginTop="29dp"
                            android:src="@mipmap/mo_ni_head" />

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/ershi"
                            android:text="学易车"
                            android:textColor="@color/_4f4f4f"
                            android:textSize="@dimen/text_seveneensp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sanshi"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/test_success" />

                        <TextView
                            android:id="@+id/test_jiangli"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/ershisan"
                            android:text="恭喜获得1000元"
                            android:textColor="#c90010"
                            android:textSize="@dimen/text_eightteensp"
                            android:textStyle="bold" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="277dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_head"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_once_test"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ershiwu"
                        android:src="@mipmap/once_test" />

                    <ImageView
                        android:id="@+id/iv_kaojiazhao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ershiwu"
                        android:src="@mipmap/iv_laojiazhao" />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>