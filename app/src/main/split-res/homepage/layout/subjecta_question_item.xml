<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_dati"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:windowTranslucentNavigation="false">
    <!--标题-->

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exam_question_include"
        android:scrollbars="none">

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/question_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/question" />

            <LinearLayout
                android:id="@+id/ll_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/question_type"
                android:layout_marginTop="50dp"
                android:orientation="vertical"
                android:paddingTop="@dimen/slide_top_and_left_two">

                <LinearLayout
                    android:id="@+id/ll_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/exam_xuanxiang"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/all_16dp"
                    android:paddingBottom="@dimen/slide_top_and_left_two">

                    <ImageView
                        android:id="@+id/iv_a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/slide_top_and_left_two"
                        android:src="@mipmap/a" />

                    <TextView
                        android:id="@+id/tv_ansa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/shiba"
                        android:paddingTop="@dimen/slide_top_and_left_two"
                        android:textColor="@color/_3232"
                        android:textSize="@dimen/all_16dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/xian" />

                <LinearLayout
                    android:id="@+id/ll_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/exam_xuanxiang"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/all_16dp"
                    android:paddingBottom="@dimen/slide_top_and_left_two">

                    <ImageView
                        android:id="@+id/iv_b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/slide_top_and_left_two"
                        android:src="@mipmap/b" />

                    <TextView
                        android:id="@+id/tv_ansb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/shiba"
                        android:paddingTop="@dimen/slide_top_and_left_two"
                        android:textColor="@color/_3232"
                        android:textSize="@dimen/all_16dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/xian" />

                <LinearLayout
                    android:id="@+id/ll_c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/exam_xuanxiang"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/all_16dp"
                    android:paddingBottom="@dimen/slide_top_and_left_two">

                    <ImageView
                        android:id="@+id/iv_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/slide_top_and_left_two"
                        android:src="@mipmap/c" />

                    <TextView
                        android:id="@+id/tv_ansc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/shiba"
                        android:paddingTop="@dimen/slide_top_and_left_two"
                        android:textColor="@color/_3232"
                        android:textSize="@dimen/all_16dp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/xian_c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/xian" />

                <LinearLayout
                    android:id="@+id/ll_d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/exam_xuanxiang"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/all_16dp"
                    android:paddingBottom="@dimen/slide_top_and_left_two">

                    <ImageView
                        android:id="@+id/iv_d"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/slide_top_and_left_two"
                        android:src="@mipmap/d" />

                    <TextView
                        android:id="@+id/tv_ansd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/shiba"
                        android:paddingTop="@dimen/slide_top_and_left_two"
                        android:textColor="@color/_3232"
                        android:textSize="@dimen/all_16dp" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/xian_d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/xian" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_explan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_answer"
                android:orientation="vertical"
                android:paddingLeft="@dimen/all_16dp"
                android:paddingTop="@dimen/ershi"
                android:paddingRight="@dimen/all_16dp"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/tv_analysis_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/slide_top_and_left_two"
                    android:text="@string/zuijiajiexi"
                    android:textColor="@color/_3232"
                    android:textSize="@dimen/all_16dp" />

                <TextView
                    android:id="@+id/tv_analysis_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/slide_top_and_left_two"
                    android:text="@string/zuijiajiexi"
                    android:textColor="@color/_3232"
                    android:textSize="@dimen/all_16dp" />

                <TextView
                    android:id="@+id/tv_analysis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="5dp"
                    android:paddingLeft="@dimen/shiwu"
                    android:paddingTop="@dimen/slide_top_and_left_two"
                    android:textColor="@color/_3232"
                    android:textSize="@dimen/text_fourteensp" />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>