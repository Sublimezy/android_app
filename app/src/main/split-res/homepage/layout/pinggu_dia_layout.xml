<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/dialog_bg"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_content"
                android:layout_width="wrap_content"
                android:src="@mipmap/lunbotu"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/ershiwu"
                android:layout_marginRight="@dimen/all_zouyou"
                android:paddingLeft="@dimen/all_zouyou"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/bt_ok"
                android:text="收起"
                android:textColor="@color/color_white"
                android:textSize="17sp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_shape"
                android:layout_width="110dp"
                android:layout_marginBottom="@dimen/ershi"
                android:layout_marginTop="@dimen/ershi"
                android:layout_height="@dimen/sishi" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>