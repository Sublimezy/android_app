<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:orientation="vertical">

    <com.xueyiche.zjyk.xueyiche.homepage.view.ObservableScrollView
        android:id="@+id/os_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listSelector="@null"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="80dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <com.xueyiche.zjyk.xueyiche.homepage.fragments.bannerview.LoopViewPager
                    android:id="@+id/vp_shop_lunbo"
                    android:layout_width="match_parent"
                    android:layout_height="246dp" />

                <TextView
                    android:id="@+id/tv_lunbo_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="65dp"
                    android:layout_marginRight="14dp"
                    android:gravity="center"
                    android:text="-/--"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_jx_contenr"
                android:layout_width="match_parent"
                android:layout_height="107dp"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:layout_marginTop="189dp"
                android:background="@drawable/yuan_bai_bg_yinying"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="15dp">

                    <TextView
                        android:id="@+id/tv_shop_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="19dp"
                        android:maxLength="11"
                        android:text="---------------------"
                        android:textColor="#ff0f0f0f"
                        android:textSize="19sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="27dp"
                        android:id="@+id/tv_juli"
                        android:text="距您:---km"
                        android:textColor="#ff6e6e6e"
                        android:textSize="12sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="15dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_shop_address"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="------"
                            android:textColor="@color/test_color"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_open_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:drawableLeft="@mipmap/jx_open_time"
                            android:drawablePadding="4dp"
                            android:gravity="center_vertical"
                            android:text="-----"
                            android:textColor="@color/test_color"
                            android:textSize="14sp" />
                    </LinearLayout>


                    <View
                        android:layout_width="1dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="91dp"
                        android:layout_marginTop="10dp"
                        android:background="#3D3D3D" />

                    <ImageView
                        android:id="@+id/iv_shop_daohang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="43dp"
                        android:layout_marginTop="14dp"
                        android:src="@mipmap/jx_tj_dh" />

                    <ImageView
                        android:id="@+id/iv_shop_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="14dp"
                        android:src="@mipmap/jx_tj_call" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_jx_contenr"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/yuan_bai_bg_yinying"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="27dp"
                    android:src="@mipmap/jx_xueche_title" />

                <com.xueyiche.zjyk.xueyiche.homepage.view.AdListView
                    android:id="@+id/lv_taocan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:listSelector="@android:color/transparent" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:src="@mipmap/jx_content_xuxian" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="23dp"
                    android:src="@mipmap/jx_goumai_title" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="17dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/dian_cheng" />

                    <TextView
                        android:id="@+id/tv_gmxz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="定金780元，报名成功后返现200元，包含科目二训场费200元、科目三考试费用218元。"
                        android:textColor="#ff000000"
                        android:textSize="14sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="33dp"
                    android:src="@mipmap/jx_feiyong_title" />

                <TextView
                    android:id="@+id/tv_driverschool_feiyong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="29dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="18dp"
                    android:text=""
                    android:textColor="#ff000000"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>
    </com.xueyiche.zjyk.xueyiche.homepage.view.ObservableScrollView>

    <LinearLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/bt_driver_school_train"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/choose_driver" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/color_white"
                android:gravity="center_horizontal"
                android:text="教练"
                android:textColor="@color/_4f4f4f"
                android:textSize="11sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/bt_driver_school_buy"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="22dp"
            android:layout_weight="3"
            android:background="@drawable/button_shape"
            android:gravity="center"
            android:text="@string/lijibaoming"
            android:textColor="@color/color_white"
            android:textSize="17sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:background="@mipmap/shop_top_bg">

        <LinearLayout
            android:id="@+id/ll_exam_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="21dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_login_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/driver_school_back_hei" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_shoucang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="103dp"
            android:layout_marginTop="26dp"
            android:src="@mipmap/jx_title_shoucang" />

        <ImageView
            android:id="@+id/iv_fenxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            android:layout_marginTop="26dp"
            android:src="@mipmap/jx_title_fenxiang" />

        <ImageView
            android:id="@+id/iv_caidan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/all_16dp"
            android:layout_marginTop="25dp"
            android:src="@mipmap/sy_kefu" />
    </RelativeLayout>
</RelativeLayout>