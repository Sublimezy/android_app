<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
<RelativeLayout
    android:id="@+id/rl_look"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/all_zouyou"
    android:paddingRight="@dimen/all_zouyou"
    android:layout_marginTop="@dimen/ershiwu"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_indent_number"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:text="订单号：12345678915313513"
        android:textColor="@color/test_color"
        android:textSize="@dimen/text_sixteensp" />
<ImageView
    android:layout_width="wrap_content"
    android:src="@mipmap/jiantou"
    android:layout_centerVertical="true"
   android:layout_alignParentRight="true"
    android:layout_height="wrap_content" />
</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/all_zouyou"
        android:paddingRight="@dimen/all_zouyou"
        android:layout_marginTop="@dimen/ershi">

        <ImageView
            android:id="@+id/iv_indent_head"
            android:layout_width="@dimen/yibaidp"
            android:layout_height="@dimen/yibaidp"
            android:layout_marginBottom="@dimen/ershi"
            android:scaleType="centerCrop"
            android:src="@mipmap/lunbotu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/yibaidp"
            android:layout_marginLeft="@dimen/shiwu"
            android:layout_toRightOf="@+id/iv_indent_head"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_indent_name"
                android:layout_width="wrap_content"
                android:ems="12"
                android:ellipsize="end"
                android:lines="1"
                android:layout_height="wrap_content"
                android:textColor="@color/_4f4f4f"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/shiwu">

                <TextView
                    android:id="@+id/tv_indent_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="12"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/test_color"
                    android:textSize="@dimen/text_fifteensp" />

                <TextView
                    android:id="@+id/tv_indent_zhuangtai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="#ffcc00"
                    android:textSize="@dimen/text_fifteensp" />
            </RelativeLayout>
            <Button
                android:id="@+id/bt_look_wuliu"
                android:layout_width="@dimen/bashi"
                android:layout_height="@dimen/ershiwu"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/shiqi"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_bg"
                android:text="查看物流"
                android:textColor="@color/test_color"
                android:textSize="@dimen/text_fifteensp" />

        </LinearLayout>
    </RelativeLayout>
   <View
       android:layout_marginRight="@dimen/all_zouyou"
       android:layout_marginLeft="@dimen/all_zouyou"
     style="@style/_cccline"/>

</LinearLayout>