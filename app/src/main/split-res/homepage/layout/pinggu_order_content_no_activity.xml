<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fafafa"
        android:layout_above="@+id/iv_tijiao"
        android:orientation="vertical">

        <include
            android:id="@+id/title_include"
            layout="@layout/indent_tijiao_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="true"
            android:fitsSystemWindows="true" />

        <ScrollView
            android:layout_width="match_parent"

            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.xueyiche.zjyk.xueyiche.homepage.view.AdListView
                    android:id="@+id/lv_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.xueyiche.zjyk.xueyiche.homepage.view.AdListView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"
                    android:text="订单信息"
                    android:textColor="#666"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:text="单号"
                            android:textColor="#666"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/tv_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="12dp"
                            android:text="456456456465"
                            android:textColor="#666"
                            android:textSize="17sp" />
                    </RelativeLayout>

                    <View
                        style="@style/_cccline"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:text="成交价"
                            android:textColor="#666"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/tv_tradeprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="12dp"
                            android:text="25000"
                            android:textColor="#666"
                            android:textSize="17sp" />
                    </RelativeLayout>

                    <View
                        style="@style/_cccline"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:text="驳回时间"
                            android:textColor="#666"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/tv_bohui_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="12dp"
                            android:text="2019-11-11 19:25"
                            android:textColor="#666"
                            android:textSize="17sp" />
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"
                    android:text="车辆信息"
                    android:visibility="gone"
                    android:textColor="#666"
                    android:textSize="14sp" />

                <com.xueyiche.zjyk.xueyiche.custom.MaxRecyclerView
                    android:id="@+id/lv_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null"
                    android:listSelector="#00000000"
                    android:paddingTop="15dp"
                    android:scrollbars="none" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_tijiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/slide_top_and_left_two"
        android:layout_marginTop="@dimen/slide_top_and_left_two"
        android:src="@mipmap/pinggu_cxtijiao" />
</RelativeLayout>