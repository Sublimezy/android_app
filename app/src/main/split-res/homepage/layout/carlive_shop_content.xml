<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.xueyiche.zjyk.xueyiche.homepage.view.ObservableScrollView
                android:id="@+id/os_shop"
                android:scrollbars="none"
                android:background="@color/color_white"
                android:listSelector="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/shop_all"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <include
                        android:id="@+id/shop_content_include"
                        layout="@layout/carlife_content_include"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/shop_title_1"
                            android:text="服务详情" />

                        <com.xueyiche.zjyk.xueyiche.homepage.view.AdListView
                            android:id="@+id/lv_car_fuwu"
                            android:scrollbars="none"
                            android:listSelector="@color/color_white"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:divider="@color/_f2f3f4f5" />
                    </LinearLayout>

                    <include
                        android:id="@+id/shop_pingjia"
                        layout="@layout/shop_pingjia_dajia"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp" />

                    <include
                        android:id="@+id/in_shop_car_fujia"
                        layout="@layout/shop_car_fujia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="60dp" />

                </LinearLayout>


            </com.xueyiche.zjyk.xueyiche.homepage.view.ObservableScrollView>

            <LinearLayout
                android:id="@+id/shopping_cart_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/color_white"
                android:clickable="true"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/_cccccc" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp">

                        <TextView
                            android:id="@+id/tv_baomingfei_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="69dp"
                            android:gravity="center_vertical"
                            android:text="总金额:"
                            android:textColor="@color/title_one"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_shop_content_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical"
                            android:text="500"
                            android:textColor="@color/title_one"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_toRightOf="@+id/tv_baomingfei"
                            android:gravity="center_vertical"
                            android:text="元"
                            android:textColor="@color/title_one"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/bt_carlive_shop_buy"
                        android:layout_width="145dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="#ffb10c"
                        android:text="立即下单"
                        android:textColor="@color/color_white"
                        android:textSize="18sp" />

                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/shopping_cart_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/lineview"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:background="@drawable/circle"
                android:clickable="true">

                <ImageView
                    android:id="@+id/shopping_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/shopingcar_cailive" />
            </FrameLayout>

            <TextView
                android:id="@+id/lineview"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/shopping_cart_total_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/shopping_cart_bottom"
                android:layout_alignRight="@+id/shopping_cart_layout"
                android:layout_marginBottom="5dp"
                android:background="@drawable/small_red_circle"
                android:text="1"
                android:textColor="@color/color_white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="invisible" />
        </RelativeLayout>

        <include
            android:id="@+id/shop_top_include"
            layout="@layout/shop_top_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>
</RelativeLayout>