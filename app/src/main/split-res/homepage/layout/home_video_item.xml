<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="@dimen/all_zouyou"
        android:paddingRight="@dimen/all_zouyou">

        <com.xueyiche.zjyk.xueyiche.driverschool.view.RoundImageView
            android:id="@+id/video_bg"
            android:layout_width="match_parent"
            android:layout_height="181dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/lunbotu" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/video_bofang" />
        <LinearLayout
            android:layout_width="130dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="35dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/shisan"
            android:layout_alignParentRight="true"
            android:background="@mipmap/video_bg">
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="35dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/viewpager_pinglun" />
                <TextView
                    android:id="@+id/tv_viewpager_pinglun_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/slide_top_and_left"
                    android:text="100"
                    android:textColor="@color/_9999"
                    android:textSize="@dimen/side_letter_bar_letter_size" />
            </LinearLayout>
            <View
                android:background="@color/all_line_color"
                android:layout_width="@dimen/yi"
                android:layout_height="35dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="35dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/viewpager_dianzan" />
                <TextView
                    android:id="@+id/tv_viewpager_dianzan_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/slide_top_and_left"
                    android:text="100"
                    android:textColor="@color/_9999"
                    android:textSize="@dimen/side_letter_bar_letter_size" />
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>


</LinearLayout>