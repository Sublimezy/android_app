<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.xueyiche.zjyk.xueyiche.homepage.view.ObservableScrollView
                android:id="@+id/os_shop"
                android:layout_width="match_parent"
                android:listSelector="@null"
                android:scrollbars="none"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/shop_all"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <include
                        android:id="@+id/shop_content_include"
                        layout="@layout/driver_content_include"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/ershi"
                        android:text="本店优惠"
                        android:textColor="@color/all_black"
                        android:textSize="@dimen/text_sixteensp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/ershi"
                        android:layout_marginLeft="@dimen/all_16dp"
                        android:layout_marginRight="@dimen/all_16dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="@dimen/zero"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/slide_top_and_left_two"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_gongshi_logo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/gongshifei_content" />

                            <TextView
                                android:id="@+id/tv_gongshi_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/slide_top_and_left_two"
                                android:text="工时费"
                                android:textColor="@color/test_color"
                                android:textSize="@dimen/text_fourteensp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/slide_top_and_left_two"
                                android:gravity="bottom"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_gongshi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorOrange"
                                    android:textSize="@dimen/text_eightteensp" />

                                <TextView
                                    android:id="@+id/tv_wuzhekou"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="折"
                                    android:textColor="@color/_cccccc"
                                    android:textSize="@dimen/side_letter_bar_letter_size" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="@dimen/zero"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/slide_top_and_left_two"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_weixiu_logo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/weixiucailiao_content" />

                            <TextView
                                android:id="@+id/tv_weixiucailiao_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/slide_top_and_left_two"
                                android:text="维修材料费"
                                android:textColor="@color/test_color"
                                android:textSize="@dimen/text_fourteensp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/slide_top_and_left_two"
                                android:gravity="bottom"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_weixiucailiao"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorOrange"
                                    android:textSize="@dimen/text_eightteensp" />

                                <TextView
                                    android:id="@+id/tv_zhekoutwo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="折"
                                    android:textColor="@color/_cccccc"
                                    android:textSize="@dimen/side_letter_bar_letter_size" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_cailiao"
                            android:layout_width="@dimen/zero"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/slide_top_and_left_two"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/baoyang_cailiao_content" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/slide_top_and_left_two"
                                android:text="保养材料费"
                                android:textColor="@color/test_color"
                                android:textSize="@dimen/text_fourteensp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/slide_top_and_left_two"
                                android:gravity="bottom"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_baoyangcailiao"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorOrange"
                                    android:textSize="@dimen/text_eightteensp" />

                                <TextView
                                    android:id="@+id/tv_zhekouthree"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="折"
                                    android:textColor="@color/_cccccc"
                                    android:textSize="@dimen/side_letter_bar_letter_size" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <include
                        android:id="@+id/shop_pingjia"
                        layout="@layout/shop_pingjia_dajia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/slide_top_and_left"
                        android:background="@color/_f5f5f5" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ershi">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/dianzhuyouhua"
                            android:textColor="@color/all_black"
                            android:textSize="@dimen/text_sixteensp" />

                        <TextView
                            android:id="@+id/tv_car_briefing_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/all_zouyou"
                            android:layout_marginTop="@dimen/san"
                            android:text="@string/more"
                            android:textColor="@color/colorOrange"
                            android:textSize="@dimen/side_letter_bar_letter_size" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_car_briefing"
                        style="@style/shop_title_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/ershi"
                        android:layout_marginLeft="@dimen/all_zouyou"
                        android:gravity="left"
                        android:lineSpacingExtra="@dimen/slide_top_and_left"
                        android:text="就赶快十多个电饭锅电饭锅电饭锅电饭锅电饭锅" />

                    <include
                        android:id="@+id/in_shop_car_fujia"
                        layout="@layout/shop_car_fujia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sishijiu"
                        android:background="@color/_f5f5f5" />
                </LinearLayout>
            </com.xueyiche.zjyk.xueyiche.homepage.view.ObservableScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/yi"
                android:layout_above="@+id/rl_bottom"
                android:background="@color/all_line_color" />

            <LinearLayout
                android:id="@+id/rl_bottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sishijiu"
                android:layout_alignParentBottom="true"
                android:background="@color/color_white"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_weixiu_pay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/color_white"
                    android:text="@string/weixiumaidan"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/text_sixteensp" />

                <Button
                    android:id="@+id/bt_baoyang_pay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorOrange"
                    android:text="@string/baoyangmaidan"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/text_sixteensp" />
            </LinearLayout>
        </RelativeLayout>

        <include
            android:id="@+id/shop_top_include"
            layout="@layout/shop_top_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>


</LinearLayout>