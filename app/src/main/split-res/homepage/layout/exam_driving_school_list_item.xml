<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_f5f5f5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="horizontal"
        >

        <com.xueyiche.zjyk.xueyiche.driverschool.view.RoundImageView
            android:id="@+id/iv_school_head"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_marginLeft="15dp"
            android:scaleType="fitXY"
            android:layout_marginRight="11dp"
            android:src="@mipmap/lunbotu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_school_name"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxEms="10"
                    android:text="----"
                    android:textColor="#333333"
                    android:textSize="17sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--km"
                    android:id="@+id/tv_shop_address_item"
                    android:layout_centerVertical="true"
                    android:drawablePadding="2dp"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@mipmap/tj_wz"
                    android:textColor="#ff666666"
                    android:textSize="12sp"
                    />
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_school_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_marginTop="7dp"
                android:text="------------"
                android:textColor="@color/test_color"
                android:textSize="@dimen/text_fourteensp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="6dp"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="------"
                    android:id="@+id/tv_bq_one"
                    android:gravity="center"
                    android:background="@drawable/jx_list_bq_bg"
                    android:textColor="#E65B0C"
                    android:layout_centerVertical="true"
                    android:textSize="11sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="------"
                    android:gravity="center"
                    android:background="@drawable/jx_list_bq_bg"
                    android:id="@+id/tv_bq_two"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv_bq_one"
                    android:layout_centerVertical="true"
                    android:textColor="#E65B0C"
                    android:textSize="11sp" />
                <TextView
                    android:id="@+id/tv_school_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="Â¥ ---"
                    android:textColor="#DF0620"
                    android:layout_alignParentRight="true"
                    android:textSize="20sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="#E3E3E3"
        android:layout_marginTop="@dimen/all_16dp"
        android:layout_marginLeft="@dimen/all_16dp"
        android:layout_marginRight="@dimen/all_16dp"
        android:layout_height="1dp"></View>
</LinearLayout>