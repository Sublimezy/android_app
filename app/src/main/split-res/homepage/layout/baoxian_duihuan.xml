<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/duihuan_include"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />

    <LinearLayout
        android:id="@+id/rl_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/yibaidp"
        android:layout_below="@+id/duihuan_include"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_search_baodan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sishi"
            android:layout_marginLeft="@dimen/sishi"
            android:layout_marginRight="@dimen/sishi"
            android:layout_marginTop="@dimen/sanshi"
            android:background="@drawable/search_bg">

            <EditText
                android:id="@+id/ed_duihuan_search"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sishi"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:imeOptions="actionSearch"
                android:layout_marginLeft="@dimen/all_zouyou"
                android:layout_toLeftOf="@+id/iv_duihuan_search"
                android:background="@null"
                android:hint="请输入您的保单号" />

            <ImageView
                android:id="@+id/iv_duihuan_search"

                android:layout_width="wrap_content"
                android:layout_height="@dimen/sishi"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/all_zouyou"
                android:src="@mipmap/ic_search" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_zongjia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/all_zouyou"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView

                android:textColor="@color/test_color"
                android:textSize="@dimen/text_sixteensp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可兑换总额：" />

            <TextView
                android:id="@+id/tv_total_duihuan"
                android:textSize="@dimen/text_sixteensp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorOrange" />
        </LinearLayout>

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/shopping_cart_bottom"
        android:layout_below="@+id/rl_search"
        android:background="@color/all_line_color"
        android:paddingLeft="@dimen/slide_top_and_left_two"
        android:paddingRight="@dimen/slide_top_and_left_two"
        android:paddingTop="10dp" />

    <LinearLayout
        android:id="@+id/shopping_cart_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sishiwu"
        android:layout_alignParentBottom="true"
        android:background="@color/color_white"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/shopping_cart_total_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/qishi"
            android:layout_weight="1"
            android:text="已用金额：0"

            android:textColor="@color/_3333"
            android:textSize="@dimen/text_fourteensp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_duihuan"
            android:layout_width="@dimen/view_pager_turn_top"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/colorOrange"
            android:gravity="center"
            android:text="兑   换"
            android:textAlignment="center"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_eightteensp"
            android:textStyle="bold" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/shopping_cart_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lineview"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:background="@drawable/circle"
        android:clickable="true">

        <ImageView
            android:id="@+id/shopping_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/gouwuche_baoxian" />
    </FrameLayout>

    <TextView
        android:id="@+id/lineview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ershi"
        android:layout_alignParentBottom="true"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/shopping_cart_total_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/shopping_cart_bottom"
        android:layout_alignRight="@+id/shopping_cart_layout"
        android:layout_marginBottom="@dimen/slide_top_and_left_two"
        android:background="@drawable/small_red_circle"
        android:textColor="@color/color_white"
        android:textSize="10sp"
        android:textStyle="bold"
        android:visibility="gone" />

</RelativeLayout>