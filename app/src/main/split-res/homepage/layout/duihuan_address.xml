<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_practice_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/slide_top_and_left_two"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/text_sixteensp"
            android:text="姓名："
            android:textColor="@color/_3232"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:textSize="@dimen/text_fifteensp"
            android:layout_marginLeft="@dimen/slide_top_and_left_two"
            android:id="@+id/ed_duihuan_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_include_height"
            android:background="@null"
            android:hint="请输入收货人姓名" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/slide_top_and_left_two"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_idcard"
            android:textColor="@color/_3232"
            android:textSize="@dimen/text_sixteensp"
            android:text="电话："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:textSize="@dimen/text_fifteensp"
            android:layout_marginLeft="@dimen/slide_top_and_left_two"
            android:id="@+id/ed_duihuan_phone"
            android:layout_width="match_parent"
            android:inputType="number"
            android:layout_height="@dimen/all_include_height"
            android:background="@null"
            android:hint="请输入收货手机号" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/slide_top_and_left_two"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/_3232"
            android:textSize="@dimen/text_sixteensp"
            android:text="地址："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:textSize="@dimen/text_fifteensp"
            android:layout_marginLeft="@dimen/slide_top_and_left_two"
            android:id="@+id/ed_duihuan_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_include_height"
            android:background="@null"
            android:hint="请输入收货人地址" />
    </LinearLayout>


</LinearLayout>