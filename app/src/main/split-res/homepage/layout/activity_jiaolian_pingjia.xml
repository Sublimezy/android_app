<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/driver_pay_include"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />
    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/color_white"
        android:layout_above="@+id/ll_bottom"
        android:layout_below="@+id/driver_pay_include"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"

            android:layout_height="match_parent">
        <LinearLayout
            android:paddingLeft="@dimen/all_zouyou"
            android:paddingRight="@dimen/all_zouyou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_driver_head"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:scaleType="fitXY"
                android:src="@mipmap/lunbotu" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/slide_top_and_left_two"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_driver_name"
                        style="@style/shop_title_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/iv_indent_content_daohang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/indent_content_daohang"
                        android:text="接单：1次"
                        android:textColor="@color/_666"
                        android:textSize="@dimen/text_fifteensp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_driver_miaoshu"
                    style="@style/shop_title_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:maxLines="1"
                    android:textColor="@color/test_color"
                    android:textScaleX="1"
                    android:textSize="@dimen/text_eightteensp" />
            </LinearLayout>
        </LinearLayout>
            <TextView
                android:text="服务评价"
                android:textSize="25sp"
                android:layout_marginTop="@dimen/all_include_height"
                android:textColor="#4f4f4f"
                android:layout_gravity="center_vertical"

                android:layout_marginLeft="@dimen/all_zouyou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/ershiwu"
                android:layout_marginLeft="@dimen/all_zouyou"
                android:layout_marginRight="@dimen/all_zouyou"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/tv_zongtipingjia"
                    android:textSize="@dimen/text_sixteensp"
                    android:textColor="@color/test_color"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RatingBar
                    android:id="@+id/rb_pingjia_star"
                    android:layout_width="wrap_content"
                    android:stepSize="1"
                    style="@style/MyRatingBarNowSmall"
                    android:layout_marginLeft="@dimen/slide_top_and_left"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:numStars="5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/ershiwu"
                android:paddingBottom="@dimen/er">

                <CheckBox
                    android:id="@+id/rb_one"
                    android:layout_marginLeft="@dimen/all_zouyou"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/sanshi"
                    android:background="@drawable/pingjia_select_bg"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:padding="@dimen/six"
                    android:textColor="@drawable/pingjia_select"
                    android:textSize="@dimen/text_fifteensp" />

                <CheckBox
                    android:id="@+id/rb_two"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/sanshi"
                    android:layout_marginLeft="@dimen/shiwu"
                    android:background="@drawable/pingjia_select_bg"
                    android:button="@null"
                    android:checked="false"
                    android:layout_marginRight="@dimen/all_zouyou"
                    android:gravity="center"
                    android:padding="@dimen/six"
                    android:textColor="@drawable/pingjia_select"
                    android:textSize="@dimen/text_fifteensp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/shiwu"
                android:orientation="horizontal"
                android:visibility="gone"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/er"
                android:paddingTop="@dimen/san">
                <CheckBox
                    android:id="@+id/rb_three"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/sanshi"
                    android:layout_marginLeft="@dimen/all_zouyou"
                    android:background="@drawable/pingjia_select_bg"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:padding="@dimen/six"
                    android:textColor="@drawable/pingjia_select"
                    android:textSize="@dimen/text_fifteensp" />
                <CheckBox
                    android:id="@+id/rb_four"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/sanshi"
                    android:layout_marginLeft="@dimen/shiwu"
                    android:background="@drawable/pingjia_select_bg"
                    android:button="@null"
                    android:checked="false"
                    android:layout_marginRight="@dimen/all_zouyou"
                    android:gravity="center"
                    android:padding="@dimen/six"
                    android:textColor="@drawable/pingjia_select"
                    android:textSize="@dimen/text_fifteensp" />

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/ershiwu"
                android:layout_marginLeft="@dimen/all_zouyou"
                android:background="@drawable/pingjia_edittext_shape"
                android:layout_marginBottom="@dimen/all_include_height"
                android:layout_marginRight="@dimen/all_zouyou"
                android:layout_height="@dimen/yibaidp">

                <EditText
                    android:id="@+id/ed_think_content"
                    android:layout_width="match_parent"
                    android:paddingTop="@dimen/slide_top_and_left_two"
                    android:layout_height="@dimen/yibaidp"
                    android:paddingLeft="@dimen/slide_top_and_left"
                    android:gravity="top"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/all_zouyou"
                    android:layout_marginRight="@dimen/all_zouyou"
                    android:textSize="@dimen/text_fourteensp"
                    android:maxLines="6"
                    android:maxEms="80"
                    android:hint="@string/tv_jianyicontent"
                    />

                <TextView
                    android:id="@+id/text_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/text_fourteensp"
                    android:textColor="@color/_9999"
                    android:layout_marginRight="@dimen/ershi"
                    android:layout_marginBottom="@dimen/slide_top_and_left_two"
                    android:text="0/80"/>
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_pay_money"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/all_include_height"
            android:layout_weight="1"
            android:paddingLeft="@dimen/ershier"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:text="提交评价后获得10易币"
            android:textColor="@color/_666"
            android:textSize="@dimen/text_fifteensp"
            />


        <ImageView
            android:id="@+id/bt_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提交评价"
            android:layout_marginBottom="@dimen/sanshi"
            android:src="@mipmap/iv_submit"
        />
    </LinearLayout>

</RelativeLayout>