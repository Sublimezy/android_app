<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DEDEDE" />
    <RadioGroup
        android:id="@+id/ll_shaixuantiaojian"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sishi"
        android:layout_below="@+id/choice_card_title"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/ll_choice_diqu"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sishier"
            android:layout_weight="1"
            android:button="@null"
            android:drawableRight="@drawable/selector"
            android:gravity="center"
            android:paddingLeft="@dimen/all_include_height"
            android:paddingRight="@dimen/all_include_height"
            android:text="@string/quyu"
            android:textColor="@drawable/shaixuan_text_color"
            android:textSize="@dimen/text_fifteensp" />

        <View
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:background="#979797" />
        <RadioButton
            android:id="@+id/ll_choice_paixu"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sishier"
            android:layout_weight="1"
            android:button="@null"
            android:drawableRight="@drawable/selector"
            android:gravity="center"
            android:paddingLeft="@dimen/all_include_height"
            android:paddingRight="@dimen/all_include_height"
            android:text="@string/morenpaixu"
            android:textColor="@drawable/shaixuan_text_color"
            android:textSize="@dimen/text_fifteensp" />
    </RadioGroup>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DEDEDE" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        app:srlEnableAutoLoadMore="false"
        app:srlPrimaryColor="@color/color_white">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlAccentColor="@color/colorOrange"
            app:srlDrawableProgress="@drawable/animation_loading_frame"
            app:srlPrimaryColor="@color/color_white" />

        <ListView
            android:id="@+id/recycler_homeyouhui_content"
            android:layout_marginTop="@dimen/slide_top_and_left"
            android:layout_width="match_parent"
            android:listSelector="@android:color/transparent"
            android:divider="@null"
            android:numColumns="2"
            android:focusableInTouchMode="true"
            android:layout_height="match_parent" />

        <com.scwang.smartrefresh.header.StoreHouseHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:shhEnableFadeAnimation="true"
            app:shhText="XueYiChe" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>