<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_all_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/all_16dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">

        <com.xueyiche.zjyk.xueyiche.driverschool.view.RoundImageView
            android:id="@+id/iv_goods"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/lunbotu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp">

                <TextView
                    android:id="@+id/tv_goods_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="------------"
                    android:textColor="#ff333333"
                    android:maxLength="11"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_goods_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/all_16dp"
                    android:drawableLeft="@mipmap/csh_juli"
                    android:drawablePadding="6dp"
                    android:text="---km"
                    android:textColor="#ff666666"
                    android:textSize="12sp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="21dp"
                    android:text="--------------"
                    android:textColor="#ff666666"
                    android:id="@+id/tv_shop_place_name"
                    android:maxLength="13"
                    android:textSize="13sp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/jx_tj_dh"
                    android:layout_marginTop="29dp"
                    android:id="@+id/iv_daohang"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/all_16dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/all_16dp"
        android:layout_marginRight="@dimen/all_16dp"
        android:layout_marginTop="20dp"
        android:background="#E3E3E3" />
</LinearLayout>