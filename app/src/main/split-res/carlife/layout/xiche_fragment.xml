<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/all_16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="35dp">

        <RelativeLayout
            android:id="@+id/rl_title_search"
            android:layout_toLeftOf="@+id/iv_kefu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/shisan"
            android:background="@mipmap/carlife_search_bg">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/ershi"
                android:src="@mipmap/carlife_search_logo" />

            <TextView
                android:id="@+id/tv_search_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="3dp"
                android:text="搜索车内容"
                android:textColor="#000000"
                android:textSize="@dimen/shisi" />

            <ImageView
                android:id="@+id/iv_search_yuyin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/shijiu"
                android:src="@mipmap/new_sousuo_yuyin" />
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_kefu"
            android:layout_centerVertical="true"
            android:src="@mipmap/new_sy_kefu" />
    </RelativeLayout>
    <RadioGroup
        android:id="@+id/ll_shaixuantiaojian"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sishi"
        android:layout_below="@+id/choice_card_title"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/ll_choice_type"
            android:layout_width="0dp"
            android:layout_height="@dimen/sishier"
            android:layout_weight="1"
            android:button="@null"
            android:drawableRight="@drawable/selector"
            android:gravity="center"
            android:paddingLeft="@dimen/ershi"
            android:paddingRight="@dimen/ershi"
            android:text="洗车"
            android:textColor="@drawable/shaixuan_text_color"
            android:textSize="@dimen/text_fifteensp" />
        <RadioButton
            android:id="@+id/ll_choice_diqu"
            android:layout_width="0dp"
            android:layout_height="@dimen/sishier"
            android:layout_weight="1"
            android:button="@null"
            android:drawableRight="@drawable/selector"
            android:gravity="center"
            android:paddingLeft="@dimen/ershi"
            android:paddingRight="@dimen/all_include_height"
            android:text="@string/quyu"
            android:textColor="@drawable/shaixuan_text_color"
            android:textSize="@dimen/text_fifteensp" />
        <RadioButton
            android:id="@+id/ll_choice_paixu"
            android:layout_width="0dp"
            android:layout_height="@dimen/sishier"
            android:layout_weight="1"
            android:button="@null"
            android:drawableRight="@drawable/selector"
            android:gravity="center"
            android:paddingLeft="@dimen/ershi"
            android:paddingRight="@dimen/ershi"
            android:text="@string/morenpaixu"
            android:textColor="@drawable/shaixuan_text_color"
            android:textSize="@dimen/text_fifteensp" />
    </RadioGroup>
        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srlEnableAutoLoadMore="false"
            app:srlPrimaryColor="@color/color_white">

            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srlAccentColor="@color/colorOrange"
                app:srlDrawableProgress="@drawable/animation_loading_frame"
                app:srlPrimaryColor="@color/color_white" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_homeyouhui_content"
                android:layout_marginTop="@dimen/slide_top_and_left"
                android:layout_width="match_parent"
                android:divider="@null"
                android:listSelector="@android:color/transparent"
                android:numColumns="2"
                android:focusableInTouchMode="true"
                android:layout_height="match_parent" />

            <com.scwang.smartrefresh.header.StoreHouseHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:shhEnableFadeAnimation="true"
                app:shhText="XueYiChe" />
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>




</LinearLayout>