<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.xueyiche.zjyk.xueyiche.homepage.view.ObservableScrollView
                android:id="@+id/os_shop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_white"
                android:listSelector="@null"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/shop_all"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="vertical"
                    android:paddingBottom="80dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="250dp">

                        <com.xueyiche.zjyk.xueyiche.homepage.fragments.bannerview.LoopViewPager
                            android:id="@+id/vp_shop_lunbo"
                            android:layout_width="match_parent"
                            android:layout_height="246dp" />

                        <TextView
                            android:id="@+id/tv_lunbo_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="14dp"
                            android:layout_marginRight="14dp"
                            android:gravity="center"
                            android:text="-/--"
                            android:textColor="#ffffff"
                            android:textSize="18sp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/ll_jx_contenr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:textColor="#fff">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/all_16dp"
                            android:layout_marginRight="@dimen/all_16dp">

                            <TextView
                                android:id="@+id/tv_shop_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="19dp"
                                android:maxLength="12"
                                android:text="---------------------"
                                android:textColor="#ff0f0f0f"
                                android:textSize="19sp" />


                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="14dp"
                            android:layout_marginLeft="@dimen/all_16dp"
                            android:layout_marginRight="@dimen/all_16dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_shop_address"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"
                                    android:text="------"
                                    android:textColor="@color/test_color"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_juli"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="4dp"
                                    android:text="距您:---km"
                                    android:textColor="#ff6e6e6e"
                                    android:textSize="12sp" />
                            </LinearLayout>


                            <View
                                android:layout_width="1dp"
                                android:layout_height="23dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="91dp"
                                android:layout_marginTop="8dp"
                                android:background="#3D3D3D" />

                            <ImageView
                                android:id="@+id/iv_shop_daohang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="43dp"
                                android:layout_marginTop="6dp"
                                android:src="@mipmap/jx_tj_dh" />

                            <ImageView
                                android:id="@+id/iv_shop_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="6dp"
                                android:src="@mipmap/jx_tj_call" />
                        </RelativeLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="#F7F7F7" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/all_16dp"
                        android:layout_marginRight="@dimen/all_16dp"
                        android:layout_marginTop="19dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="服务详情"
                            android:textColor="#ff333333"
                            android:textSize="18sp" />

                        <com.xueyiche.zjyk.xueyiche.homepage.view.AdListView
                            android:id="@+id/lv_car_fuwu"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:divider="@color/_f2f3f4f5"
                            android:listSelector="@color/color_white"
                            android:scrollbars="none" />
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="#F7F7F7" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/all_16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:text="商家信息"

                                android:textColor="#ff333333"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:drawableLeft="@mipmap/jx_open_time"
                                android:drawablePadding="12dp"
                                android:gravity="center_vertical"
                                android:text="营业时间"
                                android:textColor="@color/test_color"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_open_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="周一至周日10:30-22:00"
                                android:textColor="#ff333333"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="26dp"
                                android:drawableLeft="@mipmap/csh_content_jcss_pic"
                                android:drawablePadding="10dp"
                                android:gravity="center_vertical"
                                android:text="基础设施"
                                android:textColor="@color/test_color"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="25dp"
                                android:layout_marginTop="25dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableTop="@mipmap/csh_content_wifi"
                                    android:text="免费WiFi"
                                    android:textColor="#ff333333"
                                    android:textSize="13sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="36dp"
                                    android:drawablePadding="6dp"
                                    android:drawableTop="@mipmap/csh_content_tc"
                                    android:text="免费泊车"
                                    android:textColor="#ff333333"
                                    android:textSize="13sp" />
                            </LinearLayout>


                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F7F7F7" />
                </LinearLayout>


            </com.xueyiche.zjyk.xueyiche.homepage.view.ObservableScrollView>

            <LinearLayout
                android:id="@+id/shopping_cart_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/color_white"
                android:clickable="true"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/_cccccc" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/all_16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_shop_content_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="￥----"
                            android:textColor="#ffd81e06"
                            android:textSize="23sp" />

                        <TextView
                            android:id="@+id/tv_menshi_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="门市价￥---"
                            android:textColor="#ff666666"
                            android:textSize="12sp" />

                    </LinearLayout>


                    <Button
                        android:id="@+id/bt_carlive_shop_buy"
                        android:layout_width="168dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/all_16dp"
                        android:background="@drawable/csh_xd_bg"
                        android:text="立即下单"
                        android:textColor="@color/color_white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:background="@mipmap/shop_top_bg">

            <LinearLayout
                android:id="@+id/ll_exam_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="21dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_login_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@mipmap/driver_school_back_hei" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_shoucang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="103dp"
                android:layout_marginTop="26dp"
                android:src="@mipmap/jx_title_shoucang" />

            <ImageView
                android:id="@+id/iv_fenxiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="60dp"
                android:layout_marginTop="26dp"
                android:src="@mipmap/jx_title_fenxiang" />

            <ImageView
                android:id="@+id/iv_caidan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/all_16dp"
                android:layout_marginTop="25dp"
                android:src="@mipmap/sy_kefu" />


        </RelativeLayout>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="450dp">

        <ImageView
            android:id="@+id/shopping_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/csh_content_gwc" />

        <TextView
            android:id="@+id/shopping_cart_total_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/shopping_cart_bottom"
            android:layout_alignRight="@+id/shopping_cart_layout"
            android:layout_marginBottom="5dp"
            android:background="@drawable/small_red_circle"
            android:text="1"
            android:textColor="@color/color_white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="invisible" />
    </RelativeLayout>
</RelativeLayout>