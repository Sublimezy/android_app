<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/all_16dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="@dimen/all_16dp"
        android:layout_marginTop="35dp">

        <ImageView
            android:id="@+id/iv_login_back"
            android:layout_width="wrap_content"
            android:padding="8dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/driver_school_back_hei" />

        <RelativeLayout
            android:id="@+id/rl_title_search_jump"
            android:layout_width="210dp"
            android:layout_toRightOf="@+id/iv_login_back"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:background="@mipmap/csh_sousuo_bg"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="3dp"
                android:src="@mipmap/ic_search" />

            <TextView
                android:id="@+id/tv_search_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="3dp"
                android:text="搜索车内容"
                android:textColor="#ff666666"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:src="@mipmap/sousuo_yuyin" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/rl_title_search_jump"
            android:background="@mipmap/csh_sousuo_bg_cheng"
            android:gravity="center"
            android:text="搜索"
            android:textColor="#ffffffff"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_kefu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/sy_kefu" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DEDEDE" />

    <RadioGroup
        android:id="@+id/ll_shaixuantiaojian"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sishi"
        android:layout_below="@+id/choice_card_title"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/ll_choice_diqu"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sishier"
            android:layout_weight="1"
            android:button="@null"
            android:drawableRight="@drawable/selector"
            android:gravity="center"
            android:paddingLeft="@dimen/all_include_height"
            android:paddingRight="@dimen/all_include_height"
            android:text="@string/quyu"
            android:textColor="@drawable/shaixuan_text_color"
            android:textSize="@dimen/text_fifteensp" />

        <View
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:background="#979797" />
        <RadioButton
            android:id="@+id/ll_choice_paixu"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sishier"
            android:layout_weight="1"
            android:button="@null"
            android:drawableRight="@drawable/selector"
            android:gravity="center"
            android:paddingLeft="@dimen/all_include_height"
            android:paddingRight="@dimen/all_include_height"
            android:text="@string/morenpaixu"
            android:textColor="@drawable/shaixuan_text_color"
            android:textSize="@dimen/text_fifteensp" />
    </RadioGroup>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DEDEDE" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">

            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/refreshLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                app:srlEnableAutoLoadMore="false"
                app:srlPrimaryColor="@color/color_white">

                <com.scwang.smartrefresh.layout.header.ClassicsHeader
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srlAccentColor="@color/colorOrange"
                    app:srlDrawableProgress="@drawable/animation_loading_frame"
                    app:srlPrimaryColor="@color/color_white" />
                <ListView
                    android:id="@+id/lv_result"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:divider="#00000000"
                    android:listSelector="@android:color/transparent"
                    android:scrollbars="none" />

                <com.scwang.smartrefresh.header.StoreHouseHeader
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shhEnableFadeAnimation="true"
                    app:shhText="XueYiChe" />
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>