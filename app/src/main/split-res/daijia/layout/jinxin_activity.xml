<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.baidu.mapapi.map.MapView
        android:id="@+id/map_wait"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:clickable="true" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/slide_top_and_left_two"
        android:layout_marginTop="@dimen/sishi"
        android:src="@mipmap/diajia_map_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_anquan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/anquan_practice" />

            <ImageView
                android:id="@+id/now_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/now_location" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="@dimen/shiwu"
            android:background="@drawable/caidan_bg"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_include_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/shiyi"
                    android:text="当前计费："
                    android:textColor="@color/test_color"
                    android:textSize="@dimen/text_fifteensp" />

                <TextView
                    android:id="@+id/tv_total_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/er"
                    android:layout_marginRight="@dimen/all_zouyou"
                    android:layout_weight="1"
                    android:text="0元"
                    android:textColor="#D0021B"
                    android:textSize="@dimen/text_eightteensp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/cb_jifei"
                    android:layout_width="@dimen/shiyi"
                    android:layout_height="@dimen/six"
                    android:layout_marginRight="@dimen/all_16dp"
                    android:background="@drawable/daijia_jifei_jiantou_selector"
                    android:button="@null"
                    android:checked="false"
                    android:padding="@dimen/slide_top_and_left_two" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_feiyong"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ershi"
                    android:background="#f8f8f8"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/slide_top_and_left_two">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginLeft="@dimen/shisi"
                            android:text="起步价"
                            android:textColor="@color/_9999"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_user_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/all_16dp"
                            android:text="39元"
                            android:textColor="@color/_9999"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/slide_top_and_left_two">

                        <TextView
                            android:id="@+id/tv_act_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/shisi"
                            android:text="里程费（共--公里，区域外-公里）"
                            android:textColor="@color/_9999"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_user_amount3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/all_16dp"
                            android:text="0元"
                            android:textColor="@color/_9999"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/shisi"
                        android:layout_marginTop="@dimen/slide_top_and_left_two">

                        <TextView
                            android:id="@+id/tv_wait_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/shisi"
                            android:text="等候费（--分）"
                            android:textColor="@color/_9999"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_user_amount2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/all_16dp"
                            android:text="0元"
                            android:textColor="@color/_9999"
                            android:textSize="16sp" />
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="@dimen/all_zouyou"
                    android:text="计费规则"
                    android:textColor="@color/test_color"
                    android:textSize="@dimen/text_threeteensp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/ershiqi"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="@dimen/jiu"
            android:background="@drawable/caidan_bg"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/shisan">

                <com.xueyiche.zjyk.xueyiche.mine.view.CircleImageView
                    android:id="@+id/ci_head"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="@dimen/shisi"
                    android:src="@mipmap/mine_head" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/ci_head"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="----"
                            android:textColor="@color/_3333"
                            android:textSize="@dimen/text_sixteensp" />

                        <TextView
                            android:id="@+id/tv_age"
                            android:layout_width="@dimen/wushiwu"
                            android:layout_height="@dimen/ershi"
                            android:layout_marginLeft="@dimen/seven"
                            android:background="@drawable/practice_details_driver_year_shape"
                            android:gravity="center"
                            android:text="----"
                            android:textColor="#E2C0A6"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_gonghao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/six"
                        android:text="工号：-----"
                        android:textColor="@color/test_color"
                        android:textSize="@dimen/text_fourteensp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/all_16dp"
                    android:src="@mipmap/daijia_callphone" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您需要支付服务区域外里程费"
                    android:textColor="@color/_9999"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_juli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:text="共--公里 区域外--公里"
                    android:textColor="@color/_666"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_pay"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="@dimen/all_16dp"
                    android:layout_marginLeft="@dimen/all_16dp"
                    android:layout_marginRight="@dimen/all_16dp"
                    android:background="@drawable/yijian_bg"
                    android:gravity="center"
                    android:text="里程费--元 去支付"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_eightteensp"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/shisi"
                android:layout_marginRight="@dimen/all_16dp"
                android:layout_marginTop="@dimen/slide_top_and_left_two"
                android:background="#F0F0F0" />

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/shiba"
                android:layout_marginTop="15dp"
                android:drawableLeft="@mipmap/daijia_shared"
                android:drawablePadding="@dimen/slide_top_and_left"
                android:text="分享行程"
                android:textColor="@color/_666"
                android:textSize="@dimen/text_fifteensp" />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>