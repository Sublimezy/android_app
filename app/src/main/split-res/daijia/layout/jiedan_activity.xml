<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/new_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/shisan">

                <com.xueyiche.zjyk.xueyiche.mine.view.CircleImageView
                    android:id="@+id/ci_head"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="12dp"
                    android:src="@mipmap/mine_head" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/ci_head"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="----"
                            android:textColor="@color/_000000"
                            android:textSize="@dimen/text_sixteensp" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_gonghao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/six"
                        android:text="工号：-----"
                        android:textColor="@color/test_color"
                        android:textSize="@dimen/text_fourteensp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvCallPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/all_16dp"
                    android:drawableTop="@mipmap/daijia_callphone"
                    android:text="联系司机" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/shisi"
                android:layout_marginTop="@dimen/slide_top_and_left_two"
                android:layout_marginRight="@dimen/all_16dp"
                android:background="#F0F0F0" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sishisi"
            android:background="@drawable/caidan_bg"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_quxiao_rule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="司机正在火速赶来，12:10后取消需支付取消费用"
                android:textColor="@color/_000000"
                android:textSize="@dimen/text_threeteensp" />
        </LinearLayout>
    </LinearLayout>

    <com.amap.api.maps.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>