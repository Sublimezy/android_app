<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include
        android:id="@+id/title"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="25dp"
        android:layout_height="wrap_content">

        <com.xueyiche.zjyk.xueyiche.mine.view.CircleImageView
            android:layout_width="60dp"
            android:id="@+id/ci_head"
            android:layout_height="60dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/mine_head" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="22dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="----"
                    android:textColor="@color/_4f4f4f"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="----"
                    android:textColor="@color/_4f4f4f"
                    android:textSize="16sp" />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="2dp"></View>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="工号：-----"
                android:id="@+id/tv_gonghao"
                android:textColor="@color/_4f4f4f"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="12dp"
        android:text="下单时间：-----"
        android:id="@+id/tv_time"
        android:textColor="@color/_4f4f4f"
        android:textSize="16sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="------------"
            android:id="@+id/tv_qi"
            android:textColor="@color/_4f4f4f"
            android:textSize="16sp"
            android:drawablePadding="15dp"
            android:drawableLeft="@mipmap/dj_qi"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="------------"
            android:id="@+id/tv_zhong"
            android:textColor="@color/_4f4f4f"
            android:textSize="16sp"
            android:drawablePadding="15dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@mipmap/dj_zhong"
            android:layout_height="wrap_content" />
        <View
            style="@style/_cccline"
            android:layout_marginTop="25dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        android:id="@+id/ll_bottom"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="起步价"
                android:layout_marginLeft="12dp"
                android:textColor="@color/_666"
                android:textSize="16sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--元已支付"
                android:id="@+id/tv_user_amount"
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/_666"
                android:textSize="16sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="里程费（共--公里，区域外-公里）"
                android:layout_marginLeft="12dp"
                android:id="@+id/tv_act_distance"
                android:textColor="@color/_666"
                android:textSize="16sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0元"
                android:id="@+id/tv_user_amount3"
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorOrange"
                android:textSize="16sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="等候费（--分）"
                android:id="@+id/tv_wait_time"
                android:layout_marginLeft="12dp"
                android:textColor="@color/_666"
                android:textSize="16sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0元"
                android:id="@+id/tv_user_amount2"
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/_666"
                android:textSize="16sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="12dp"
            android:layout_height="wrap_content">

            <TextView
                android:text="订单合计金额"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:textColor="@color/_4f4f4f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="38元"
                android:id="@+id/tv_all_money"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/_4f4f4f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_dai_money"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal"
        android:text="还需支付--元"
        android:textColor="@color/colorOrange"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:text="支  付"
        android:id="@+id/tv_pay"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:gravity="center"
        android:textSize="25sp"
        android:background="@drawable/queren_bg"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"

        android:layout_height="50dp" />
</LinearLayout>