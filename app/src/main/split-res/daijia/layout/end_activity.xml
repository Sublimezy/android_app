<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/top"
        layout="@layout/new_title_bar" />

    <com.amap.api.maps.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_anquan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/anquan_practice" />

            <ImageView
                android:id="@+id/now_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/now_location" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_richang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="@dimen/shiwu"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="@dimen/ershiba"
            android:background="@drawable/caidan_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/shisan">

                    <com.xueyiche.zjyk.xueyiche.mine.view.CircleImageView
                        android:id="@+id/ci_head"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="12dp"
                        android:src="@mipmap/mine_head" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/ci_head"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="----"
                                android:textColor="@color/_000000"
                                android:textSize="@dimen/text_sixteensp" />


                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_gonghao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/six"
                            android:text="工号：-----"
                            android:textColor="@color/test_color"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvCallPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/all_16dp"
                        android:drawableTop="@mipmap/daijia_callphone"
                        android:text="联系司机" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/shisi"
                    android:layout_marginTop="@dimen/slide_top_and_left_two"
                    android:layout_marginRight="@dimen/all_16dp"
                    android:background="#F0F0F0" />
            </LinearLayout>


            <View
                style="@style/_cccline"
                android:layout_marginLeft="@dimen/ershier"
                android:layout_marginTop="@dimen/shiyi"
                android:layout_marginRight="@dimen/all_16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="费用明细"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:textColor="@color/_000000"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:paddingHorizontal="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/slide_top_and_left_two">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="起步价（指定区域内）"
                        android:textColor="@color/_000000"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_qibu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="0元"
                        android:textColor="@color/_000000"
                        android:textSize="@dimen/sp_12" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/slide_top_and_left_two">

                    <TextView
                        android:id="@+id/tv_shichangfei_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="时长费（共0分钟）"
                        android:textColor="@color/_000000"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_shichangfei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="0元"
                        android:textColor="@color/_000000"
                        android:textSize="@dimen/sp_12" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/slide_top_and_left_two">

                    <TextView
                        android:id="@+id/tv_lichengfei_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="里程费（共0公里）"
                        android:textColor="@color/_000000"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_lichengfei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="0元"
                        android:textColor="@color/_000000"
                        android:textSize="@dimen/sp_12" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/slide_top_and_left_two">

                    <TextView
                        android:id="@+id/tv_lichengfei_title_nei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="区域内里程（共0公里）"
                        android:textColor="@color/_000000"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_lichengfei_nei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="0元"
                        android:textColor="@color/_000000"
                        android:textSize="@dimen/sp_12" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/slide_top_and_left_two">

                    <TextView
                        android:id="@+id/tv_lichengfei_title_wai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="区域外里程（共0公里）"
                        android:textColor="@color/_000000"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_lichengfei_wai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="0元"
                        android:textColor="@color/_000000"
                        android:textSize="@dimen/sp_12" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/slide_top_and_left_two">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="优惠金额"
                        android:textColor="@color/_000000"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_youhui"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="0元"
                        android:textColor="@color/_000000"
                        android:textSize="@dimen/sp_12" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/rlNoPay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_red_shape"
                    android:layout_marginTop="@dimen/ershi"
                    android:paddingVertical="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/ershisi">

                    <TextView
                        android:id="@+id/tvEndPayMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="实付金额：0元 立即支付"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_18" />

                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/rlPay"
                    android:paddingHorizontal="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/ershi"
                    android:layout_marginBottom="@dimen/ershisi">
                    <TextView
                        android:id="@+id/tv_all_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="实付：0元"
                        android:textColor="#000000"
                        android:layout_weight="1"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tvDaShang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/dp_15"
                        android:paddingVertical="@dimen/dp_8"
                        android:background="@drawable/daijia_pingjia_shape"
                        android:gravity="center"
                        android:text="打赏司机"
                        android:textColor="@color/colorOrange"
                        android:textSize="@dimen/sp_13" />
                    <TextView
                        android:id="@+id/tvPingJia"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/dp_20"
                        android:paddingVertical="@dimen/dp_8"
                        android:background="@drawable/button_shape"
                        android:gravity="center"
                        android:text="去评价"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>