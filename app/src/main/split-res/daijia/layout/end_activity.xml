<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.baidu.mapapi.map.MapView
        android:id="@+id/map_wait"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:clickable="true" />
    <ImageView
        android:id="@+id/iv_back"
        android:layout_marginLeft="@dimen/slide_top_and_left_two"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/sishi"
        android:src="@mipmap/diajia_map_back"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_anquan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/anquan_practice" />

            <ImageView
                android:id="@+id/now_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/now_location" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_richang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ershiba"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="@dimen/shiwu"
            android:background="@drawable/caidan_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/shisan">

                <com.xueyiche.zjyk.xueyiche.mine.view.CircleImageView
                    android:id="@+id/ci_head"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="@dimen/shisi"
                    android:src="@mipmap/mine_head" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/ci_head"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="----"
                            android:textColor="@color/_3333"
                            android:textSize="@dimen/text_sixteensp" />

                        <TextView
                            android:id="@+id/tv_age"
                            android:layout_width="@dimen/wushiwu"
                            android:layout_height="@dimen/ershi"
                            android:layout_marginLeft="@dimen/seven"
                            android:background="@drawable/practice_details_driver_year_shape"
                            android:gravity="center"
                            android:text="----"
                            android:textColor="#E2C0A6"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_gonghao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/six"
                        android:text="工号：-----"
                        android:textColor="@color/test_color"
                        android:textSize="@dimen/text_fourteensp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/all_16dp"
                    android:src="@mipmap/daijia_callphone" />
            </RelativeLayout>

            <View
                style="@style/_cccline"
                android:layout_marginLeft="@dimen/ershier"
                android:layout_marginRight="@dimen/all_16dp"
                android:layout_marginTop="@dimen/shiyi" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ershi"
                android:background="#f8f8f8"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/slide_top_and_left_two">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="@dimen/shisi"
                        android:text="起步价"
                        android:textColor="@color/_9999"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_user_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/all_16dp"
                        android:text="39元"
                        android:textColor="@color/_9999"
                        android:textSize="16sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/slide_top_and_left_two">

                    <TextView
                        android:id="@+id/tv_act_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/shisi"
                        android:text="里程费（共--公里，区域外-公里）"
                        android:textColor="@color/_9999"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_user_amount3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/all_16dp"
                        android:text="0元"
                        android:textColor="@color/_9999"
                        android:textSize="16sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/shisi"
                    android:layout_marginTop="@dimen/slide_top_and_left_two">

                    <TextView
                        android:id="@+id/tv_wait_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/shisi"
                        android:text="等候费（--分）"
                        android:textColor="@color/_9999"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_user_amount2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/all_16dp"
                        android:text="0元"
                        android:textColor="@color/_9999"
                        android:textSize="16sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/ershisi"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="@dimen/ershi">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="共计费："
                            android:textColor="@color/test_color"
                            android:textSize="@dimen/text_fifteensp" />

                        <TextView
                            android:id="@+id/tv_all_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="0元"
                            android:textColor="#D0021B"
                            android:textSize="@dimen/text_eightteensp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:text="评价"
                        android:id="@+id/tv_pingjia"
                        android:textSize="@dimen/text_eightteensp"
                        android:textColor="@color/colorOrange"
                        android:background="@drawable/daijia_pingjia_shape"
                        android:layout_width="100dp"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_height="35dp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>