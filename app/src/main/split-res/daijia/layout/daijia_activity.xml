<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/top"
        layout="@layout/new_top_include" />

    <com.amap.api.maps.MapView

        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_anquan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/slide_top_and_left_two"
            android:background="@mipmap/anquan_practice" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/slide_top_and_left_two">


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/dp_5"
                android:layout_marginTop="@dimen/slide_top_and_left_two"
                android:background="@drawable/daijia_yuanjiao_max"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_richang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/shiwu"
                    android:background="@drawable/choose_selector_shape"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/dp_10"
                    android:paddingVertical="@dimen/dp_5"
                    android:text="即时"
                    android:textColor="@drawable/daijia_choose_text_color"
                    android:textSize="@dimen/text_sixteensp" />

                <RadioButton
                    android:id="@+id/rb_yuyue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:background="@drawable/choose_selector_shape"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/dp_10"
                    android:paddingVertical="@dimen/dp_5"
                    android:text="预约"
                    android:textColor="@drawable/daijia_choose_text_color"
                    android:textSize="@dimen/text_sixteensp" />

                <RadioButton
                    android:id="@+id/rb_daijiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/choose_selector_shape"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/dp_10"
                    android:paddingVertical="@dimen/dp_5"
                    android:text="代叫"
                    android:textColor="@drawable/daijia_choose_text_color"
                    android:textSize="@dimen/text_sixteensp" />
            </RadioGroup>

            <ImageView
                android:id="@+id/iv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/jiu"
                android:src="@mipmap/now_location" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_richang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/slide_top_and_left_two"
            android:layout_marginTop="@dimen/slide_top_and_left_two"
            android:layout_marginRight="@dimen/slide_top_and_left_two"
            android:layout_marginBottom="@dimen/sishi"
            android:background="@drawable/caidan_bg"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_yuyue_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/dp_15"
                android:drawableLeft="@mipmap/yuyue_pic"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center_vertical"
                android:text="预约出发时间"
                android:textColor="#4D4D4D"
                android:textSize="@dimen/text_fifteensp"
                android:visibility="gone" />

            <com.xueyiche.zjyk.xueyiche.practicecar.view.CustomShapeImageView
                android:id="@+id/iv_daijia_banner"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="@dimen/shiyi"
                android:layout_marginTop="@dimen/shiwu"
                android:layout_marginRight="@dimen/shiyi"
                android:scaleType="fitXY"
                android:src="@mipmap/daijia_activity" />

            <TextView
                android:id="@+id/tv_choose_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:drawableRight="@mipmap/daijiao_jiantou"
                android:text="选择乘车人"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/dp_5"
                android:textColor="#ff4d4d4d"
                android:textSize="15sp"
                android:visibility="gone" />
            <TextView
                android:id="@+id/tv_choose_daijia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:drawableRight="@mipmap/daijiao_jiantou"
                android:text="选择代驾员"
                android:visibility="gone"
                android:drawableTint="@color/colorOrange"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/dp_5"
                android:textColor="@color/colorOrange"
                android:textSize="15sp"
                />
            <View
                style="@style/_cccline"
                android:layout_marginLeft="@dimen/seven"
                android:layout_marginTop="@dimen/all_zouyou"
                android:layout_marginRight="@dimen/seven"
                android:background="#F0F0F0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/shiba"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/seven"
                        android:layout_height="@dimen/seven"
                        android:src="@drawable/kongxin_circle_green" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="@dimen/sishi"
                        android:background="@drawable/line_vertical_shape" />

                    <ImageView
                        android:layout_width="@dimen/seven"
                        android:layout_height="@dimen/seven"
                        android:src="@drawable/kongxin_circle_orange" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical">


                        <TextView
                            android:id="@+id/tv_qidian"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/shiwu"
                            android:gravity="center_vertical"
                            android:text="科技大厦"
                            android:textColor="@color/_3333"
                            android:textSize="@dimen/sp_13" />
                    </LinearLayout>

                    <View
                        style="@style/_cccline"
                        android:layout_marginLeft="@dimen/shiwu" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">


                        <TextView
                            android:id="@+id/tv_mudi"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/shiwu"
                            android:gravity="center_vertical"
                            android:hint="请输入目的地"
                            android:textColorHint="@color/_9999"
                            android:textColor="@color/_000000"
                            android:textSize="@dimen/sp_13" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rl_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:visibility="gone"
                android:paddingTop="5dp">

                <LinearLayout
                    android:id="@+id/ll_money_liji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:text="约"
                        android:textColor="@color/test_color"
                        android:textSize="@dimen/text_threeteensp" />

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:text="0.0"
                        android:textColor="@color/_3333"
                        android:textSize="21sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:text="元"
                        android:textColor="@color/test_color"
                        android:textSize="@dimen/text_threeteensp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginLeft="@dimen/slide_top_and_left"
                        android:gravity="center"
                        android:text=">"
                        android:textColor="@color/_3333"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_yh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_money_liji"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@mipmap/dj_yhj_pc"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="无可用优惠券"
                    android:textColor="@color/_9999"
                    android:textSize="12sp" />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_xiadan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/all_include_height"
                android:layout_marginBottom="@dimen/shijiu"
              android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_marginTop="@dimen/shisan"
                android:background="@drawable/yijian_bg"
                android:gravity="center"
                android:text="立即下单"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>