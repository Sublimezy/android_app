<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.amap.api.maps.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_anquan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/slide_top_and_left_two"
            android:background="@mipmap/anquan_practice" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/slide_top_and_left_two">


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginTop="@dimen/slide_top_and_left_two"
                android:background="@drawable/daijia_yuanjiao_max"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_richang"
                    android:layout_width="64dp"
                    android:layout_height="@dimen/sanshi"
                    android:layout_marginLeft="@dimen/shiwu"
                    android:background="@drawable/choose_selector_shape"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="即时"
                    android:textColor="@drawable/daijia_choose_text_color"
                    android:textSize="@dimen/text_sixteensp" />

                <RadioButton
                    android:id="@+id/rb_yuyue"
                    android:layout_width="64dp"
                    android:layout_height="@dimen/sanshi"
                    android:layout_marginLeft="@dimen/slide_top_and_left_two"
                    android:background="@drawable/choose_selector_shape"
                    android:button="@null"
                    android:gravity="center"
                    android:text="预约"
                    android:textColor="@drawable/daijia_choose_text_color"
                    android:textSize="@dimen/text_sixteensp" />

                <RadioButton
                    android:id="@+id/rb_daijiao"
                    android:layout_width="64dp"
                    android:layout_height="@dimen/sanshi"
                    android:layout_marginLeft="@dimen/slide_top_and_left_two"
                    android:layout_marginRight="@dimen/ershiwu"
                    android:background="@drawable/choose_selector_shape"
                    android:button="@null"
                    android:gravity="center"
                    android:text="代叫"
                    android:textColor="@drawable/daijia_choose_text_color"
                    android:textSize="@dimen/text_sixteensp" />
            </RadioGroup>

            <ImageView
                android:id="@+id/iv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/jiu"
                android:src="@mipmap/now_location" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_richang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sishi"
            android:layout_marginLeft="@dimen/slide_top_and_left_two"
            android:layout_marginRight="@dimen/slide_top_and_left_two"
            android:layout_marginTop="@dimen/slide_top_and_left_two"
            android:background="@drawable/caidan_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_daijia_banner"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="@dimen/shiyi"
                android:layout_marginRight="@dimen/shiyi"
                android:scaleType="fitXY"
                android:layout_marginTop="@dimen/shiwu"
                android:src="@mipmap/daijia_activity"
           />

            <View
                style="@style/_cccline"
                android:layout_marginLeft="@dimen/seven"
                android:layout_marginRight="@dimen/seven"
                android:layout_marginTop="@dimen/all_zouyou"
                android:background="#F0F0F0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/shiba"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/seven"
                        android:layout_height="@dimen/seven"
                        android:src="@drawable/kongxin_circle_green" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="@dimen/sishi"
                        android:background="@drawable/line_vertical_shape" />

                    <ImageView
                        android:layout_width="@dimen/seven"
                        android:layout_height="@dimen/seven"
                        android:src="@drawable/kongxin_circle_orange" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sishiliu"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical">


                        <TextView
                            android:id="@+id/tv_qidian"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/shiwu"
                            android:gravity="center_vertical"
                            android:text="科技大厦"
                            android:textColor="@color/_3333"
                            android:textSize="@dimen/text_fifteensp" />
                    </LinearLayout>

                    <View
                        style="@style/_cccline"
                        android:layout_marginLeft="@dimen/shiwu" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:gravity="center_vertical">


                        <TextView
                            android:id="@+id/tv_mudi"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/shiwu"
                            android:gravity="center_vertical"
                            android:text="请输入目的地"
                            android:textColor="@color/_9999"
                            android:textSize="@dimen/text_fifteensp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <View
                style="@style/_cccline"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="30dp" />

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:gravity="center"
                android:text="约--元 >"
                android:textColor="@color/colorOrange"
                android:textSize="18sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_yuyue"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/shiwu"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/caidan_bg"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_yuyue_time"
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/yuyue_pic" />

                <TextView
                    android:id="@+id/tv_yuyue_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="预约出发时间"
                    android:textColor="#4D4D4D"
                    android:textSize="@dimen/text_fifteensp" />
            </LinearLayout>

            <View
                style="@style/_cccline"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="30dp" />
            <com.xueyiche.zjyk.xueyiche.practicecar.view.CustomShapeImageView
                android:id="@+id/iv_daijia_banner_yuyue"
               android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="@dimen/shiyi"
                android:layout_marginRight="@dimen/shiyi"
                android:scaleType="fitXY"
                android:layout_marginTop="@dimen/shiwu"
                android:src="@mipmap/daijia_activity"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/shiba"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/seven"
                        android:layout_height="@dimen/seven"
                        android:src="@drawable/kongxin_circle_green" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="@dimen/sishi"
                        android:background="@drawable/line_vertical_shape" />

                    <ImageView
                        android:layout_width="@dimen/seven"
                        android:layout_height="@dimen/seven"
                        android:src="@drawable/kongxin_circle_orange" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sishiliu"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical">


                        <TextView
                            android:id="@+id/tv_qidian_yuyue"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/shiwu"
                            android:gravity="center_vertical"
                            android:text="科技大厦"
                            android:textColor="@color/_3333"
                            android:textSize="@dimen/text_fifteensp" />
                    </LinearLayout>

                    <View
                        style="@style/_cccline"
                        android:layout_marginLeft="@dimen/shiwu" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:gravity="center_vertical">


                        <TextView
                            android:id="@+id/tv_mudi_yuyue"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/shiwu"
                            android:gravity="center_vertical"
                            android:text="请输入目的地"
                            android:textColor="@color/_9999"
                            android:textSize="@dimen/text_fifteensp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <View
                style="@style/_cccline"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="15dp" />

            <RelativeLayout
                android:id="@+id/rl_beizhu"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:drawableLeft="@mipmap/daijia_beizhu_pic"
                    android:drawablePadding="10dp"
                    android:text="备注"
                    android:textColor="@color/_9999"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_beizhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="10dp"
                    android:maxLength="7"
                    android:text="给司机留言 >"
                    android:textColor="@color/_9999"
                    android:textSize="16sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text="约"
                    android:textColor="@color/test_color"
                    android:textSize="@dimen/text_threeteensp" />

                <TextView
                    android:id="@+id/tv_money_yuyue"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text="100"
                    android:textColor="@color/_3333"
                    android:textSize="21sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text="元"
                    android:textColor="@color/test_color"
                    android:textSize="@dimen/text_threeteensp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="@dimen/slide_top_and_left"
                    android:gravity="center"
                    android:text=">"
                    android:textColor="@color/_3333"
                    android:textSize="15sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_xiadan_yuyue"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/yijian_bg"
                android:gravity="center"
                android:text="一键下单"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_daijiao"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sishi"
            android:layout_marginLeft="@dimen/slide_top_and_left_two"
            android:layout_marginRight="@dimen/slide_top_and_left_two"
            android:layout_marginTop="@dimen/slide_top_and_left_two"
            android:background="@drawable/caidan_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_daijia_banner_daijiao"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="@dimen/shiyi"
                android:layout_marginRight="@dimen/shiyi"
                android:scaleType="fitXY"
                android:layout_marginTop="@dimen/shiwu"
                android:src="@mipmap/daijia_activity"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/shiyi"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_choose_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预约时间  "
                    android:visibility="gone"
                    android:drawableRight="@mipmap/daijiao_jiantou"
                    android:textColor="#ff4d4d4d"
                    android:textSize="15sp"
                    />
                <View
                    android:id="@+id/daijiao_line"
                   android:layout_width="1px"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/sishiwu"
                    android:layout_marginRight="@dimen/sishiwu"
                   android:layout_height="28dp"
                    android:background="@color/all_line_color" />
                <TextView
                    android:id="@+id/tv_choose_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择乘车人  "
                    android:drawableRight="@mipmap/daijiao_jiantou"
                    android:textColor="#ff4d4d4d"
                    android:textSize="15sp"
                    />
            </LinearLayout>

            <View
                style="@style/_cccline"
                android:layout_marginLeft="@dimen/seven"
                android:layout_marginRight="@dimen/seven"
                android:layout_marginTop="@dimen/shiwu"
                android:background="#F0F0F0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/shiba"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/seven"
                        android:layout_height="@dimen/seven"
                        android:src="@drawable/kongxin_circle_green" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="@dimen/sishi"
                        android:background="@drawable/line_vertical_shape" />

                    <ImageView
                        android:layout_width="@dimen/seven"
                        android:layout_height="@dimen/seven"
                        android:src="@drawable/kongxin_circle_orange" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sishiliu"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical">


                        <TextView
                            android:id="@+id/tv_qidian_daijiao"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/shiwu"
                            android:gravity="center_vertical"
                            android:text="科技大厦"
                            android:textColor="@color/_3333"
                            android:textSize="@dimen/text_fifteensp" />
                    </LinearLayout>

                    <View
                        style="@style/_cccline"
                        android:layout_marginLeft="@dimen/shiwu" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:gravity="center_vertical">


                        <TextView
                            android:id="@+id/tv_mudi_daijiao"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/shiwu"
                            android:gravity="center_vertical"
                            android:text="请输入目的地"
                            android:textColor="@color/_9999"
                            android:textSize="@dimen/text_fifteensp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <View
                style="@style/_cccline"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:gravity="center"
                android:text="约--元 >"
                android:textColor="@color/colorOrange"
                android:textSize="18sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>