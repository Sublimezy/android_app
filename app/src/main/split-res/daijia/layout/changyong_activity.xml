<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:paddingTop="40dp">

        <TextView
            android:id="@+id/tv_city"
            style="@style/shop_title_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:drawablePadding="10dp"
            android:text="哈尔滨"
            android:textColor="@color/_4f4f4f"
            android:textStyle="bold" />

        <View
            style="@style/_cccline"
            android:layout_width="1px"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:background="@color/_9999" />

        <EditText
            android:id="@+id/et_mudi"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:cursorVisible="false"
            android:textColor="#999"
            android:hint="您要去哪儿"
            android:textSize="14sp"
            android:layout_marginLeft="10dp" />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="取消"
            android:id="@+id/tv_finish"
            android:layout_marginRight="10dp"
            android:textColor="#4f4f4f"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_alignParentBottom="true"
        style="@style/_cccline" />
    <ListView
        android:id="@+id/lv_lishi"
        android:layout_width="match_parent"
        android:divider="@null"
        android:scrollbars="none"
        android:layout_height="wrap_content">
    </ListView>
    <ListView
        android:layout_width="match_parent"
        android:id="@+id/lv_poi"
        android:divider="@null"
        android:paddingRight="@dimen/all_zouyou"
        android:paddingLeft="@dimen/all_zouyou"
        android:scrollbars="none"
        android:layout_height="wrap_content"
        />
</LinearLayout>