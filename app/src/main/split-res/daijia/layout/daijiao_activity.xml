<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/new_top_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/all_line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F7F7F7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/slide_top_and_left"
            android:layout_marginRight="@dimen/slide_top_and_left"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/all_zouyou"
            android:background="@mipmap/daijiao_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="乘车人"
                android:layout_marginTop="@dimen/sanshi"
                android:layout_marginLeft="@dimen/sanshi"
                android:textColor="@color/_3333"
                android:textSize="@dimen/text_seveneensp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/sanshisi"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/sanshi"
                    android:background="@null"
                    android:hint="手机号"
                    android:textSize="@dimen/text_fourteensp"
                    android:inputType="phone"
                    android:textColor="@color/_9999" />
                <TextView
                    android:id="@+id/tv_phone_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通讯录  "
                    android:layout_marginRight="@dimen/sanshi"
                    android:drawableRight="@mipmap/daijiao_jiantou"
                    android:layout_marginLeft="@dimen/sanshi"
                    android:textColor="@color/_3333"
                    android:textSize="@dimen/text_seveneensp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/shisan"
                android:layout_marginRight="@dimen/sanshi"
                android:layout_marginLeft="@dimen/sanshi"
                android:background="@color/all_line_color"
                android:layout_height="1px"/>
            <EditText
                android:id="@+id/et_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sanshi"
                android:background="@null"
                android:hint="姓名（选填）"
                android:layout_marginTop="@dimen/shiqi"
                android:textSize="@dimen/text_fourteensp"
                android:textColor="@color/_9999" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/slide_top_and_left_two"
            android:text="乘车人无需付费"
            android:textColor="@color/_9999"
            android:textSize="@dimen/side_letter_bar_letter_size" />
        <ImageView
            android:id="@+id/iv_daijiao"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/all_include_height"
            android:layout_width="wrap_content"
            android:src="@mipmap/daijia_daijiao_ok"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>