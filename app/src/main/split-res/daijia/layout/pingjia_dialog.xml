<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/sanshi"
        android:text="评价"
        android:textColor="@color/_4f4f4f"
        android:textSize="@dimen/text_seveneensp" />

    <RatingBar
        android:id="@+id/rb_star"
        android:layout_width="wrap_content"
        android:stepSize="1"
        style="@style/MyRatingBarNowSmall"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="@dimen/slide_top_and_left"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:numStars="5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sishiwu"
        android:layout_marginBottom="@dimen/zero"
        android:layout_marginTop="@dimen/sishi"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_quxiao"
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/sishiwu"
            android:layout_weight="1"
            android:textColor="@color/test_color"
            android:background="@drawable/zuoshape_hui"
            android:gravity="center"

            android:text="@string/quxiao"

            android:textSize="@dimen/text_seveneensp" />

        <TextView
            android:id="@+id/tv_queren"
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/sishiwu"
            android:layout_weight="1"
            android:background="@drawable/youshape_huang"
            android:gravity="center"
            android:text="@string/queren"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_seveneensp" />

    </LinearLayout>
</LinearLayout>