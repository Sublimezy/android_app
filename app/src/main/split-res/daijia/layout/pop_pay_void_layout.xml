<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="50dp"
    android:background="#50000000">

    <LinearLayout
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wushiwu">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="请选择支付方式"
                android:textColor="#ff4d4d4d"
                android:textSize="@dimen/text_sixteensp" />

            <ImageView
                android:id="@+id/iv_pay_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/all_16dp"
                android:src="@mipmap/iv_daijia_pay_quxiao" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/yi"
            android:background="#F0F0F0" />

        <RelativeLayout
            android:id="@+id/rl_pay_zhifubao"
            android:layout_width="match_parent"
            android:layout_height="63dp">

            <TextView
                android:layout_marginLeft="@dimen/sanshiyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/daijia_pay_zhifubao_logo"
                android:gravity="center_vertical"
                android:text="   支付宝"
                android:textColor="#ff4d4d4d"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_zhifubao_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/ershiyi"
                android:visibility="gone"
                android:src="@mipmap/daijia_pay_ok" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_pay_wechat"
            android:layout_width="match_parent"
            android:layout_height="63dp">

            <TextView
                android:layout_marginLeft="@dimen/sanshiyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/daijia_pay_wechat_logo"
                android:gravity="center_vertical"
                android:text="   微信支付"
                android:textColor="#ff4d4d4d"
                android:textSize="16sp" />
            <ImageView
                android:id="@+id/iv_wecaht_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/ershiyi"
                android:visibility="gone"
                android:src="@mipmap/daijia_pay_no" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/yi"
            android:background="@color/all_line_color" />

    </LinearLayout>

</RelativeLayout>