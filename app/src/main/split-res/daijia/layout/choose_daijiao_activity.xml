<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/new_top_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/all_line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F7F7F7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/slide_top_and_left"
            android:layout_marginRight="@dimen/slide_top_and_left"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/all_zouyou"
            android:background="@mipmap/daijiao_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="代驾司机"
                android:layout_marginTop="@dimen/sanshi"
                android:layout_marginLeft="@dimen/sanshi"
                android:textColor="@color/_3333"
                android:textSize="@dimen/text_seveneensp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/sanshisi"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/sanshi"
                    android:background="@null"
                    android:hint="代驾员工号"
                    android:textSize="@dimen/text_fifteensp"
                    android:textColor="@color/_9999" />
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/sanshi"
                    android:layout_marginLeft="@dimen/sanshi"
                    android:textColor="#000000"
                    android:textSize="@dimen/text_fifteensp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/shisan"
                android:layout_marginRight="@dimen/sanshi"
                android:layout_marginLeft="@dimen/sanshi"
                android:background="#E3E3E3"
                android:layout_height="1px"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="invisible"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/slide_top_and_left_two"
            android:text="乘车人无需付费"
            android:textColor="@color/_9999"
            android:textSize="@dimen/side_letter_bar_letter_size" />
        <Button
            android:id="@+id/iv_daijiao"
            android:layout_width="344dp"
            android:layout_height="@dimen/all_include_height"
            android:text="确认"
            android:textSize="20sp"
            android:textColor="@color/color_white"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/all_include_height"
            android:background="@drawable/button_no_or_ok_selector"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </LinearLayout>

</LinearLayout>