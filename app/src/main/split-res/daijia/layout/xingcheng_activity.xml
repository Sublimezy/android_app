                    android:textColor="#ff4d4d4d"
                    android:textSize="15sp" />

                <View
                    android:id="@+id/daijiao_line"
                    android:layout_width="1px"
                    android:layout_height="28dp"
                    android:layout_marginLeft="@dimen/sishiwu"
                    android:layout_marginRight="@dimen/sishiwu"
                    android:background="@color/all_line_color" />

                <TextView
                    android:id="@+id/tv_choose_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/daijiao_jiantou"
                    android:text="选择乘车人  "
                    android:textColor="#ff4d4d4d"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                style="@style/_cccline"
                android:layout_marginTop="@dimen/shiwu" />
            <TextView
                android:id="@+id/tv_choose_daijiao_daijia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/shiwu"
                android:text="选择代驾员   >"
                android:paddingBottom="@dimen/slide_top_and_left_two"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/text_fifteensp" />

            <View
                style="@style/_cccline"
               />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/shiba"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/seven"
                        android:layout_height="@dimen/seven"
                        android:src="@drawable/kongxin_circle_green" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="@dimen/sishi"
                        android:background="@drawable/line_vertical_shape" />

                    <ImageView
                        android:layout_width="@dimen/seven"
                        android:layout_height="@dimen/seven"
                        android:src="@drawable/kongxin_circle_orange" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sishiliu"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical">


                        <TextView
                            android:id="@+id/tv_qidian_daijiao"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/shiwu"
                            android:gravity="center_vertical"
                            android:text="科技大厦"
                            android:textColor="@color/_3333"
                            android:textSize="@dimen/text_fifteensp" />
                    </LinearLayout>

                    <View
                        style="@style/_cccline"
                        android:layout_marginLeft="@dimen/sanshiwu" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:gravity="center_vertical">


                        <TextView
                            android:id="@+id/tv_mudi_daijiao"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/shiwu"
                            android:gravity="center_vertical"
                            android:text="请输入目的地"
                            android:textColor="@color/_9999"
                            android:textSize="@dimen/text_fifteensp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


            <View
                style="@style/_cccline"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="15dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:drawableLeft="@mipmap/daijia_beizhu_pic"
                    android:drawablePadding="10dp"
                    android:text="备注"
                    android:textColor="@color/_9999"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="10dp"
                    android:maxLength="7"
                    android:text="给司机留言 >"
                    android:textColor="@color/_9999"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_money_daijiao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
