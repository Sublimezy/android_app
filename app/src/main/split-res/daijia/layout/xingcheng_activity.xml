<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.amap.api.maps.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title" />

    <include
        android:id="@+id/title"
        layout="@layout/new_top_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_anquan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/slide_top_and_left_two"
            android:background="@mipmap/anquan_practice" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginTop="@dimen/slide_top_and_left_two"
                android:background="@drawable/daijia_yuanjiao_max"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_richang"
                    android:layout_width="64dp"
                    android:layout_height="@dimen/sanshi"
                    android:layout_marginLeft="@dimen/shiwu"
                    android:background="@drawable/choose_selector_shape"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="即时"
                    android:textColor="@drawable/daijia_choose_text_color"
                    android:textSize="@dimen/text_sixteensp" />

                <RadioButton
                    android:id="@+id/rb_yuyue"
                    android:layout_width="64dp"
                    android:layout_height="@dimen/sanshi"
                    android:layout_marginLeft="@dimen/slide_top_and_left_two"
                    android:background="@drawable/choose_selector_shape"
                    android:button="@null"
                    android:gravity="center"
                    android:text="预约"
                    android:textColor="@drawable/daijia_choose_text_color"
                    android:textSize="@dimen/text_sixteensp" />

                <RadioButton
                    android:id="@+id/rb_daijiao"
                    android:layout_width="64dp"
                    android:layout_height="@dimen/sanshi"
                    android:layout_marginLeft="@dimen/slide_top_and_left_two"
                    android:layout_marginRight="@dimen/ershiwu"
                    android:background="@drawable/choose_selector_shape"
                    android:button="@null"
                    android:gravity="center"
                    android:text="代叫"
                    android:textColor="@drawable/daijia_choose_text_color"
                    android:textSize="@dimen/text_sixteensp" />
            </RadioGroup>

            <ImageView
                android:id="@+id/iv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/now_location" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_richang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/caidan_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_choose_liji_daijia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/shiwu"
                android:text="选择代驾员   >"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/text_fifteensp" />

            <View
                style="@style/_cccline"
                android:layout_marginTop="@dimen/slide_top_and_left_two" />

            <LinearLayout
