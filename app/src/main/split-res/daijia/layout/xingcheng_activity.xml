                            android:text="科技大厦"
                            android:textColor="@color/_3333"
                            android:textSize="@dimen/text_fifteensp" />
                    </LinearLayout>

                    <View
                        style="@style/_cccline"
                        android:layout_marginLeft="@dimen/sanshiwu" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:gravity="center_vertical">


                        <TextView
                            android:id="@+id/tv_mudi"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/shiwu"
                            android:gravity="center_vertical"
                            android:text="请输入目的地"
                            android:textColor="@color/_9999"
                            android:textSize="@dimen/text_fifteensp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_daijiao"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/daijiao_hui_bg"
                android:gravity="center"
                android:text="代叫服务"
                android:textColor="@color/_666"
                android:textSize="18sp"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/rl_money"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <LinearLayout
                    android:id="@+id/ll_money_liji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:text="约"
                        android:textColor="@color/test_color"
                        android:textSize="@dimen/text_threeteensp" />

                    <TextView
