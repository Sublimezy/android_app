                android:layout_height="@dimen/all_include_height"
                android:layout_marginBottom="@dimen/shijiu"
                android:layout_marginLeft="@dimen/seven"
                android:layout_marginRight="@dimen/seven"
                android:layout_marginTop="@dimen/shisan"
                android:background="@drawable/yijian_bg"
                android:gravity="center"
                android:text="预约下单"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_daijiao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="5dp"
