<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.baidu.mapapi.map.TextureMapView
        android:id="@+id/map_wait"
        android:layout_width="match_parent"
        android:layout_below="@+id/title"
        android:layout_height="match_parent"
        android:clickable="true" />
    <ImageView
        android:id="@+id/iv_back"
        android:layout_marginLeft="@dimen/slide_top_and_left_two"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/sishi"
        android:src="@mipmap/diajia_map_back"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="241dp"
        android:visibility="gone"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/daijia_yuanjiao_max"
        android:layout_height="45dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="已等待"
                android:textSize="11sp"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                android:textColor="@color/_666"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="2dp"
                android:text="--:--"
                android:id="@id/tv_order_sn"
                android:textColor="@color/colorOrange"
                android:textSize="15sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            style="@style/_cccline"
            android:layout_width="1px"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@color/_9999" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/_666"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:text="持续为您寻找更快的司机"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/caidan_bg"
            android:layout_marginBottom="@dimen/slide_top_and_left_two"
            android:clickable="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:orientation="horizontal"
            android:layout_height="@dimen/all_include_height">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/shiba"
                android:src="@mipmap/daijia_yuyue_time"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/shiyi"
                android:textColor="@color/_3333"
                android:textSize="@dimen/text_fifteensp"
                android:text="00月00日"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_isToday"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/shiyi"
                android:textColor="@color/_3333"
                android:textSize="@dimen/text_fifteensp"
                android:text="--"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_time_yuyue"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/er"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/text_fifteensp"
                android:text="00:00"
                android:layout_marginRight="@dimen/er"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/_3333"
                android:textSize="@dimen/text_fifteensp"
                android:text="出发"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/caidan_bg"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/_3333"
                android:textSize="@dimen/text_fifteensp"
                android:layout_marginTop="@dimen/shiqi"
                android:layout_marginLeft="@dimen/shiba"
                android:text="正在为您预约司机…"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/ba"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/test_color"
                    android:layout_marginLeft="@dimen/shiba"
                    android:layout_marginRight="@dimen/shiba"
                    android:textSize="@dimen/side_letter_bar_letter_size"
                    android:layout_gravity="center_horizontal"
                    android:text="正在全力为您寻找司机，感谢您的耐心等待"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                style="@style/_cccline"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/_666"
                android:textSize="@dimen/text_fifteensp"
                android:id="@+id/tv_quxia"
                android:layout_gravity="center_horizontal"
                android:text="  取消代驾"
                android:gravity="center_vertical"
                android:drawableLeft="@mipmap/quxiao"
                android:layout_height="51dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>