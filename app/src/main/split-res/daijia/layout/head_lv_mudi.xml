<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/ll_home"
            android:layout_height="85dp">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/home_mudi"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_jia"
                    android:layout_width="wrap_content"
                    android:text="添加"
                    android:maxLines="1"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/_4f4f4f"
                    android:textSize="15sp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="15dp"
                    android:maxLines="1"
                    android:text="设置常用地址"
                    android:id="@+id/tv_jia_address"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
        <View
            style="@style/_cccline"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@color/_9999" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/ll_company"
            android:layout_height="85dp">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/company_mudi"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_gongsi"
                    android:layout_width="wrap_content"
                    android:text="添加"
                    android:maxLines="1"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/_4f4f4f"
                    android:textSize="15sp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="15dp"
                    android:id="@+id/tv_gongsi_address"
                    android:maxLines="1"
                    android:text="设置常用地址"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_alignParentBottom="true"
        style="@style/_cccline" />
</LinearLayout>