<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.baidu.mapapi.map.MapView
        android:id="@+id/map_wait"
        android:layout_width="match_parent"
        android:layout_below="@+id/title"
        android:layout_height="match_parent"
        android:clickable="true" />
    <ImageView
        android:id="@+id/iv_back"
        android:layout_marginLeft="@dimen/slide_top_and_left_two"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/sishi"
        android:src="@mipmap/diajia_map_back"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="241dp"
        android:visibility="gone"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/daijia_yuanjiao_max"
        android:layout_height="45dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="已等待"
                android:textSize="11sp"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                android:textColor="@color/_666"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="2dp"
                android:text="--:--"
                android:id="@id/tv_time"
                android:textColor="@color/colorOrange"
                android:textSize="15sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            style="@style/_cccline"
            android:layout_width="1px"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@color/_9999" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/_666"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:text="持续为您寻找更快的司机"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/caidan_bg"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_height="100dp">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/_3333"
            android:textSize="@dimen/text_fifteensp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:text="我们将在5分钟持续为您寻找司机，请耐心等待"
            android:layout_height="wrap_content" />
        <View
            style="@style/_cccline"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/_666"
            android:textSize="@dimen/text_fifteensp"
            android:id="@+id/tv_quxia"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:text="取消代驾"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/quxiao"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>