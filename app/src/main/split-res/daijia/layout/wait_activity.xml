<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.amap.api.maps.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/slide_top_and_left_two"
        android:layout_marginTop="@dimen/sishi"
        android:src="@mipmap/diajia_map_back" />

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="@drawable/daijia_yuanjiao_max">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="--:--"
                android:textColor="@color/colorOrange"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            style="@style/_cccline"
            android:layout_width="1px"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@color/_9999" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/dp_10"
            android:text="持续为您寻找更快的司机"
            android:textColor="@color/_666"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llbottom"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/caidan_bg"
        android:clickable="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="我们将在5分钟持续为您寻找司机，请耐心等待"
            android:textColor="@color/_3333"
            android:textSize="@dimen/text_fifteensp" />

        <View
            style="@style/_cccline"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/tv_quxia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:drawableLeft="@mipmap/quxiao"
            android:drawablePadding="10dp"
            android:text="取消代驾"
            android:textColor="@color/_666"
            android:textSize="@dimen/text_fifteensp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_user"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_above="@+id/llbottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:src="@mipmap/now_location" />
</RelativeLayout>