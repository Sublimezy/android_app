<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/practice_content_include"
        layout="@layout/new_top_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <com.xueyiche.zjyk.xueyiche.homepage.view.AdListView
                android:id="@+id/lv_practice_content"
                android:divider="@null"
                android:focusable="false"
                android:listSelector="#00000000"
                android:choiceMode="multipleChoice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <EditText
                android:layout_width="match_parent"
                android:hint="请输入详细内容，以便我们更快的核实情况"
                android:textColor="@color/_9999"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:layout_marginTop="10dp"
                android:gravity="top"
                android:background="@drawable/quxiao_bg"
                android:layout_marginRight="@dimen/sanshijiu"
                android:layout_marginLeft="@dimen/sanshijiu"
                android:textSize="12sp"
                android:layout_height="80dp" />
            <Button
                android:id="@+id/bt_ok"
                android:background="@drawable/queren_bg"
                android:layout_width="match_parent"
                android:text="确认提交"
                android:layout_marginTop="@dimen/sishi"
                android:textSize="@dimen/text_ershisp"
                android:textColor="@color/color_white"
                android:layout_marginBottom="@dimen/sishi"
                android:layout_marginRight="@dimen/all_16dp"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_height="@dimen/all_include_height" />
        </LinearLayout>

    </ScrollView>


</LinearLayout>