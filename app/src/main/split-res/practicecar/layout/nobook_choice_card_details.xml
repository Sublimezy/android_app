<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/color_white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.xueyiche.zjyk.xueyiche.homepage.view.ObservableScrollView
                android:id="@+id/os_shop"
                android:layout_width="match_parent"
                android:listSelector="@null"
                android:scrollbars="none"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/shop_all"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/shop_content_include"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:id="@+id/rl_bottom"
                            android:layout_width="match_parent"
                            android:layout_height="491dp">

                            <com.xueyiche.zjyk.xueyiche.homepage.fragments.bannerview.LoopViewPager
                                android:id="@+id/vp_shop_lunbo"
                                android:layout_width="match_parent"
                                android:layout_height="485dp" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:background="@mipmap/driver_shcool_lunb"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_shop_type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginTop="43dp"
                                    android:text="驾考"
                                    android:textColor="@color/color_white"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/tv_shop_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginTop="15dp"
                                    android:textColor="@color/color_white"
                                    android:textSize="25sp" />
                            </LinearLayout>
                            <com.xueyiche.zjyk.xueyiche.homepage.fragments.bannerview.ProgressPageIndicator
                                android:id="@+id/dotsL"
                                android:layout_width="match_parent"
                                android:paddingRight="@dimen/all_zouyou"
                                android:paddingLeft="@dimen/all_zouyou"
                                android:layout_height="5dp"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                app:fillColor="#cccccc"
                                app:dotGap="5dp"/>
                        </RelativeLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:background="#131212"
                            android:paddingTop="10dp"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:id="@+id/ll_label_one"
                                android:paddingTop="10dp"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="12dp"
                                android:layout_marginRight="12dp"
                                >

                                <ImageView
                                    android:id="@+id/iv_label_one"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:src="@mipmap/driver_school_xiazheng" />

                                <TextView
                                    android:id="@+id/tv_label_one_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:text="---"
                                    android:textColor="@color/color_white"
                                    android:textSize="18sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:paddingTop="10dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginRight="12dp"
                                >

                                <ImageView
                                    android:id="@+id/iv_label_two"
                                    android:layout_width="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/driver_school_yuyue" />

                                <TextView
                                    android:id="@+id/tv_label_two_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:text="---"
                                    android:textColor="@color/color_white"
                                    android:textSize="18sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:paddingTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="12dp"
                                android:layout_marginRight="12dp"
                                >

                                <ImageView
                                    android:id="@+id/iv_label_three"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:src="@mipmap/driver_school_number" />

                                <TextView
                                    android:id="@+id/tv_shop_people_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:text="---"
                                    android:textColor="@color/color_white"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:background="#131212"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:layout_marginRight="12dp"
                                >

                                <ImageView
                                    android:id="@+id/iv_label_four"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/driver_school_dizhi" />

                                <TextView
                                    android:id="@+id/tv_shop_address"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:ellipsize="end"
                                    android:gravity="left"
                                    android:lines="1"
                                    android:maxLength="10"
                                    android:textColor="@color/color_white"
                                    android:textSize="18sp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/iv_shop_daohang"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="20dp"
                                    android:src="@mipmap/driver_school_daohang" />

                                <ImageView
                                    android:id="@+id/iv_shop_phone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:src="@mipmap/driver_school_phone" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_practice_location"
                                android:layout_width="match_parent"
                                android:visibility="gone"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="10dp"
                                android:layout_marginRight="12dp"
                                >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/practice_location" />

                                <TextView
                                    android:id="@+id/tv_practice_address"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="20dp"
                                    android:ellipsize="end"
                                    android:gravity="left"
                                    android:lines="1"
                                    android:maxLength="10"
                                    android:textColor="@color/color_white"
                                    android:textSize="18sp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/iv_practie_daohang"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/driver_school_daohang" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/shop_title_1"
                            android:text="服务详情" />

                        <LinearLayout
                            android:id="@+id/ll_youzheng_visible"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tv_driver_seriesname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lines="1"

                                android:paddingTop="15dp"
                                android:textColor="@color/_666"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/tv_hour_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorOrange"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_wuzheng_visible"
                            android:layout_width="match_parent"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <com.xueyiche.zjyk.xueyiche.homepage.view.AdListView
                                android:id="@+id/lv_taocan"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:divider="@null"
                                android:listSelector="@android:color/transparent"/>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/in_shop_pingjia"
                        android:layout_marginBottom="@dimen/jiushi"
                        android:layout_marginLeft="@dimen/all_zouyou"
                        android:layout_marginRight="@dimen/all_zouyou"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_pingjia_number"
                                style="@style/shop_title_1"
                                android:text="评价" />
                            <TextView
                                android:id="@+id/tv_pingjia_more"
                                android:layout_width="wrap_content"
                                android:text="更多"
                                android:textSize="12dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:textColor="#ffb10c"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                      <com.xueyiche.zjyk.xueyiche.homepage.view.AdListView
                          android:id="@+id/lv_pingjia"
                          android:divider="@null"
                          android:listSelector="@color/color_white"
                          android:layout_width="match_parent"
                          android:scrollbars="none"
                          android:layout_height="wrap_content"/>


                    </LinearLayout>

                </LinearLayout>


            </com.xueyiche.zjyk.xueyiche.homepage.view.ObservableScrollView>

            <LinearLayout
                android:id="@+id/shopping_cart_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/color_white"
                android:clickable="true"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/yi"
                    android:background="@color/_cccccc" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sishiba"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/slide_top_and_left">

                        <TextView
                            android:id="@+id/tv_hour_price_bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/ershier"
                            android:gravity="center_vertical"
                            android:text="0"
                            android:textColor="@color/colorOrange"
                            android:textSize="@dimen/text_ershisp" />

                        <TextView
                            android:id="@+id/tv_shop_content_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/slide_top_and_left"
                            android:gravity="center_vertical"
                            android:text="/小时"
                            android:textColor="@color/_4f4f4f"
                            android:textSize="@dimen/text_ershisp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/slide_top_and_left_two"
                            android:gravity="center_vertical"
                            android:text="2小时起预定"
                            android:textColor="@color/_666"
                            android:textSize="@dimen/text_fifteensp" />
                    </LinearLayout>


                    <Button
                        android:id="@+id/bt_carlive_shop_buy"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="@color/colorOrange"
                        android:text="立即预约"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/text_eightteensp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/shopping_cart_total_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/shopping_cart_bottom"
                android:layout_alignRight="@+id/shopping_cart_layout"
                android:layout_marginBottom="5dp"
                android:background="@drawable/small_red_circle"
                android:text="1"
                android:textColor="@color/color_white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="invisible" />
        </RelativeLayout>

        <include
            android:id="@+id/shop_top_include"
            layout="@layout/shop_top_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>
</RelativeLayout>