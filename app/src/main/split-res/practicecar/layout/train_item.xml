<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/shiwu"
        android:background="@drawable/huifu_bg"
        android:layout_marginRight="@dimen/all_zouyou"
        android:layout_marginLeft="@dimen/all_zouyou"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_today_order"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/all_zouyou"
            android:layout_width="wrap_content"
            android:src="@mipmap/liji_order"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/iv_today_order"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_day"
                    android:layout_width="wrap_content"
                    android:text="今天"
                    android:textColor="@color/_4f4f4f"
                    android:layout_marginLeft="@dimen/all_zouyou"
                    android:layout_marginTop="@dimen/shiwu"
                    android:textSize="@dimen/text_ershisp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:text="2019-03-02"
                    android:layout_marginLeft="@dimen/slide_top_and_left_two"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/test_color"
                    android:layout_marginTop="@dimen/shiwu"
                    android:textSize="@dimen/side_letter_bar_letter_size"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_today_content"
                android:layout_width="wrap_content"
                android:text="科目：倒车入库"
                android:textColor="@color/test_color"
                android:layout_marginRight="@dimen/all_zouyou"
                android:layout_marginLeft="@dimen/all_zouyou"
                android:layout_marginTop="@dimen/shiwu"
                android:textSize="@dimen/text_fifteensp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/shiwu"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="预约人数："
                    android:textColor="@color/test_color"
                    android:layout_marginLeft="@dimen/all_zouyou"
                    android:layout_marginTop="@dimen/shiwu"
                    android:textSize="@dimen/text_fifteensp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_order_num"
                    android:layout_width="wrap_content"
                    android:text="1/3"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorOrange"
                    android:layout_marginTop="@dimen/shiwu"
                    android:textSize="@dimen/text_fifteensp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>