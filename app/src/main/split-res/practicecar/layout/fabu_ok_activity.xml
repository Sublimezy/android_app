<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <include
        android:id="@+id/title"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginTop="105dp"
        android:src="@mipmap/pay_succeed"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:textSize="25sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/_4f4f4f"
        android:text="发布成功"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/_666"
        android:text="您的预约订单已发布成功"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_succeed_chakan"
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorOrange"
        android:drawableRight="@mipmap/pay_succeed_chakan"
        android:drawablePadding="10dp"
        android:text="查看订单"
        android:layout_height="wrap_content" />
</LinearLayout>