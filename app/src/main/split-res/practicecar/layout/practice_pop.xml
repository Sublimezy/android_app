<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/color_white"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/tv_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:layout_marginLeft="@dimen/ershi"
                android:layout_centerVertical="true"
                android:textColor="@color/_3232" />
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择下证时间"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/_3232" />
            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确定"
                android:layout_marginRight="@dimen/ershi"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/_3232" />
        </RelativeLayout>
        <View
            style="@style/_cccline"
            />
        <RelativeLayout
            android:id="@+id/two"
            android:layout_below="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sishi">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年"
                android:layout_marginLeft="@dimen/sishi"
                android:layout_centerVertical="true"
                android:textColor="@color/test_color" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/test_color" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日"
                android:layout_marginRight="@dimen/ershi"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/test_color" />
        </RelativeLayout>
        <View
            style="@style/_cccline"
            />
        <com.xueyiche.zjyk.xueyiche.utils.GregorianLunarCalendarView
            android:id="@+id/calendar_view"
            android:layout_below="@+id/two"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:glcv_GregorianThemeColor="@color/colorOrange"
            app:glcv_LunarThemeColor="@color/_9999"
            app:glcv_NormalTextColor="@color/_9999"
            app:glcv_ScrollAnimation="true" />

    </LinearLayout>

</RelativeLayout>