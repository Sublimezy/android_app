<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#f2f3f5"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/all_16dp"
        android:layout_marginTop="@dimen/all_16dp"
        android:text="陪练状态"
        android:textColor="#FF333333"
        android:textSize="13sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:layout_marginTop="@dimen/slide_top_and_left_two"
        android:layout_marginLeft="@dimen/all_16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_all"
            android:layout_width="@dimen/sishi"
            android:layout_height="@dimen/ershiwu"
            android:button="@null"
            android:gravity="center"
            android:text="全部"
            android:checked="true"
            android:background="@drawable/practice_list_selector"
            android:textColor="@drawable/practice_text_color_selector"
            android:textSize="13sp" />

        <RadioButton
            android:id="@+id/rb_free"
            android:layout_width="@dimen/wushisan"
            android:layout_height="@dimen/ershiwu"
            android:layout_marginLeft="@dimen/ershi"
            android:button="@null"
            android:gravity="center"
            android:text="空闲中"
            android:background="@drawable/practice_list_selector"
            android:textColor="@drawable/practice_text_color_selector"
            android:textSize="13sp" />


    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/all_16dp"
        android:layout_marginTop="@dimen/all_16dp"
        android:text="陪练车型"
        android:textColor="#FF333333"
        android:textSize="13sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/all_16dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/shiwu"
        android:layout_marginTop="@dimen/slide_top_and_left_two"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_all_car"
            android:layout_width="@dimen/sishi"
            android:layout_height="@dimen/ershiwu"
            android:button="@null"
            android:gravity="center"
            android:text="全部"
            android:checked="true"
            android:background="@drawable/practice_list_selector"
            android:textColor="@drawable/practice_text_color_selector"
            android:textSize="13sp" />

        <RadioButton
            android:id="@+id/rb_hand"
            android:layout_width="@dimen/wushisan"
            android:layout_height="@dimen/ershiwu"
            android:button="@null"
            android:gravity="center"
            android:text="手动挡"
            android:layout_marginLeft="@dimen/ershi"
            android:background="@drawable/practice_list_selector"
            android:textColor="@drawable/practice_text_color_selector"
            android:textSize="13sp" />

        <RadioButton
            android:id="@+id/rb_auto"
            android:layout_width="@dimen/wushisan"
            android:layout_height="@dimen/ershiwu"
            android:button="@null"
            android:gravity="center"
            android:text="自动挡"
            android:layout_marginLeft="@dimen/ershi"
            android:background="@drawable/practice_list_selector"
            android:textColor="@drawable/practice_text_color_selector"
            android:textSize="13sp" />

    </RadioGroup>
    <ImageView
        android:id="@+id/iv_ok"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/iv_practice_shaixuan_ok"
        android:layout_width="wrap_content"
        android:layout_marginBottom="@dimen/shiwu"
        android:layout_height="wrap_content" />
</LinearLayout>

</LinearLayout>