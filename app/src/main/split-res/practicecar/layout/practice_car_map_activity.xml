<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/color_white"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/rl_title"
        layout="@layout/new_top_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />
    <View
        android:id="@+id/view_line"
        style="@style/_cccline"
        android:layout_below="@+id/rl_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_line">

        <com.baidu.mapapi.map.TextureMapView
            android:id="@+id/map_car"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@mipmap/location_bg"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:text="附近暂无教练"
                android:textColor="@color/_4f4f4f"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/dingwei" />
        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="54dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9.5dp"
            android:layout_marginRight="8.5dp">

            <TextView
                android:id="@+id/tv_anquan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/anquan_practice"
                android:gravity="center"
                android:paddingLeft="40dp"
                />

            <ImageView
                android:id="@+id/iv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/now_location" />
        </RelativeLayout>


            <RadioGroup
                android:layout_width="wrap_content"
                android:background="@mipmap/iv_practice_map_bg"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/rb_now"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="现在"
                    android:layout_marginTop="@dimen/jiu"
                    android:textColor="@drawable/main_rb_back_text"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rb_yuyue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_marginTop="@dimen/jiu"
                    android:text="预约"
                    android:button="@null"
                    android:textColor="@drawable/main_rb_back_text"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rb_driverbaoming"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/jiu"
                    android:padding="5dp"
                    android:button="@null"
                    android:text="司机报名"
                    android:textColor="@drawable/main_rb_back_text"
                    android:textSize="16sp" />

            </RadioGroup>

    </LinearLayout>
</RelativeLayout>