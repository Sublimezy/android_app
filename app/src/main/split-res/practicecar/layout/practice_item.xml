<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       android:layout_marginRight="@dimen/all_16dp"
        android:layout_marginLeft="@dimen/all_16dp"
        android:layout_marginTop="@dimen/shiwu"

    >

        <com.xueyiche.zjyk.xueyiche.practicecar.view.CustomShapeImageView
            android:id="@+id/iv_drivers_car_photo"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:src="@mipmap/lunbotu"
            app:leftTopRadius="10dp"
            android:scaleType="fitXY"
            app:onlyDrawBorder="false"
            app:rightTopRadius="10dp"
            app:shape="rectangle" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:background="@drawable/practice_item_white_bg"
            android:layout_height="@dimen/qishiwu">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/iv_drivers_head"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/shisi"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/all_zouyou"
                    android:layout_marginLeft="@dimen/slide_top_and_left_two"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/tv_drivers_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxEms="8"
                        android:text="张磊"
                        android:textStyle="bold"
                        android:textColor="@color/_3333"
                        android:textSize="@dimen/text_sixteensp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/slide_top_and_left"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/iv_drivers_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="空闲中"
                            android:src="@mipmap/iv_practice_driver_free"
                            android:layout_centerVertical="true"
                            android:gravity="center"/>


                        <TextView
                            android:id="@+id/tv_drivers_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.6km"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/_9999"
                            android:textSize="@dimen/text_threeteensp" />
                    </RelativeLayout>
                </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/ba"
    android:gravity="center_vertical"
    android:layout_marginLeft="@dimen/slide_top_and_left_two"
    android:layout_marginRight="@dimen/all_zouyou"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_drivers_situation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:layout_centerVertical="true"
        android:text="大众迈腾  手动挡  10年驾龄"
        android:textColor="@color/_9999"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/tv_drivers_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/slide_top_and_left"
        android:text="80/小时"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/colorOrange"
        android:textSize="@dimen/text_sixteensp" />

</RelativeLayout>

            </LinearLayout>

            <com.xueyiche.zjyk.xueyiche.mine.view.CircleImageView
                android:id="@+id/iv_drivers_head"
                android:layout_width="@dimen/sishiba"
                android:layout_height="@dimen/sishiba"
                android:layout_marginLeft="@dimen/slide_top_and_left_two"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/ershiwu"
                android:src="@mipmap/lunbotu" />
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>