        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/er"
            android:layout_marginLeft="@dimen/shiwu"
            android:layout_marginRight="@dimen/shiwu"
            android:layout_marginTop="@dimen/shiwu"
            android:layout_marginBottom="@dimen/er"
            android:background="@drawable/indent_item_xuxian"
            android:layerType="software" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/ershier"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_date_indent"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/shiwu"
                android:text="---------"
                android:textColor="@color/_666"
                android:textSize="9sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/shiwu"
                android:paddingTop="@dimen/slide_top_and_left">

                <TextView
                    android:id="@+id/tv_butone_indent"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_indent_but_bai"
                    android:padding="@dimen/si"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="联 系"
                    android:textColor="@color/_666"
                    android:textSize="@dimen/side_letter_bar_letter_size" />

                <TextView
                    android:id="@+id/tv_buttwo_indent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/slide_top_and_left_two"
                    android:background="@drawable/login_indent_but_bai"
                    android:padding="@dimen/si"
                    android:gravity="center"
                    android:text="- -"
                    android:textColor="@color/_666"
                    android:textSize="12sp" />

                <TextView
