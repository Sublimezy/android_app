<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_xiangqin_indent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/wenda_top_bg"
        android:orientation="vertical"
        android:paddingBottom="@dimen/slide_top_and_left">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/seven"
            android:orientation="horizontal"
            android:paddingTop="11dp">

            <ImageView
                android:id="@+id/iv_indent_erweima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:src="@mipmap/erweima" />

            <TextView
                android:id="@+id/tv_dingdanhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_indent_erweima"
                android:text="订单号"
                android:layout_marginLeft="10dp"
                android:textColor="#4f4f4f"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_number_indent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_dingdanhao"
                android:text="-----------"
                android:textColor="#4f4f4f"
                android:textSize="@dimen/text_ershisp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_state_indent"
                android:layout_width="50dp"
                android:layout_height="@dimen/shijiu"
                android:layout_marginTop="@dimen/san"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/shiwu"
                android:background="@drawable/indent_item_state_sp"
                android:gravity="center"
                android:text="----"
                android:textColor="@color/colorOrange" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/er"
            android:layout_marginLeft="@dimen/shiwu"
            android:layout_marginRight="@dimen/shiwu"
            android:background="@drawable/indent_item_xuxian"
            android:layerType="software"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/shiwu"
            android:paddingRight="10dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/tv_shopname_indent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="20"
                android:textColor="@color/_9999"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_alignLeft="@+id/tv_indent_money"
                    android:text="¥"
                    android:textColor="@color/colorOrange"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_money_indent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="---"
                    android:layout_marginRight="@dimen/slide_top_and_left"
                    android:textColor="@color/colorOrange"
                    android:textSize="18sp" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/shiwu"
            android:paddingRight="10dp"
            android:paddingTop="15dp">
            <TextView
                android:id="@+id/tv_service_indent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/_666"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_indent_nember"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:text="---"
                android:textColor="@color/_666"
                android:textSize="18sp" />
        </RelativeLayout>


