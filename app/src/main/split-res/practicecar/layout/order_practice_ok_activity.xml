                            android:textSize="@dimen/text_threeteensp" />

                        <TextView
                            android:id="@+id/tv_indent_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="33dp"
                            android:text="--"
                            android:textColor="@color/_3333"
                            android:textSize="@dimen/text_threeteensp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="36dp"
                        android:layout_marginRight="33dp"
                        android:layout_marginTop="@dimen/ba"
                        android:background="@drawable/line_horizontal_shape" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="36dp"
                        android:layout_marginRight="33dp"
                        android:layout_marginTop="@dimen/shisan"
                        android:text="接送地点"
                        android:textColor="#ff191919"
                        android:textSize="@dimen/text_eightteensp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:id="@+id/ll_type"
                            android:visibility="gone"
                            android:layout_marginLeft="36dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/shiqi"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/tv_start_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00:00"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/_3333"
                                android:textSize="@dimen/text_sixteensp" />

                            <TextView
                                android:id="@+id/tv_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00月00号"
                                android:layout_marginTop="@dimen/shisan"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/colorOrange"
                                android:textSize="@dimen/text_sixteensp" />


                            <TextView
                                android:id="@+id/tv_end_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00:00"
                                android:layout_marginTop="@dimen/shisan"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/_3333"
                                android:textSize="@dimen/text_sixteensp" />
                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="36dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/slide_top_and_left_two"
                                android:layout_height="@dimen/slide_top_and_left_two"
                                android:src="@drawable/circle_gray_shape" />

                            <TextView
                                android:layout_width="@dimen/san"
                                android:layout_height="@dimen/liushiba"
                                android:layout_marginLeft="3.5dp"
                                android:layout_marginTop="3.5dp"
                                android:background="#ff9a9fa9" />

                            <ImageView
                                android:layout_width="@dimen/slide_top_and_left_two"
                                android:layout_height="@dimen/slide_top_and_left_two"
                                android:layout_marginTop="@dimen/liushiwu"
                                android:src="@drawable/circle_gray_shape" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/slide_top_and_left_two"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/shijiu"
                                android:layout_marginRight="@dimen/shijiu"

                                android:gravity="center_vertical">


                                <TextView
                                    android:id="@+id/tv_indent_jie_location"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="科技大厦"
                                    android:textColor="@color/_3333"
                                    android:textSize="@dimen/text_fifteensp" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/shijiu"
                                android:layout_marginRight="@dimen/shijiu"
                                android:layout_marginTop="@dimen/shiyi"
                                android:src="@mipmap/iv_practice_rule"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingRight="@dimen/jiu"/>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/shisi"
                                android:layout_marginTop="@dimen/shisan"
                                android:gravity="center_vertical">


                                <TextView
                                    android:id="@+id/tv_indent_song_location"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/shijiu"
                                    android:gravity="center_vertical"
                                    android:text="科技大厦"
                                    android:textColor="@color/_3333"
                                    android:textSize="@dimen/text_fifteensp" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@mipmap/iv_practice_luru_bg"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="36dp"
                        android:layout_marginRight="33dp"
                        android:layout_marginTop="@dimen/sanshiwu"
                        android:text="订单信息"
                        android:textColor="#ff191919"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/yi"
                        android:layout_marginLeft="36dp"
                        android:layout_marginRight="33dp"
                        android:layout_marginTop="@dimen/jiu"
                        android:background="#E3E3E3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="36dp"
                        android:layout_marginRight="33dp"

                        android:layout_marginTop="@dimen/shiwu"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="练车时长："
                            android:textColor="@color/test_color"
                            android:textSize="@dimen/text_fourteensp" />

                        <TextView
                            android:id="@+id/tv_total_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/shiwu"
                            android:text="2个小时"
                            android:textColor="@color/_3333"
                            android:textSize="@dimen/text_fourteensp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="36dp"
                        android:layout_marginRight="33dp"
                        android:layout_marginTop="@dimen/shiwu"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="车型选择："
                            android:textColor="@color/test_color"
                            android:textSize="@dimen/text_fourteensp" />

                        <TextView
                            android:id="@+id/tv_car_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/shiwu"
                            android:text="奥迪"
                            android:textColor="@color/_3333"
                            android:textSize="@dimen/text_fourteensp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="36dp"
                        android:layout_marginRight="33dp"
                        android:layout_marginTop="@dimen/shiwu"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="紧急联系人："
                            android:textColor="@color/test_color"
                            android:textSize="@dimen/text_fourteensp" />

                        <TextView
                            android:id="@+id/tv_jinji_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/shiwu"
                            android:text="18346012117"
                            android:textColor="@color/_3333"
                            android:textSize="@dimen/text_fourteensp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="257dp"
                    android:background="@mipmap/iv_practice_luru_bg"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="36dp"
                        android:layout_marginRight="33dp"
                        android:layout_marginTop="@dimen/sishi"
                        android:text="学员技能问卷（选填）"
                        android:textColor="#ff191919"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/yi"
                        android:layout_marginLeft="36dp"
                        android:layout_marginRight="33dp"
                        android:layout_marginTop="@dimen/jiu"
                        android:background="#E3E3E3" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sishijiu"
                        android:layout_marginLeft="36dp"
                        android:layout_marginRight="33dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="下证时间"
                            android:textColor="@color/_3333"
                            android:textSize="@dimen/text_fourteensp" />

                        <TextView
                            android:id="@+id/tv_indent_getcard_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="2010.07.06"
                            android:textColor="@color/_3333"
                            android:textSize="@dimen/text_fourteensp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/yi"
                        android:layout_marginLeft="36dp"
                        android:layout_marginRight="33dp"
                        android:background="#E3E3E3" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sishijiu"
                        android:layout_marginLeft="36dp"
                        android:layout_marginRight="33dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="毕业水平"
                            android:textColor="@color/_3333"
                            android:textSize="@dimen/text_fourteensp" />

                        <TextView
                            android:id="@+id/tv_indent_graduation_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="良好"
                            android:textColor="@color/_3333"
                            android:textSize="@dimen/text_fourteensp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/yi"
                        android:layout_marginLeft="36dp"
                        android:layout_marginRight="33dp"
                        android:background="#E3E3E3" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sishijiu"
                        android:layout_marginLeft="36dp"
                        android:layout_marginRight="33dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="练车经验"
                            android:textColor="@color/_3333"
                            android:textSize="@dimen/text_fourteensp" />

                        <TextView
                            android:id="@+id/tv_indent_practice_experience"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="一般"
                            android:textColor="@color/_3333"
                            android:textSize="@dimen/text_fourteensp" />
