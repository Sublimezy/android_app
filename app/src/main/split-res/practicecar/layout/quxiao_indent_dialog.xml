<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/sanshi"
        android:text="@string/wenxinTishi"
        android:id="@+id/tv_title"
        android:textColor="@color/colorOrange"
        android:textSize="@dimen/text_seveneensp" />

    <TextView
        android:id="@+id/tv_tishi_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sanshi"
        android:layout_marginRight="@dimen/shiwu"
        android:layout_marginTop="@dimen/sishi"
        android:text="是否取消订单？"
        android:textColor="@color/test_color"
        android:textSize="@dimen/text_fifteensp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sishiwu"
        android:layout_marginBottom="@dimen/zero"
        android:layout_marginTop="@dimen/sishi"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_quxiao"
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/sishiwu"
            android:layout_weight="1"
            android:textColor="@color/test_color"
            android:background="@drawable/youshape_hui"
            android:gravity="center"

            android:text="@string/quxiao"

            android:textSize="@dimen/text_seveneensp" />

        <TextView
            android:id="@+id/tv_queren"
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/sishiwu"
            android:layout_weight="1"
            android:textColor="@color/color_white"
            android:gravity="center"
            android:text="@string/queren"
            android:background="@drawable/zuoshape_huang"
            android:textSize="@dimen/text_seveneensp" />

    </LinearLayout>
</LinearLayout>