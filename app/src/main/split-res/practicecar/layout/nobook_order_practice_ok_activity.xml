<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/indent_details_include"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />
    <ScrollView
        android:layout_below="@+id/indent_details_include"
        android:layout_above="@+id/view_line"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:background="@color/color_white"
            android:paddingLeft="@dimen/all_zouyou"
            android:paddingRight="@dimen/all_zouyou">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/shiwu">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开始时间"
                        android:textColor="@color/_666"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/shiwu"
                        android:text="--:--"
                        android:textColor="@color/_9999"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_total_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="共0小时"
                    android:textColor="@color/colorOrange"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="结束时间"
                        android:textColor="@color/_666"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/shiwu"
                        android:text="--:--"
                        android:textColor="@color/_9999"
                        android:textSize="@dimen/side_letter_bar_letter_size" />
                </LinearLayout>
            </RelativeLayout>


            <View
                style="@style/_cccline"
                android:layout_marginTop="@dimen/all_include_height" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="价格"
                        style="@style/indent_order_practice_title" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/shiwu"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/ll_danjia"
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="单价："
                            android:textSize="@dimen/text_fifteensp"
                            android:textColor="@color/_666" />
                        <TextView
                            android:id="@+id/tv_indent_danjia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_fifteensp"
                            android:textColor="@color/colorOrange" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="元"
                            android:textSize="@dimen/text_fifteensp"
                            android:textColor="@color/_666" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="共计："
                        android:layout_marginLeft="@dimen/shiwu"
                        android:textSize="@dimen/text_fifteensp"
                        android:textColor="@color/_666" />
                    <TextView
                        android:id="@+id/tv_indent_total_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/text_fifteensp"
                        android:textColor="@color/colorOrange" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元"
                        android:textSize="@dimen/text_fifteensp"
                        android:textColor="@color/_666" />
                </LinearLayout>
            </LinearLayout>
            <View
                style="@style/_cccline"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    style="@style/indent_order_practice_title"
                    android:text="上车地址"/>
                <TextView
                    android:id="@+id/tv_indent_jie_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="---"
                    android:layout_marginTop="@dimen/shiwu"
                    android:textSize="@dimen/text_fifteensp"
                    android:textColor="@color/_666" />
            </LinearLayout>
            <View
                style="@style/_cccline"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    style="@style/indent_order_practice_title"
                    android:text="下车地址"/>
                <TextView
                    android:id="@+id/tv_indent_song_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="---"
                    android:layout_marginTop="@dimen/shiwu"
                    android:textSize="@dimen/text_fifteensp"
                    android:textColor="@color/_666" />
            </LinearLayout>
            <View
                style="@style/_cccline"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    style="@style/indent_order_practice_title"
                    android:text="意向练车项目"/>
                <TextView
                    android:id="@+id/tv_indent_will_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/shiwu"
                    android:textSize="@dimen/text_fifteensp"
                    android:textColor="@color/_666" />
            </LinearLayout>
            <View
                style="@style/_cccline"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    style="@style/indent_order_practice_title"
                    android:text="车辆类型"/>
                <TextView
                    android:id="@+id/tv_indent_carstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/shiwu"
                    android:textSize="@dimen/text_fifteensp"
                    android:textColor="@color/_666" />
            </LinearLayout>
            <View
                style="@style/_cccline"/>
            <TextView
                android:id="@+id/tv_indent_beizhu"
                android:textColor="@color/_9999"
                android:paddingBottom="@dimen/ershi"
                android:paddingLeft="@dimen/slide_top_and_left_two"
                android:paddingTop="@dimen/slide_top_and_left_two"
                android:textSize="@dimen/text_fifteensp"
                android:layout_marginTop="@dimen/shiwu"
                android:background="@color/_f5f5f5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/all_include_height"
                android:text="订单信息"
                android:textColor="@color/_666"
                android:textSize="25sp"
                android:textStyle="bold" />
            <View
                android:layout_marginTop="@dimen/ershiwu"
                style="@style/_cccline"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="@dimen/liushiba">
                <TextView
                    style="@style/indent_order_practice_title"
                    android:text="订单编号"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_indent_number"
                    style="@style/indent_order_practice_title"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View
                style="@style/_cccline"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="@dimen/liushiba">
                <TextView
                    style="@style/indent_order_practice_title"
                    android:text="订单时间"/>
                <TextView
                    android:id="@+id/tv_indent_date"
                    style="@style/indent_order_practice_title"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View
                android:layout_marginBottom="@dimen/sanshi"
                style="@style/_cccline"/>
            <Button
                android:id="@+id/bt_fabu"
                android:layout_width="280dp"
                android:layout_height="@dimen/all_include_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/all_include_height"
                android:layout_marginTop="@dimen/all_include_height"
                android:background="@drawable/button_shape"
                android:text="确认发布"
                android:textColor="@color/color_white"
                android:textSize="25sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>