<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/new_top_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/yi"
        android:layout_below="@+id/title"
        android:background="@color/all_line_color" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/os_shop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom"
        android:layout_below="@+id/line"
        android:listSelector="@null"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/shop_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.zhpan.bannerview.BannerViewPager
                android:id="@+id/banner_view"
                android:layout_width="match_parent"
                android:layout_height="200dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/dp_15">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:text="车辆信息"
                        android:textColor="#ff333333"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tvDriverYear"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:text="车辆信息"
                        android:textColor="#ff333333"
                        android:textSize="@dimen/sp_12"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="车辆信息"
                            android:textColor="#ff333333"
                            android:textSize="@dimen/sp_12" />


                    </LinearLayout>


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@color/line" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_40"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_10"
                        android:drawableLeft="@mipmap/shop_daohang"
                        android:drawablePadding="@dimen/dp_15"
                        android:hint="请您选择接送车地点"
                        android:text="开始时间"
                        android:textColor="#ff333333"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tvStartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/dp_20"
                        android:drawableRight="@mipmap/jiantou"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="right"
                        android:hint="请您选择开始时间"
                        android:textColor="#ff333333"
                        android:textSize="@dimen/sp_12" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="@color/line"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_height="1px"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_40"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_10"
                        android:drawableLeft="@mipmap/shop_daohang"
                        android:drawablePadding="@dimen/dp_15"
                        android:hint="请您选择接送车地点"
                        android:text="练车时长"
                        android:textColor="#ff333333"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tvChoodeTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/dp_20"
                        android:drawableRight="@mipmap/jiantou"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="right"
                        android:hint="请您选择练车时长"
                        android:textColor="#ff333333"
                        android:textSize="@dimen/sp_12" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="@color/line"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_height="1px"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvChooseLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_toLeftOf="@+id/iVJianTou"
                        android:drawableLeft="@mipmap/shop_daohang"
                        android:drawablePadding="@dimen/dp_15"
                        android:hint="请您选择接送车地点"
                        android:text=""
                        android:textColor="#ff333333"
                        android:textSize="@dimen/sp_12" />
                    <ImageView
                        android:id="@+id/iVJianTou"
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/jiantou"
                        android:layout_alignParentRight="true"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="@color/line"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_height="1px"/>
            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/yi"
            android:background="#80e7e7e7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingHorizontal="@dimen/dp_30"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvMoney"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥0"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/dp_20" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="预估费用约"
                    android:layout_toLeftOf="@+id/iVJianTou"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_10" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvOrder"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/red"
                android:gravity="center"
                android:text="立即下单"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>