<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/shiwu"
        android:background="@drawable/huifu_bg"
        android:layout_marginRight="@dimen/all_zouyou"
        android:layout_marginLeft="@dimen/all_zouyou"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_state"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/all_zouyou"
            android:layout_width="wrap_content"
            android:text="已取消"
            android:textColor="@color/_cccccc"
            android:textSize="@dimen/text_fifteensp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/tv_state"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_order_sn"
                    android:layout_width="wrap_content"
                    android:text="2019-03-02"
                    android:layout_marginLeft="@dimen/slide_top_and_left_two"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/test_color"
                    android:layout_marginTop="@dimen/shiwu"
                    android:textSize="@dimen/text_fourteensp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:text="学易车驾校 张磊教练"
                android:textColor="@color/test_color"
                android:layout_marginRight="@dimen/all_zouyou"
                android:layout_marginLeft="@dimen/all_zouyou"
                android:layout_marginTop="@dimen/shiwu"
                android:textSize="@dimen/text_fifteensp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/shiwu"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_xiangmu"
                    android:layout_width="wrap_content"
                    android:text="科目：倒车入库"
                    android:textColor="@color/test_color"
                    android:layout_marginLeft="@dimen/all_zouyou"
                    android:layout_marginTop="@dimen/shiwu"
                    android:textSize="@dimen/text_fifteensp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>