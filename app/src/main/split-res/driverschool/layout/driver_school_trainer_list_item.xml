<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/shiwu">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.xueyiche.zjyk.xueyiche.mine.view.CircleImageView
                android:id="@+id/iv_head"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/all_zouyou"
                android:src="@mipmap/lunbotu" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/slide_top_and_left"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/slide_top_and_left_two"
                    android:textColor="@color/_4f4f4f"
                    android:textSize="@dimen/text_ershisp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/slide_top_and_left_two"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/slide_top_and_left_two"
                        android:textColor="@color/test_color"
                        android:textSize="@dimen/text_fifteensp"
                     />
                    <TextView
                        android:id="@+id/tv_carstyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/shiwu"
                        android:textColor="@color/test_color"
                        android:textSize="@dimen/text_fifteensp"
                     />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/all_zouyou"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/rb_one_now"
                style="@style/MyRatingBarNowSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:isIndicator="true"
                android:numStars="5"
                android:layout_marginRight="@dimen/slide_top_and_left_two"
                android:stepSize="0.5" />

            <TextView
                android:id="@+id/tv_fenshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/test_color"
                android:textSize="@dimen/text_fifteensp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/all_zouyou"
        android:layout_marginRight="@dimen/all_zouyou"
        android:layout_marginTop="@dimen/shiwu"
        android:background="@color/_cccccc" />
</LinearLayout>