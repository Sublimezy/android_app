<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <include
        android:id="@+id/driver_school_trainer_include"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />
    <LinearLayout
        android:id="@+id/ll_driver_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/shiwu"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <com.xueyiche.zjyk.xueyiche.mine.view.CircleImageView
                android:id="@+id/iv_head"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/all_zouyou"
                android:src="@mipmap/lunbotu" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/shiwu"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/slide_top_and_left_two"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_name"
                        android:text="学易车"
                        android:textColor="@color/_3333"
                        android:textSize="@dimen/text_eightteensp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_years_old"
                        android:text="0岁"
                        android:textColor="@color/test_color"
                        android:layout_marginLeft="@dimen/shiwu"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/text_fifteensp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_sex"
                        android:text="男"
                        android:textColor="@color/test_color"
                        android:textSize="@dimen/text_fifteensp"
                        android:layout_marginLeft="@dimen/shiwu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_driver_school"
                        android:text="学易车驾校"
                        android:textColor="@color/test_color"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/text_fifteensp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_car_style"
                        android:text="C1车型"
                        android:textColor="@color/test_color"
                        android:textSize="@dimen/text_fifteensp"
                        android:layout_marginLeft="@dimen/sanshi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/_f5f5f5"
            android:layout_marginTop="@dimen/ershiwu"
            android:layout_height="1px"/>

    </LinearLayout>
    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        app:srlEnableAutoLoadMore="false"
        app:srlPrimaryColor="@color/color_white">

        <com.scwang.smart.refresh.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlAccentColor="@color/colorOrange"
            app:srlDrawableProgress="@drawable/animation_loading_frame"
            app:srlPrimaryColor="@color/color_white" />

        <ListView
            android:id="@+id/lv_list"
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:listSelector="@color/color_white"
            android:layout_height="match_parent"
            android:divider="@color/color_white" />

        <com.scwang.smart.refresh.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

</LinearLayout>