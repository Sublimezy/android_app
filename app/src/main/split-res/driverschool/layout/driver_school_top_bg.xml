        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_marginLeft="@dimen/ershi"
            android:layout_marginRight="@dimen/slide_top_and_left_two"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:textColor="@color/_4f4f4f"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/text_fifteensp"

                android:layout_height="wrap_content"
                android:text="学易车练习场" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:textColor="@color/_9999"
                android:textSize="12sp"
                android:layout_marginTop="@dimen/slide_top_and_left"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="学易车练习场地址" />
        </LinearLayout>
        <ImageView
            android:src="@mipmap/mine_jiantou"
