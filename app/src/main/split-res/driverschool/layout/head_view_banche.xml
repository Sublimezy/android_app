<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:background="#f5f5f5"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/shiwu"
                    android:layout_marginBottom="@dimen/shiwu"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/bg_yuanjiao"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/all_zouyou"
                        android:layout_marginTop="@dimen/shiwu">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="---"
                            android:textColor="@color/_4f4f4f"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_car_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/all_zouyou"
                            android:text="---"
                            android:visibility="gone"
                            android:textColor="@color/test_color"
                            android:textSize="@dimen/text_fifteensp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/all_zouyou"
                        android:layout_marginTop="@dimen/shiwu">

                        <TextView
                            android:id="@+id/tv_driver_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="---"
                            android:textColor="@color/_4f4f4f"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_driver_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/all_zouyou"
                            android:text="---"
                            android:textColor="@color/colorOrange"
                            android:textSize="@dimen/text_fifteensp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/all_zouyou"
                        android:layout_marginRight="@dimen/all_zouyou"
                        android:layout_marginTop="@dimen/shiwu">

                        <TextView
                            android:id="@+id/tv_lucheng_start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="---"
                            android:textColor="@color/_4f4f4f"
                            android:textSize="15sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/shiwu"
                        android:layout_marginLeft="@dimen/all_zouyou"
                        android:layout_marginRight="@dimen/all_zouyou"
                        android:layout_marginTop="@dimen/shiwu">

                        <TextView
                            android:id="@+id/tv_lucheng_end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="---"
                            android:textColor="@color/_4f4f4f"
                            android:textSize="15sp" />
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>



            <RadioGroup
                android:id="@+id/rg_indent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_start"
                    style="@style/MenuTab"
                    android:layout_height="50dp"
                    android:checked="true"
                    android:text="始发"
                    android:layout_marginRight="40dp"
                    android:drawableBottom="@drawable/start_end"
                    android:textColor="@drawable/mine_selector_text"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/rb_end"
                    style="@style/MenuTab"
                    android:layout_height="50dp"
                    android:text="终点"
                    android:drawableBottom="@drawable/start_end"
                    android:textColor="@drawable/mine_selector_text"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RadioGroup>
        </LinearLayout>
</RelativeLayout>