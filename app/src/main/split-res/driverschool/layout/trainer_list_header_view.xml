<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/shiwu"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/bashi"
        android:layout_height="@dimen/liushi"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:layout_marginLeft="@dimen/all_zouyou"
        android:src="@mipmap/lunbotu" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/shiwu"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/slide_top_and_left_two"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name"
                android:text="学易车"
                android:textColor="@color/_3333"
                android:textSize="@dimen/text_eightteensp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_years_old"
                android:text="0岁"
                android:textColor="@color/test_color"
                android:layout_marginLeft="@dimen/shiwu"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_fifteensp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_sex"
                android:text="男"
                android:textColor="@color/test_color"
                android:textSize="@dimen/text_fifteensp"
                android:layout_marginLeft="@dimen/shiwu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_driver_school"
                android:text="学易车驾校"
                android:textColor="@color/test_color"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_fifteensp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_car_style"
                android:text="C1车型"
                android:textColor="@color/test_color"
                android:textSize="@dimen/text_fifteensp"
                android:layout_marginLeft="@dimen/sanshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/_f5f5f5"
        android:layout_marginTop="@dimen/ershiwu"
        android:layout_height="@dimen/yipx"/>

</LinearLayout>