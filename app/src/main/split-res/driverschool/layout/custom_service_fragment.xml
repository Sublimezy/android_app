<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <include
        android:id="@+id/message_include"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />

    <ScrollView
        android:id="@+id/sv_kefu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_customservice_zaixian"
                    android:paddingTop="25dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/_3333"
                    android:drawablePadding="@dimen/ershi"
                    android:textSize="@dimen/text_sixteensp"
                    android:gravity="center_horizontal"
                    android:paddingBottom="30dp"
                    android:drawableTop="@drawable/mine_kefu_online"
                    android:text="在线客服" />

                <TextView
                    android:id="@+id/tv_customservice_call"
                    android:paddingTop="25dp"
                    android:paddingBottom="@dimen/sanshi"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_sixteensp"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/mine_kefu_phone"
                    android:textColor="@color/_3333"
                    android:drawablePadding="@dimen/ershi"
                    android:gravity="center_horizontal"
                    android:text="电话客服" />
            </LinearLayout>


            <View
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                style="@style/_cccline" />
            <TextView
                android:layout_width="wrap_content"
                android:text="常见问题"
                android:textSize="@dimen/text_eightteensp"
                android:layout_marginLeft="12dp"
                android:textColor="@color/_3333"
                android:layout_marginTop="@dimen/sanshijiu"
                android:layout_height="wrap_content" />

            <com.xueyiche.zjyk.xueyiche.homepage.view.AdListView
                android:layout_width="match_parent"
                android:id="@+id/lv_faq"
                android:layout_marginTop="25dp"
                android:divider="@null"
                android:listSelector="@android:color/transparent"
                android:layout_marginBottom="25dp"
                android:layout_height="match_parent">
            </com.xueyiche.zjyk.xueyiche.homepage.view.AdListView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>