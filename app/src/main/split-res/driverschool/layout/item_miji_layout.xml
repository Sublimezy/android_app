<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="13dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_video_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="vertical">


        <com.xueyiche.zjyk.xueyiche.driverschool.view.RoundImageView
            android:id="@+id/video_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/lunbotu" />



        <LinearLayout
            android:id="@+id/ll_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_alignBottom="@+id/video_bg"
            android:paddingBottom="@dimen/shiwu"
            android:paddingTop="@dimen/shiwu"
            android:background="@drawable/miji_item_yinying"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="御藏岛.三宅支厅"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>