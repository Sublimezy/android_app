<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:id="@+id/ll_dot_iv"
        android:layout_width="24dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginLeft="@dimen/all_zouyou"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/dot_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:gravity="center"
            android:background="@drawable/kongxin_yuan_one"
           />
        <!--时间轴的竖线-->
        <View
            android:id="@+id/time_line_view"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="#999999" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/shiwu"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="17dp"
                android:text="科技大厦"
                android:layout_toRightOf="@id/ll_dot_iv"
                android:textColor="@color/test_color"
                android:textSize="17sp"
             />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:text="7:00"
                    android:layout_toLeftOf="@+id/tv_change"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="17dp"
                    android:layout_toRightOf="@id/ll_dot_iv"
                    android:textColor="@color/test_color"
                    android:textSize="17sp" />
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/shiwu"
            android:layout_marginTop="@dimen/shiwu"
            android:textColor="@color/test_color"
            android:text="创新三路600号"
            android:layout_marginBottom="20dp"
            android:textSize="@dimen/text_fourteensp"
           />

        <!--分割线-->
        <View
            android:id="@+id/line_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="@dimen/ershi"
            android:layout_marginTop="@dimen/ershi"
            android:visibility="gone"
            android:background="#ececec" />
    </LinearLayout>
</LinearLayout>