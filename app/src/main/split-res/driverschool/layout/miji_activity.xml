<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <include
        android:id="@+id/title_include"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RadioGroup
        android:id="@+id/rg_exam_menutab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exam_include"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rb_subject0"
            style="@style/MenuTab"
            android:layout_marginTop="5dp"
            android:checked="true"
            android:drawableBottom="@drawable/rb_xian_select"
            android:drawablePadding="5dp"
            android:text="综合"
            android:textColor="@drawable/rb_select"
            android:textSize="15sp" />
        <RadioButton
            android:id="@+id/rb_subject1"
            style="@style/MenuTab"
            android:layout_marginTop="5dp"
            android:drawableBottom="@drawable/rb_xian_select"
            android:drawablePadding="5dp"
            android:text="@string/test_book_one"
            android:textColor="@drawable/rb_select"
            android:textSize="15sp" />


        <RadioButton
            android:id="@+id/rb_subject2"
            style="@style/MenuTab"
            android:drawableBottom="@drawable/rb_xian_select"
            android:drawablePadding="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/test_book_two"
            android:textColor="@drawable/rb_select"
            android:textSize="15sp" />


        <RadioButton
            android:id="@+id/rb_subject3"
            style="@style/MenuTab"
            android:drawableBottom="@drawable/rb_xian_select"
            android:drawablePadding="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/test_book_three"
            android:textColor="@drawable/rb_select"
            android:textSize="15sp" />


        <RadioButton
            android:id="@+id/rb_subject4"
            style="@style/MenuTab"
            android:drawableBottom="@drawable/rb_xian_select"
            android:drawablePadding="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/test_book_four"
            android:textColor="@drawable/rb_select"
            android:textSize="15sp" />
    </RadioGroup>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnableAutoLoadMore="false"
        app:srlPrimaryColor="@color/white">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlAccentColor="@color/colorOrange"
            app:srlDrawableProgress="@drawable/animation_loading_frame"
            app:srlPrimaryColor="@color/color_white" />

        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/mRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:divider="#00000000"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none" />

        <!--        <com.scwang.smartrefresh.header.StoreHouseHeader-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            app:shhEnableFadeAnimation="true"-->
        <!--            app:shhText="XUEYICHE" />-->
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>