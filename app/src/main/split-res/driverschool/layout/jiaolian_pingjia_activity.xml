<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_white"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/driver_school_trainer_include"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom"
        android:layout_below="@+id/driver_school_trainer_include"
        android:background="@android:color/white"
        app:srlEnableAutoLoadMore="false"
        app:srlPrimaryColor="@color/color_white">
        <com.scwang.smart.refresh.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:background="@color/color_white"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/ershiwu"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.xueyiche.zjyk.xueyiche.mine.view.CircleImageView
                            android:id="@+id/iv_head"
                            android:layout_width="@dimen/home_head_width"
                            android:layout_height="@dimen/home_head_height"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/all_zouyou"
                            android:src="@mipmap/hot_train_head" />

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/slide_top_and_left_two"
                            android:text="张磊"
                            android:textColor="@color/test_color"
                            android:textSize="@dimen/text_eightteensp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginRight="@dimen/all_zouyou"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">
                        <RatingBar
                            android:id="@+id/rb_one_now"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center_vertical"
                            style="@style/MyRatingBarNowSmall"
                            android:isIndicator="true"
                            android:layout_height="wrap_content"
                            android:stepSize="0.5"
                            android:numStars="5" />
                        <TextView
                            android:id="@+id/tv_fenshu"
                            android:text="4.9"
                            android:layout_marginLeft="@dimen/slide_top_and_left_two"
                            android:textColor="@color/test_color"
                            android:textSize="@dimen/text_fifteensp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/ershi"
                    android:layout_marginRight="@dimen/all_zouyou"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="教学质量"
                        android:layout_marginLeft="@dimen/all_zouyou"
                        android:textColor="@color/test_color"
                        android:layout_marginTop="@dimen/yi"
                        android:textSize="@dimen/text_fifteensp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RatingBar
                        android:id="@+id/rb_teach_quality"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        style="@style/MyRatingBarNowSmall"
                        android:isIndicator="true"
                        android:layout_marginLeft="@dimen/slide_top_and_left"
                        android:layout_height="wrap_content"
                        android:stepSize="0.5"
                        android:numStars="5" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/shiwu"
                    android:layout_marginRight="@dimen/all_zouyou"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="服务态度"
                        android:layout_marginLeft="@dimen/all_zouyou"
                        android:textColor="@color/test_color"
                        android:layout_marginTop="@dimen/yi"
                        android:textSize="@dimen/text_fifteensp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RatingBar
                        android:id="@+id/rb_service_attitude"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        style="@style/MyRatingBarNowSmall"
                        android:isIndicator="true"
                        android:layout_marginLeft="@dimen/slide_top_and_left"
                        android:layout_height="wrap_content"
                        android:stepSize="0.5"
                        android:numStars="5" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/shiwu"
                    android:layout_marginRight="@dimen/all_zouyou"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="评价内容"
                        android:layout_marginLeft="@dimen/all_zouyou"
                        android:textColor="@color/test_color"
                        android:layout_marginTop="@dimen/yi"
                        android:textSize="@dimen/text_fifteensp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_pingjia_content"
                        android:layout_marginLeft="@dimen/all_zouyou"
                        android:textColor="@color/_9999"
                        android:layout_marginTop="@dimen/yi"
                        android:textSize="13sp"
                        android:text="一次不错的经历！"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_date"
                        android:text="2018-05-25 12:20:20"
                        android:layout_marginLeft="@dimen/all_zouyou"
                        android:textColor="@color/_9999"
                        android:layout_marginTop="@dimen/shiwu"
                        android:textSize="10sp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <include
                    android:id="@+id/shequ_content_dianzan"
                    layout="@layout/shequ_content_dianzan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="true"
                    android:fitsSystemWindows="true"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/wv_shequ_content"
                    android:layout_marginTop="@dimen/ershi"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_pinglun_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/all_zouyou"
                        android:text="评论（0）"
                        android:textColor="@color/_4f4f4f"
                        android:textSize="20sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="@dimen/shiwu"
                        android:layout_marginRight="@dimen/all_zouyou"
                        android:background="@color/_cccccc" />
                </LinearLayout>


                <com.xueyiche.zjyk.xueyiche.homepage.view.AdListView
                    android:id="@+id/lv_pinglun"
                    android:scrollbars="none"
                    android:listSelector="@color/color_white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@color/_f2f3f4f5" />


            </LinearLayout>

        </ScrollView>
        <com.scwang.smart.refresh.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View style="@style/_cccline" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:background="@color/color_white">

            <TextView
                android:id="@+id/tv_gv_content"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="36dp"
                android:layout_marginRight="@dimen/slide_top_and_left_two"
                android:layout_marginBottom="@dimen/slide_top_and_left_two"
                android:layout_marginLeft="@dimen/all_zouyou"
                android:layout_marginTop="@dimen/slide_top_and_left_two"
                android:background="@drawable/text_yuanjiao"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/all_zouyou"
                android:hint="我也说两句"
                android:textCursorDrawable="@drawable/edittext_cursor"
                android:textColor="@color/_666"
                android:textSize="@dimen/text_fifteensp" />
            <CheckBox
                android:id="@+id/rb_niming"
                android:checked="true"
                android:drawableRight="@drawable/niming_selecter"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_fifteensp"
                android:textColor="#999999"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:button="@null" />
            <TextView
                android:id="@+id/ivShare"
                android:text="发送"
                android:layout_marginLeft="@dimen/ershiwu"
                android:textColor="@color/_9999"
                android:textSize="@dimen/text_eightteensp"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/all_zouyou"
                android:layout_height="wrap_content"
                 />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>