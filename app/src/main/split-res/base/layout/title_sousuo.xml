<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_title"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/color_white">

    <ImageView
        android:id="@+id/iv_login_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/slide_top_and_left_two"
        android:layout_marginTop="52dp"
        android:src="@mipmap/driver_school_back_hei" />
    <RelativeLayout
        android:id="@+id/rl_title_search_jump"
        android:layout_width="276dp"
        android:layout_marginTop="46dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/iv_login_back"
        android:gravity="center_vertical"
        android:background="@drawable/sousuo_background"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="3dp"
            android:src="@mipmap/ic_search"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_search_title"
            android:layout_width="wrap_content"
            android:text="标准洗车"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/_4f4f4f"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_search_yuyin"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:src="@mipmap/sousuo_yuyin"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_title_dingwei"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="53dp"
        android:src="@mipmap/home_kefu"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/_cccccc" />
</RelativeLayout>