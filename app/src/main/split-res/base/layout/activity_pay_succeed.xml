<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <include
        android:id="@+id/title"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />
    <TextView
        android:id="@+id/tv_pintuan_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="拼团码：12345"
        android:visibility="gone"
        android:textStyle="bold"
        android:textColor="@color/colorOrange"
        android:textSize="@dimen/text_ershisp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginTop="35dp"
        android:src="@mipmap/pay_succeed"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_pay_money"
        android:layout_width="wrap_content"
        android:textSize="25sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/_4f4f4f"
        android:text="500元"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:textSize="25sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/_4f4f4f"
        android:text="支付成功"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/_666"
        android:text="您的订单已支付成功"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/ll_jifen"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/_666"
            android:text="恭喜您获得"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_get_jifen"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorOrange"
            android:text="10000"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/_666"
            android:text="积分"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_succeed_chakan"
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorOrange"
        android:drawableRight="@mipmap/pay_succeed_chakan"
        android:drawablePadding="10dp"
        android:text="查看订单"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_tishi_content"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/_666"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/bt_fenxiang"
        android:layout_width="180dp"
        android:textSize="20sp"
        android:visibility="gone"
        android:text="邀请参团"
        android:layout_marginLeft="12dp"
        android:background="@color/colorOrange"
        android:layout_marginRight="12dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/color_white"
        android:layout_height="wrap_content" />
</LinearLayout>