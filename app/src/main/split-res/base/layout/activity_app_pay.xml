<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/driver_pay_include"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />

    <RelativeLayout
        android:id="@+id/rl_wechat"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginLeft="@dimen/all_zouyou"
        android:layout_marginRight="@dimen/all_zouyou">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@mipmap/indent_content_wechat"
            android:text="  微信"
            android:textColor="@color/_4f4f4f"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/ba"
            android:background="@mipmap/pay_check" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/yipx"
        android:layout_marginLeft="@dimen/all_zouyou"
        android:layout_marginRight="@dimen/all_zouyou"
        android:layout_below="@+id/scroll_view"
        android:background="@color/_cccccc" />

    <RelativeLayout
        android:id="@+id/rl_zhifubao"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginLeft="@dimen/all_zouyou"
        android:layout_marginRight="@dimen/all_zouyou"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/indent_content_zhifubao"
            android:text="  支付宝"
            android:textColor="@color/test_color"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_zhifubao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/ba"
            android:background="@mipmap/pay_check" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/all_zouyou"
        android:layout_marginRight="@dimen/all_zouyou"
        android:layout_height="@dimen/yipx"
        android:layout_below="@+id/scroll_view"
        android:background="@color/_cccccc" />

    <RelativeLayout
        android:id="@+id/rl_pos"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginLeft="@dimen/all_zouyou"
        android:layout_marginRight="@dimen/all_zouyou"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/indent_content_pos"
            android:text="  线上POS"
            android:textColor="@color/test_color"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:background="@mipmap/pay_check" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/all_zouyou"
        android:layout_marginRight="@dimen/all_zouyou"
        android:layout_height="@dimen/yipx"
        android:layout_below="@+id/scroll_view"
        android:background="@color/_cccccc" />
    <RelativeLayout
        android:id="@+id/rl_yinlian"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginLeft="@dimen/all_zouyou"
        android:layout_marginRight="@dimen/all_zouyou"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/indent_content_yinlian"
            android:text="  银联支付"
            android:textColor="@color/test_color"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_yinlian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/ba"
            android:background="@mipmap/pay_check" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/all_zouyou"
        android:layout_marginRight="@dimen/all_zouyou"
        android:layout_height="@dimen/yipx"
        android:layout_below="@+id/iv_yinlian"
        android:background="@color/_cccccc" />
</LinearLayout>