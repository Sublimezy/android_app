<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/home_title"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/all_16dp"
        android:background="@color/color_white"
        android:layout_height="@dimen/bashi"
        android:clickable="true">


        <LinearLayout
            android:id="@+id/ll_location"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sanshi"
            android:layout_marginLeft="@dimen/all_zouyou"
            android:layout_marginTop="@dimen/sanshi"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_xyc_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="驾考APP"
                android:textStyle="bold"
                android:textColor="@color/_4f4f4f"
                android:textSize="@dimen/mine_include_text_size" />

            <LinearLayout
                android:id="@+id/ll_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/ba"
                    android:text="在"
                    android:textColor="#4f4f4f"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text_include_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/slide_top_and_left"
                    android:layout_toRightOf="@+id/image_include_location"
                    android:text="哈尔滨"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/side_letter_bar_letter_size" />

                <ImageView
                    android:id="@+id/image_include_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:paddingRight="@dimen/slide_top_and_left_two"
                    android:src="@mipmap/choice_shaixuan" />
            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_common_right_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sanshi"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/sanshi"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/all_zouyou"
            android:paddingRight="@dimen/all_zouyou">
            <ImageView
                android:id="@+id/image_include_one"
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:visibility="invisible"
                android:layout_height="wrap_content"
                android:src="@mipmap/home_kefu" />
            <ImageView
                android:id="@+id/image_include_tijian"
                android:layout_marginRight="10dp"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/tijian" />
            <ImageView
                android:id="@+id/image_include_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/home_kefu" />
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>