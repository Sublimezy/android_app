<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="@dimen/sanshier"
    android:paddingRight="@dimen/sanshier"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_search_title"
        android:text="热门搜索"
        android:layout_marginTop="@dimen/sanshi"
        android:textSize="@dimen/text_ershisp"
        android:textColor="@color/_666"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.xueyiche.zjyk.xueyiche.homepage.view.MyGridView
        android:id="@+id/gv_search_content"
        android:layout_width="match_parent"
        android:numColumns="3"
        android:layout_marginTop="@dimen/shiwu"
        android:verticalSpacing="@dimen/shiwu"
        android:focusableInTouchMode="true"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/sanshi"
        android:background="@color/_cccccc"
        android:layout_height="1px"/>



</LinearLayout>