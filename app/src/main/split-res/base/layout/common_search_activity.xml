<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/all_16dp"
        android:layout_marginLeft="@dimen/all_16dp"
        android:layout_marginRight="@dimen/all_16dp"
        android:layout_marginTop="35dp">

        <RelativeLayout
            android:id="@+id/rl_title_search_jump"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/csh_sousuo_bg"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="3dp"
                android:src="@mipmap/ic_search" />

            <EditText
                android:id="@+id/tv_search_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="3dp"
                android:maxLines="1"
                android:background="@null"
                android:lines="1"
                android:singleLine="true"
                android:hint="搜索车内容"
                android:textColor="#ff666666"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:id="@+id/iv_search_yuyin"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:src="@mipmap/sousuo_yuyin" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/rl_title_search_jump"
                android:background="@mipmap/csh_sousuo_bg_cheng"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:id="@+id/iv_title_search"
                android:text="取消"
                android:textColor="#ffffffff"
                android:textSize="15sp" />
        </RelativeLayout>


    </RelativeLayout>

    <RadioGroup
        android:id="@+id/rg_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sanshiwu"
        android:layout_marginTop="@dimen/ershiwu"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/ll_choice_chanpin"
            android:layout_width="0dp"
            android:layout_height="@dimen/sanshiwu"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="产品"
            android:textColor="@drawable/shaixuan_text_color"
            android:textSize="@dimen/text_eightteensp" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/darkgray" />

        <RadioButton
            android:id="@+id/ll_choice_shop"
            android:layout_width="0dp"
            android:layout_height="@dimen/sanshiwu"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="店铺"
            android:textColor="@drawable/shaixuan_text_color"
            android:textSize="@dimen/text_ershisp" />
    </RadioGroup>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <com.xueyiche.zjyk.xueyiche.homepage.view.AdListView
            android:id="@+id/lv_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/sanshier"
            android:layout_marginRight="@dimen/sanshier"
            android:layout_height="wrap_content">
            <TextView
                android:text="历史记录"
                android:layout_marginTop="@dimen/sanshi"
                android:textSize="@dimen/text_ershisp"
                android:textColor="@color/_666"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_clean_history"
                android:src="@mipmap/search_clean"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/sanshisi"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <com.xueyiche.zjyk.xueyiche.homepage.view.MyGridView
            android:id="@+id/gv_history_content"
            android:layout_width="match_parent"
            android:verticalSpacing="@dimen/shiwu"
            android:numColumns="3"
            android:layout_marginLeft="@dimen/sanshier"
            android:layout_marginRight="@dimen/sanshier"
            android:layout_marginTop="@dimen/shiwu"
            android:focusableInTouchMode="true"
            android:layout_marginBottom="@dimen/slide_top_and_left_two"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    </ScrollView>



</LinearLayout>