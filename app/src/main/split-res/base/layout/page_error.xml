<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" >

        <ImageView
            android:id="@+id/page_iv"
            android:layout_width="@dimen/yibaidp"
            android:layout_height="@dimen/yibaidp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_error_page" />

        <Button
            android:id="@+id/btn_reload"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sanshisi"
            android:layout_below="@id/page_iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/slide_top_and_left_two"
            android:ellipsize="end"
            android:paddingLeft="@dimen/slide_top_and_left_two"
            android:paddingRight="@dimen/slide_top_and_left_two"
            android:singleLine="true"
            android:text="@string/load_error"
            android:textColor="@color/_ff7171"
            android:textSize="@dimen/text_fourteensp" />
    </RelativeLayout>

</FrameLayout>