<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_title"
        android:background="@color/color_white"
        android:layout_marginTop="@dimen/all_16dp"
        android:layout_height="56dp">
        <LinearLayout
            android:id="@+id/ll_exam_back"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_login_back"
                android:padding="10dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/new_driver_school_back_hei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <TextView
            android:id="@+id/tv_login_back"
            android:layout_centerVertical="true"
            style="@style/shop_title_1"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"

            />
        <TextView
            android:id="@+id/tv_wenxintishi"
            android:layout_alignParentRight="true"
            android:text="@string/wenxinTishi"
            android:layout_marginRight="@dimen/all_zouyou"
            android:textSize="@dimen/text_fifteensp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:textColor="@color/colorOrange"
            android:layout_toLeftOf="@+id/iv_caidan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        />
        <ImageView
            android:id="@+id/iv_caidan"
            android:layout_alignParentRight="true"
            android:src="@mipmap/czh_fx"
            android:visibility="gone"
            android:padding="17dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <View
            android:layout_alignParentBottom="true"
            style="@style/_cccline" />
    </RelativeLayout>

</RelativeLayout >