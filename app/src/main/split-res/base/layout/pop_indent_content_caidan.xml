<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingTop="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_caidan_message"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#fff"
                android:textSize="18sp"
                android:drawablePadding="15dp"
                android:gravity="center_horizontal"
                android:text="消息"
                android:drawableTop="@mipmap/indent_content_message"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_caidan_shouye"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#fff"
                android:textSize="18sp"
                android:drawablePadding="15dp"
                android:gravity="center_horizontal"
                android:text="首页"
                android:drawableTop="@mipmap/indent_content_shouye"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_caidan_kefu"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#fff"
                android:textSize="18sp"
                android:drawablePadding="15dp"
                android:gravity="center_horizontal"
                android:text="客服"
                android:drawableTop="@mipmap/indent_content_kefu"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </FrameLayout>


</LinearLayout>