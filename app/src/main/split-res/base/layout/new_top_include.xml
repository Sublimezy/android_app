<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bashi"
        android:background="@color/color_white">

        <ImageView
            android:id="@+id/iv_login_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="17.5dp"
            android:paddingRight="@dimen/ershiwu"
            android:layout_marginTop="@dimen/sishi"
            android:src="@mipmap/driver_school_back_hei" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/shop_title_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/sishiyi"
            android:layout_gravity="center"
            android:text="有证练车"
            android:textColor="@color/_3333"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_top_right_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/all_16dp"
            android:layout_marginTop="@dimen/sishiyi"
            android:text="司机报名"
            android:visibility="gone"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/text_fifteensp"
             />

        <ImageView
            android:id="@+id/tv_top_right_button_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_marginTop="@dimen/sanshiba"
            android:layout_marginRight="@dimen/all_16dp"
            android:src="@mipmap/iv_practice_map"
           />

        <LinearLayout
            android:id="@+id/ll_choose_type"
            android:layout_width="63.5dp"
            android:layout_height="26.5dp"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_marginTop="@dimen/sanshiba"
            android:layout_marginRight="@dimen/all_zouyou"
            android:background="@drawable/carstyle_choose_shape"
            android:gravity="center"
          >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/iv_practice_cartype"
                android:text=" 车型"
                android:textColor="@color/color_white"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_toushu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/shiqi"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/iv_practice_tousu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/yi"
                android:text="投诉"
                android:textColor="#D0021B"
                android:textSize="10sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>