<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFCFC"
    android:orientation="vertical"
    tools:context=".newdriverschool.coach.activity.TrainingDetailsActivity">


    <include layout="@layout/title_bar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@color/colorOrange">


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvOrderState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="报名成功"
                    android:textColor="#ffffffff"
                    android:textSize="19dp"
                    android:textStyle="bold" />

                <com.lihang.ShadowLayout
                    android:layout_width="345dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    app:hl_cornerRadius="10dp"
                    app:hl_shadowColor="#1ca2a2a2"
                    app:hl_shadowLimit="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingHorizontal="14dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/sishi"
                            android:src="@mipmap/baoming_ok_logo" />

                        <TextView
                            android:id="@+id/tvBaoMingOk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/shiwu"
                            android:text="恭喜您，您已经报名成功！"
                            android:textColor="#333333"
                            android:textSize="@dimen/shiwu" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/all_include_height"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:lineSpacingExtra="@dimen/slide_top_and_left"
                                android:text="温馨提示"
                                android:textColor="#333333"
                                android:textSize="@dimen/shiwu" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="@dimen/ershiyi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*"
                                android:textColor="@color/_666"
                                android:textSize="@dimen/shisan" />

                            <TextView
                                android:id="@+id/tvContentOe"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/slide_top_and_left"
                                android:lineSpacingExtra="@dimen/slide_top_and_left"
                                android:text="请您尽快联系客服，完成线下指纹录入，完成交管部门规定信息"
                                android:textColor="@color/_666"
                                android:textSize="@dimen/shisan" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/shiwu"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*"
                                android:textColor="@color/_666"
                                android:textSize="@dimen/shisan" />

                            <TextView
                                android:id="@+id/tvContentTwo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/slide_top_and_left"
                                android:lineSpacingExtra="@dimen/slide_top_and_left"
                                android:text="完成三次模拟考试，合格即可渔业科目一考试"
                                android:textColor="@color/_666"
                                android:textSize="@dimen/shisan" />
                        </LinearLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/sishiliu"
                            android:layout_marginLeft="@dimen/ershi"
                            android:layout_marginRight="@dimen/ershi"
                            android:layout_marginBottom="@dimen/sishiwu"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tvCallKeFu"
                                android:layout_width="100dp"
                                android:text="联系客服"
                                android:gravity="center"
                                android:textColor="@color/colorOrange"
                                android:textSize="@dimen/shiwu"
                                android:background="@drawable/orange_17_xian_shape"
                                android:layout_height="@dimen/sanshisi"/>
                            <TextView
                                android:id="@+id/tvExamPractice"
                                android:layout_width="100dp"
                                android:text="考试练习"
                                android:gravity="center"
                                android:textColor="@color/colorOrange"
                                android:textSize="@dimen/shiwu"
                                android:background="@drawable/orange_17_xian_shape"
                                android:layout_alignParentRight="true"
                                android:layout_height="@dimen/sanshisi"/>
                        </RelativeLayout>
                    </LinearLayout>

                </com.lihang.ShadowLayout>


            </LinearLayout>


        </FrameLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>