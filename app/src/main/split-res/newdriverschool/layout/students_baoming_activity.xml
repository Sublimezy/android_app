<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <include
        android:id="@+id/title_include"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rlBottom"
        android:layout_below="@+id/title_include"
        android:fillViewport="true"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginTop="@dimen/slide_top_and_left_two"
                android:layout_marginRight="@dimen/all_16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_school_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@mipmap/baoming_driver_school" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_caotan_chose"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wushiwu"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/shop_title_40"
                    android:layout_gravity="center_vertical"
                    android:text="报名项目" />

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvChoose"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/wushiwu"
                    android:layout_marginRight="@dimen/all_zouyou"
                    android:gravity="center_vertical"
                    android:hint="请选择"
                    android:lines="1"
                    android:drawablePadding="@dimen/six"
                    android:drawableRight="@mipmap/small_jiantou"
                    android:textColor="@color/_3232"
                    android:textColorHint="@color/_9999"
                    android:textCursorDrawable="@drawable/edittext_cursor"
                    android:textSize="@dimen/shisan"
                    app:mClearEditText_showBottomLine="false"

                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:background="@color/_f2f3f5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/wushiwu"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/shop_title_40"
                    android:layout_gravity="center_vertical"
                    android:text="姓名" />

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.xueyiche.zjyk.xueyiche.mine.view.MClearEditText
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/all_zouyou"
                    android:gravity="right"
                    android:hint="请输入真实姓名"
                    android:lines="1"
                    android:textColor="@color/_3333"
                    android:textColorHint="@color/_9999"
                    android:textCursorDrawable="@drawable/edittext_cursor"
                    android:textSize="@dimen/shisan"
                    app:mClearEditText_showBottomLine="false"

                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:background="@color/_f2f3f5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/wushiwu"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/shop_title_40"
                    android:layout_gravity="center_vertical"
                    android:text="身份证号" />

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.xueyiche.zjyk.xueyiche.mine.view.MClearEditText
                    android:id="@+id/tvIdCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/all_zouyou"
                    android:digits="0123456789Xx"
                    android:gravity="right"
                    android:hint="@string/shenfenzhnghao"
                    android:lines="1"
                    android:maxLength="18"
                    android:textColor="@color/_3333"
                    android:textColorHint="@color/_9999"
                    android:textCursorDrawable="@drawable/edittext_cursor"
                    android:textSize="@dimen/shisan"
                    app:mClearEditText_showBottomLine="false" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:background="@color/_f2f3f5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/wushiwu"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/shop_title_40"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="联系电话" />

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.xueyiche.zjyk.xueyiche.mine.view.MClearEditText
                    android:id="@+id/tvPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/all_zouyou"
                    android:gravity="right"
                    android:hint="请输入报名联系手机号"
                    android:lines="1"
                    android:maxLength="11"
                    android:inputType="phone"
                    android:textColor="@color/_3333"
                    android:textColorHint="@color/_9999"
                    android:textCursorDrawable="@drawable/edittext_cursor"
                    android:textSize="@dimen/shisan"
                    app:mClearEditText_showBottomLine="false" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:background="@color/_f2f3f5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/wushiwu"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/shop_title_40"
                    android:layout_weight="1"
                    android:text="是否有推荐人：" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_ok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableLeft="@drawable/driver_school_select"
                        android:gravity="center_vertical"
                        android:text="  是"
                        android:textColor="#999999"
                        android:textSize="@dimen/shisan" />

                    <RadioButton
                        android:id="@+id/rb_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:button="@null"
                        android:checked="true"
                        android:drawableLeft="@drawable/driver_school_select"
                        android:gravity="center_vertical"
                        android:text="  否"
                        android:textColor="#999999"
                        android:textSize="@dimen/shisan" />

                </RadioGroup>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:background="@color/_f2f3f5" />

            <LinearLayout
                android:id="@+id/llYaoQing"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wushiwu"
                android:layout_marginLeft="@dimen/all_16dp"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/all_16dp"
                android:orientation="horizontal">


                <TextView
                    style="@style/shop_title_40"
                    android:layout_gravity="center_vertical"
                    android:text="邀请人手机号" />

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.xueyiche.zjyk.xueyiche.mine.view.MClearEditText
                    android:id="@+id/tvYaoQingPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/all_zouyou"
                    android:gravity="right"
                    android:hint="请输入邀请人手机号"
                    android:lines="1"
                    android:maxLength="11"
                    android:inputType="phone"
                    android:textColor="@color/_3333"
                    android:textColorHint="@color/_9999"
                    android:textCursorDrawable="@drawable/edittext_cursor"
                    android:textSize="@dimen/shisan"
                    app:mClearEditText_showBottomLine="false" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:background="@color/_f2f3f5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/wushiwu"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/shop_title_40"
                    android:layout_gravity="center_vertical"
                    android:text="居住地址" />

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.xueyiche.zjyk.xueyiche.mine.view.MClearEditText
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/all_zouyou"
                    android:gravity="right"
                    android:hint="请输入家庭住址"
                    android:lines="1"
                    android:textColor="@color/_3333"
                    android:textColorHint="@color/_9999"
                    android:textCursorDrawable="@drawable/edittext_cursor"
                    android:textSize="@dimen/shisan"
                    app:mClearEditText_showBottomLine="false"

                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:background="@color/_f2f3f5" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/all_16dp"
                android:layout_marginRight="@dimen/all_16dp"
                android:orientation="vertical">

                <TextView
                    style="@style/shop_title_40"
                    android:layout_marginTop="@dimen/ershi"
                    android:text="上传身份证照片" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/shiyi"
                    android:layout_marginTop="@dimen/ershiyi"
                    android:layout_marginRight="@dimen/shiyi">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/iv_demo_up_idcard" />

                    <ImageView
                        android:id="@+id/ivUpIdCard"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_alignParentRight="true"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/iv_add_idcard" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginBottom="@dimen/sishi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/shiyi"
                    android:layout_marginTop="@dimen/ershi"
                    android:layout_marginRight="@dimen/shiyi">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/iv_demo_down_idcard" />

                    <ImageView
                        android:id="@+id/ivDownIdCard"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_alignParentRight="true"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/iv_add_idcard" />
                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rlBottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sishijiu"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#f2f3f5" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/shiwu"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥0"
                android:textColor="#ff5000"
                android:textSize="@dimen/shiba" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/jiu"
                android:text="费用合计"
                android:textColor="@color/_9999"
                android:textSize="@dimen/slide_top_and_left_two" />
        </LinearLayout>

        <Button
            android:id="@+id/btBaoMing"
            android:layout_width="@dimen/jiushi"
            android:layout_height="@dimen/sanshi"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/shiwu"
            android:background="@drawable/cheng_yuan_bg"
            android:text="报名"
            android:textColor="@color/color_white"
            android:textSize="@dimen/shiwu" />
    </RelativeLayout>
</RelativeLayout>