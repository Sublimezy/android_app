<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <include
        android:id="@+id/title_include"
        layout="@layout/indent_tijiao_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rlBottom"
        android:layout_below="@+id/title_include"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/all_16dp"
            android:paddingRight="@dimen/all_16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/shiwu"
                android:textColor="@color/_3333"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/ershiyi"
                android:text="学习内容" />
            <TextView
                android:id="@+id/tvStudyContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/shisi"
                android:textColor="@color/_666"
                android:layout_marginTop="@dimen/shiwu"
                android:text="科目二：倒车入库" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/shiwu"
                android:textColor="@color/_3333"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/ershiyi"
                android:text="学习时间" />
            <TextView
                android:id="@+id/tvStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/shisi"
                android:textColor="@color/_666"
                android:layout_marginTop="@dimen/shiwu"
                android:text="开始时间：---" />
            <TextView
                android:id="@+id/tvEndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/shisi"
                android:textColor="@color/_666"
                android:layout_marginTop="@dimen/shiwu"
                android:text="结束时间：---" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/shiwu"
                android:textColor="@color/_3333"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/ershiyi"
                android:text="教练信息" />
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/shisi"
                android:textColor="@color/_666"
                android:layout_marginTop="@dimen/shiwu"
                android:text="姓名：---" />
            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/shisi"
                android:textColor="@color/_666"
                android:gravity="center_vertical"
                android:drawableRight="@mipmap/new_call_phone_student"
                android:layout_marginTop="@dimen/shiwu"
                android:text="电话：---" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/shiwu"
                android:textColor="@color/_3333"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/ershiyi"
                android:text="教学情况" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/shisi"
                    android:textColor="@color/_666"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/shiwu"
                    android:text="教练评价" />
                <TextView
                    android:id="@+id/tvCoachRemark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/shisi"
                    android:textColor="@color/colorOrange"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/shiwu"
                    android:text="极好" />
            </RelativeLayout>
            <TextView
                android:id="@+id/tvCoachRemarkContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/shisi"
                android:textColor="@color/_666"
                android:paddingTop="@dimen/slide_top_and_left_two"
                android:paddingLeft="@dimen/slide_top_and_left_two"
                android:paddingRight="@dimen/slide_top_and_left_two"
                android:lineSpacingExtra="5dp"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/sanshiba"
                android:background="@drawable/gray_yuanjiao_bg_shape"
                android:layout_marginTop="@dimen/shiwu"
                android:text="--" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/shisi"
                    android:textColor="@color/_666"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/shiwu"
                    android:text="学员评价" />
                <TextView
                    android:id="@+id/tvStudentRemark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/shisi"
                    android:textColor="@color/colorOrange"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/shiwu"
                    android:text="极好" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvStudentRemarkContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/shiwu"
                android:background="@drawable/gray_yuanjiao_bg_shape"
                android:gravity="center_vertical"
                android:lineSpacingExtra="5dp"
                android:layout_marginBottom="@dimen/sanshi"
                android:paddingLeft="@dimen/slide_top_and_left_two"
                android:paddingTop="@dimen/slide_top_and_left_two"
                android:paddingRight="@dimen/slide_top_and_left_two"
                android:paddingBottom="@dimen/sanshiba"
                android:text="---"
                android:textColor="@color/_666"
                android:textSize="@dimen/shisi" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>